# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and customize for your environment

# Required: Google Cloud Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Environment Configuration
environment     = "dev"
resource_prefix = "bq-opt"

# BigQuery Dataset Configuration
dataset_name        = "optimization_analytics"
dataset_location    = "US"
dataset_description = "Query optimization analytics dataset with performance monitoring and recommendations"
sample_data_size    = 100  # thousands of records

# Cloud Composer Environment Configuration
composer_environment_name = "query-optimizer"
composer_node_count       = 3
composer_machine_type     = "n1-standard-2"
composer_disk_size        = 100
composer_python_version   = "3"

# Cloud Storage Configuration
bucket_storage_class = "STANDARD"
bucket_lifecycle_age = 90

# Vertex AI Configuration
vertex_ai_region     = "us-central1"
training_machine_type = "n1-standard-4"
training_disk_size    = 100

# Monitoring Configuration
enable_monitoring = true

# Alert notification channels (optional)
# Get channel IDs from: gcloud alpha monitoring channels list
alert_notification_channels = [
  # "projects/your-project-id/notificationChannels/CHANNEL_ID"
]

# Materialized View Configuration
materialized_view_refresh_interval = 60   # minutes
materialized_view_partition_days    = 90

# Security and IAM Configuration
create_service_accounts = true
enable_apis            = true

# Cost Management
enable_cost_controls   = true
table_expiration_days = 7

# Resource Labels
labels = {
  environment    = "dev"
  project        = "query-optimization"
  managed-by     = "terraform"
  cost-center    = "data-engineering"
  team           = "analytics"
}