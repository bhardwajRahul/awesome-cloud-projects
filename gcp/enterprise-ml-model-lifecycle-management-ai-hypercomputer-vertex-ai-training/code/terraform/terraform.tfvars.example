# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your environment

# Required Variables
project_id = "your-gcp-project-id"  # Replace with your actual project ID
region     = "us-central1"          # Choose your preferred region
zone       = "us-central1-a"        # Choose your preferred zone

# Resource Configuration
resource_prefix = "my-ml-env"       # Prefix for all resource names
environment     = "dev"             # Environment: dev, staging, or prod

# AI Hypercomputer Configuration
enable_tpu_training     = true      # Enable TPU resources for training
enable_gpu_training     = true      # Enable GPU resources for training
tpu_accelerator_type    = "v5litepod-4"     # TPU type
gpu_machine_type        = "a3-highgpu-8g"   # GPU machine type
gpu_accelerator_type    = "nvidia-h100-80gb" # GPU accelerator type
gpu_accelerator_count   = 8         # Number of GPU accelerators

# Cloud Workstations Configuration
workstation_machine_type = "n1-standard-8"  # Machine type for workstations
workstation_disk_size    = 200              # Disk size in GB
workstation_disk_type    = "pd-ssd"         # Disk type

# Storage Configuration
storage_class                = "STANDARD"   # Storage class for ML artifacts
enable_storage_versioning   = true          # Enable bucket versioning
storage_lifecycle_age_days   = 30           # Days before transitioning to cheaper storage

# BigQuery Configuration
bigquery_dataset_location     = "US"        # BigQuery dataset location
bigquery_table_expiration_days = 90         # Table expiration in days

# Vertex AI Configuration
vertex_ai_region = "us-central1"             # Vertex AI region

# Artifact Registry Configuration
artifact_registry_format = "DOCKER"         # Repository format

# Networking Configuration
enable_private_google_access = true         # Enable private Google access
enable_flow_logs            = true          # Enable VPC flow logs

# Security Configuration
enable_binary_authorization    = false      # Enable Binary Authorization (recommended for prod)
enable_vulnerability_scanning  = true       # Enable vulnerability scanning

# Monitoring Configuration
enable_monitoring    = true                 # Enable Cloud Monitoring
enable_logging       = true                 # Enable Cloud Logging
log_retention_days   = 30                   # Log retention period

# Cost Management Configuration
enable_budget_alerts     = true             # Enable budget alerts
budget_amount           = 1000              # Budget amount in USD
billing_account_name    = ""                # Your billing account name (leave empty to skip)
budget_alert_thresholds = [50, 75, 90, 100] # Alert thresholds as percentages

# Service Account Roles (customize as needed)
workstation_service_account_roles = [
  "roles/storage.objectAdmin",
  "roles/bigquery.dataEditor",
  "roles/aiplatform.user",
  "roles/artifactregistry.reader"
]

training_service_account_roles = [
  "roles/storage.objectAdmin",
  "roles/bigquery.dataEditor",
  "roles/aiplatform.user",
  "roles/artifactregistry.reader",
  "roles/compute.instanceAdmin.v1"
]

# Resource Labels (customize as needed)
labels = {
  "project"     = "enterprise-ml-lifecycle"
  "team"        = "data-science"
  "environment" = "development"
  "managed-by"  = "terraform"
  "cost-center" = "ml-engineering"
}

# Feature Flags
enable_experimental_features  = false      # Enable experimental features
enable_multi_region_deployment = false     # Enable multi-region deployment
enable_disaster_recovery      = false      # Enable disaster recovery

