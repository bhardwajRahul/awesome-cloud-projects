# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your environment
# terraform.tfvars is gitignored to prevent committing sensitive information

# Required: Google Cloud Project Configuration
project_id = "your-gcp-project-id"

# Optional: Regional Configuration (default: us-central1)
region = "us-central1"
zone   = "us-central1-a"

# Optional: Environment and Naming Configuration
environment     = "dev"  # Options: dev, staging, prod
resource_prefix = "multicloud-discovery"

# Optional: Enable APIs automatically (recommended for new projects)
enable_apis = true

# Optional: Cloud Scheduler Configuration
scheduler_frequency = "0 */6 * * *"  # Every 6 hours (cron format)
scheduler_timezone  = "UTC"

# Optional: Cloud Function Configuration
function_memory  = 512  # Options: 128, 256, 512, 1024, 2048, 4096, 8192 MB
function_timeout = 300  # Timeout in seconds (60-540)

# Optional: Pub/Sub Configuration
pubsub_message_retention = "604800s"  # 7 days in seconds
pubsub_ack_deadline     = 300        # Acknowledgment deadline in seconds

# Optional: Cloud Storage Configuration
storage_class                       = "STANDARD"  # Options: STANDARD, NEARLINE, COLDLINE, ARCHIVE
enable_versioning                  = true
enable_uniform_bucket_level_access = true

# Optional: Monitoring Configuration
enable_monitoring = true

# Optional: Alert Notification Channels (must be created separately)
# Example notification channel names that should exist in your project
alert_notification_channels = [
  # "projects/your-project-id/notificationChannels/your-email-channel-id",
  # "projects/your-project-id/notificationChannels/your-slack-channel-id"
]

# Optional: Resource Labels
labels = {
  project      = "multi-cloud-discovery"
  managed-by   = "terraform"
  component    = "location-finder"
  owner        = "infrastructure-team"
  cost-center  = "engineering"
  environment  = "development"
}

# Example configurations for different environments:

# Development Environment
# environment     = "dev"
# function_memory = 256
# enable_monitoring = false
# storage_class   = "STANDARD"

# Staging Environment  
# environment     = "staging"
# function_memory = 512
# enable_monitoring = true
# storage_class   = "STANDARD"

# Production Environment
# environment     = "prod"
# function_memory = 1024
# enable_monitoring = true
# storage_class   = "STANDARD"
# scheduler_frequency = "0 */4 * * *"  # Every 4 hours for production

# Cost Optimization Settings
# storage_class     = "NEARLINE"     # For less frequently accessed data
# function_memory   = 256            # Lower memory for cost savings
# scheduler_frequency = "0 */12 * * *" # Less frequent updates

# High Performance Settings
# function_memory   = 2048           # More memory for faster processing
# scheduler_frequency = "0 */2 * * *" # More frequent updates
# storage_class     = "STANDARD"     # Fastest access times