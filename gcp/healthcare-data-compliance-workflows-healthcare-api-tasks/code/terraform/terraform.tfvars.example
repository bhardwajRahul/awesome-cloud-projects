# Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Resource Naming
resource_prefix = "healthcare-compliance"
environment     = "dev"  # Options: dev, staging, prod

# Healthcare API Configuration
healthcare_dataset_location        = "us-central1"
fhir_version                      = "R4"  # Options: DSTU2, STU3, R4
enable_update_create              = true
disable_referential_integrity     = true

# Cloud Tasks Configuration
task_queue_max_dispatches_per_second   = 10
task_queue_max_concurrent_dispatches   = 5
task_queue_max_attempts                = 3
task_queue_min_backoff                 = "1s"
task_queue_max_backoff                 = "300s"

# Cloud Functions Configuration
function_runtime       = "python39"
function_memory        = 512
function_timeout       = 540
function_max_instances = 10

# Storage Configuration
storage_class                    = "STANDARD"  # Options: STANDARD, NEARLINE, COLDLINE, ARCHIVE
storage_lifecycle_age_nearline   = 30
storage_lifecycle_age_coldline   = 365

# Pub/Sub Configuration
pubsub_message_retention_duration = "604800s"  # 7 days
pubsub_ack_deadline               = "600s"     # 10 minutes

# BigQuery Configuration
bigquery_dataset_location     = "us-central1"
bigquery_dataset_description  = "Healthcare compliance analytics dataset"
bigquery_table_deletion_protection = true

# Monitoring Configuration
enable_monitoring_alerts = true
notification_email      = "compliance@example.com"
alert_threshold_value   = 3
alert_duration         = "60s"

# Security Configuration
enable_uniform_bucket_level_access = true
enable_audit_logging               = true
enable_encryption                  = true

# Labels and Tags
labels = {
  managed_by    = "terraform"
  project_type  = "healthcare-compliance"
  compliance    = "hipaa"
  environment   = "dev"
  team          = "healthcare-it"
  cost_center   = "healthcare-ops"
}