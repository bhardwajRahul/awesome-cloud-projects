# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your deployment

# Required Variables
project_id = "your-gcp-project-id"

# Optional Variables with Recommended Values
region = "us-central1"
zone   = "us-central1-a"

# API Configuration
api_name    = "secure-api"
environment = "demo"

# Compute Instance Configuration
backend_machine_type = "e2-medium"
esp_machine_type     = "e2-medium"

# Security Configuration
rate_limit_threshold = 100
ban_duration_sec     = 300
blocked_countries    = ["CN", "RU"]

# SSL/TLS Configuration (Advanced)
# Uncomment and configure these for production HTTPS setup
# enable_ssl    = true
# custom_domain = "api.yourdomain.com"

# Network Configuration
backend_port       = 8080
health_check_path  = "/health"

# Feature Toggles
enable_monitoring      = true
enable_geo_restriction = true
enable_owasp_protection = true

# Resource Labels for Management and Billing
labels = {
  project     = "secure-api-gateway"
  managed-by  = "terraform"
  environment = "demo"
  team        = "platform"
  cost-center = "engineering"
}