# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment

#------------------------------------------------------------------------------
# Required Variables
#------------------------------------------------------------------------------

# Your GCP Project ID
project_id = "your-project-id-here"

#------------------------------------------------------------------------------
# Basic Configuration
#------------------------------------------------------------------------------

# GCP region for resource deployment
region = "us-central1"

# Environment identifier for resource labeling
environment = "production"

#------------------------------------------------------------------------------
# Network Connectivity Center Configuration
#------------------------------------------------------------------------------

# Name for the Network Connectivity Center hub
ncc_hub_name = "multi-cloud-hub"

#------------------------------------------------------------------------------
# VPC Network Configuration
#------------------------------------------------------------------------------

# Base names for VPC networks (random suffix will be added)
hub_vpc_name    = "hub-vpc"
prod_vpc_name   = "prod-vpc"
dev_vpc_name    = "dev-vpc"
shared_vpc_name = "shared-vpc"

# Subnet CIDR ranges for each VPC
hub_subnet_cidr    = "10.1.0.0/24"
prod_subnet_cidr   = "192.168.1.0/24"
dev_subnet_cidr    = "192.168.2.0/24"
shared_subnet_cidr = "192.168.3.0/24"

#------------------------------------------------------------------------------
# BGP Configuration
#------------------------------------------------------------------------------

# BGP ASN numbers for each router (must be private ASNs)
hub_bgp_asn            = 64512
prod_bgp_asn           = 64513
dev_bgp_asn            = 64514
shared_bgp_asn         = 64515
external_cloud_bgp_asn = 65001

#------------------------------------------------------------------------------
# VPN Configuration for External Cloud Connectivity
#------------------------------------------------------------------------------

# Public IP address of external cloud provider's VPN gateway
# Replace with actual IP from your AWS/Azure/other cloud VPN gateway
external_cloud_vpn_ip = "203.0.113.10"

# Shared secret for VPN tunnel authentication
# Use a strong, unique password for production environments
vpn_shared_secret = "your-secure-shared-secret-here"

# BGP peer IP address for external cloud (link-local address)
external_cloud_bgp_peer_ip = "169.254.1.2"

# IP range for VPN tunnel interface (must be /30 link-local)
vpn_tunnel_ip_range = "169.254.1.1/30"

# Enable site-to-site data transfer for hybrid spoke
enable_site_to_site_data_transfer = false

#------------------------------------------------------------------------------
# Firewall Security Configuration
#------------------------------------------------------------------------------

# External network CIDR ranges allowed for VPN access
# Add your on-premises and external cloud network ranges
external_network_cidrs = [
  "10.0.0.0/8",      # On-premises networks
  "172.16.0.0/12",   # External cloud provider networks
  # "203.0.113.0/24" # Additional external networks
]

# Additional internal CIDR ranges for cross-VPC communication
allowed_internal_cidrs = [
  # Add any additional internal network ranges that need access
  # "10.100.0.0/16"
]

#------------------------------------------------------------------------------
# Cloud NAT Configuration
#------------------------------------------------------------------------------

# Enable comprehensive logging for Cloud NAT gateways
enable_nat_logging = true

# Log filter level for Cloud NAT
# Options: "ERRORS_ONLY", "TRANSLATIONS_ONLY", "ALL"
nat_log_filter = "ALL"

#------------------------------------------------------------------------------
# Resource Labeling
#------------------------------------------------------------------------------

# Additional labels to apply to all resources
resource_labels = {
  cost-center = "networking"
  team        = "platform"
  purpose     = "multi-cloud-connectivity"
}

#------------------------------------------------------------------------------
# AWS-Specific Configuration Examples
#------------------------------------------------------------------------------

# If connecting to AWS, use these example values:
# external_cloud_vpn_ip      = "52.23.45.67"     # AWS VPN Gateway public IP
# external_cloud_bgp_asn     = 65000             # AWS BGP ASN
# external_cloud_bgp_peer_ip = "169.254.21.2"    # AWS BGP peer IP
# vpn_tunnel_ip_range        = "169.254.21.1/30" # AWS tunnel IP range

#------------------------------------------------------------------------------
# Azure-Specific Configuration Examples  
#------------------------------------------------------------------------------

# If connecting to Azure, use these example values:
# external_cloud_vpn_ip      = "20.45.67.89"     # Azure VPN Gateway public IP
# external_cloud_bgp_asn     = 65515             # Azure BGP ASN
# external_cloud_bgp_peer_ip = "169.254.22.2"    # Azure BGP peer IP
# vpn_tunnel_ip_range        = "169.254.22.1/30" # Azure tunnel IP range

#------------------------------------------------------------------------------
# Development Environment Example
#------------------------------------------------------------------------------

# For development/testing environments, you might use:
# environment = "development"
# region      = "us-west2"
# 
