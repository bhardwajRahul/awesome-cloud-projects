# Infrastructure Anomaly Detection with Cloud Monitoring and Gemini
# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

# Required: Your Google Cloud project ID
project_id = "your-project-id-here"

# Optional: Google Cloud region for resources
# region = "us-central1"

# Optional: Google Cloud zone for compute resources
# zone = "us-central1-a"

# Optional: Prefix for resource names
# resource_prefix = "anomaly-detection"

# Optional: Enable test infrastructure (VM instance)
# enable_test_infrastructure = true

# Optional: Machine type for test instance
# test_instance_machine_type = "e2-medium"

# Optional: Cloud Function configuration
# cloud_function_memory = 1024
# cloud_function_timeout = 540
# cloud_function_max_instances = 10

# Optional: Pub/Sub configuration
# pubsub_message_retention_duration = "604800s"
# pubsub_ack_deadline = 600

# Optional: Monitoring thresholds
# cpu_threshold = 0.8

# Required: Email for notifications
notification_email = "your-email@example.com"

# Optional: Gemini model for analysis
# gemini_model = "gemini-2.0-flash-exp"

# Optional: Install Ops Agent on test instances
# enable_ops_agent = true

# Optional: Resource labels
# labels = {
#   project     = "infrastructure-anomaly-detection"
#   environment = "demo"
#   managed-by  = "terraform"
#   team        = "platform-engineering"
# }