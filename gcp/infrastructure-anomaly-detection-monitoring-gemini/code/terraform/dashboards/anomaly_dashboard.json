{
  "displayName": "AI-Powered Infrastructure Anomaly Detection",
  "mosaicLayout": {
    "tiles": [
      {
        "width": 6,
        "height": 4,
        "xPos": 0,
        "yPos": 0,
        "widget": {
          "title": "Anomaly Detection Scores",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"cloud_function\" AND metric.type=\"logging.googleapis.com/user/${anomaly_metric_name}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "Anomaly Score"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Anomaly Probability (%)",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 0,
        "widget": {
          "title": "Cloud Function Execution Count",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"cloud_function\" AND resource.labels.function_name=\"${function_name}\" AND metric.type=\"cloudfunctions.googleapis.com/function/execution_count\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "Executions/sec"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Executions per Second",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 0,
        "yPos": 4,
        "widget": {
          "title": "CPU Utilization${test_instance_name != "" ? " - Test Instance" : ""}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"gce_instance\"${test_instance_name != "" ? " AND resource.labels.instance_name=\"${test_instance_name}\"" : ""} AND metric.type=\"compute.googleapis.com/instance/cpu/utilization\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "CPU Utilization"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "CPU Utilization (%)",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            },
            "thresholds": [
              {
                "value": 0.8,
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "High CPU"
              },
              {
                "value": 0.9,
                "color": "RED",
                "direction": "ABOVE",
                "label": "Critical CPU"
              }
            ]
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 4,
        "widget": {
          "title": "Memory Utilization${test_instance_name != "" ? " - Test Instance" : ""}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"gce_instance\"${test_instance_name != "" ? " AND resource.labels.instance_name=\"${test_instance_name}\"" : ""} AND metric.type=\"compute.googleapis.com/instance/memory/utilization\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "Memory Utilization"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Memory Utilization (%)",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            },
            "thresholds": [
              {
                "value": 0.85,
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "High Memory"
              },
              {
                "value": 0.95,
                "color": "RED",
                "direction": "ABOVE",
                "label": "Critical Memory"
              }
            ]
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 0,
        "yPos": 8,
        "widget": {
          "title": "Pub/Sub Message Count",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"pubsub_topic\" AND metric.type=\"pubsub.googleapis.com/topic/send_message_operation_count\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "Messages/sec"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Messages per Second",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 8,
        "widget": {
          "title": "Function Execution Duration",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "resource.type=\"cloud_function\" AND resource.labels.function_name=\"${function_name}\" AND metric.type=\"cloudfunctions.googleapis.com/function/execution_times\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "Avg Duration"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Duration (ms)",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "width": 12,
        "height": 3,
        "xPos": 0,
        "yPos": 12,
        "widget": {
          "title": "Recent Anomaly Alerts",
          "logsPanel": {
            "filter": "resource.type=\"cloud_function\" AND resource.labels.function_name=\"${function_name}\" AND (textPayload:\"ALERT\" OR textPayload:\"anomaly detected\")",
            "resourceNames": [
              "projects/${project_id}"
            ]
          }
        }
      }
    ]
  },
  "labels": {
    "environment": "anomaly-detection",
    "managed-by": "terraform",
    "dashboard-type": "infrastructure-monitoring"
  }
}