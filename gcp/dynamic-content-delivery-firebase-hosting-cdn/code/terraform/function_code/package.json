{
  "name": "dynamic-content-delivery-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for dynamic content delivery with Firebase Hosting and CDN integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha test/**/*.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required'",
    "deploy": "gcloud functions deploy"
  },
  "engines": {
    "node": "${runtime == "nodejs18" ? "18" : "20"}"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/monitoring": "^4.0.0",
    "@google-cloud/logging": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "google-cloud-functions",
    "firebase-hosting",
    "cdn",
    "dynamic-content",
    "serverless",
    "content-delivery"
  ],
  "author": "Cloud Recipe Generator",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/dynamic-content-delivery"
  },
  "bugs": {
    "url": "https://github.com/example/dynamic-content-delivery/issues"
  },
  "homepage": "https://github.com/example/dynamic-content-delivery#readme",
  "eslintConfig": {
    "extends": ["eslint:recommended", "google"],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "max-len": ["error", {"code": 120}]
    }
  }
}