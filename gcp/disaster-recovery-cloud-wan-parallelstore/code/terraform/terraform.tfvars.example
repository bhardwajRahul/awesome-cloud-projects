# Example Terraform variables file for GCP Disaster Recovery solution
# Copy this file to terraform.tfvars and customize the values for your environment

# Project Configuration
project_id   = "your-gcp-project-id"
environment  = "prod"

# Regional Configuration
primary_region   = "us-central1"
primary_zone     = "us-central1-a"
secondary_region = "us-east1"
secondary_zone   = "us-east1-a"

# Network Configuration
primary_vpc_cidr   = "10.1.0.0/16"
secondary_vpc_cidr = "10.2.0.0/16"
enable_cloud_nat   = true

# Parallelstore Configuration
parallelstore_capacity_gib           = 12000
parallelstore_deployment_type        = "PERSISTENT"
parallelstore_file_stripe_level      = "FILE_STRIPE_LEVEL_BALANCED"
parallelstore_directory_stripe_level = "DIRECTORY_STRIPE_LEVEL_BALANCED"

# VPN Configuration (leave empty for auto-generated)
vpn_shared_secret   = ""
bgp_asn_primary     = 64512
bgp_asn_secondary   = 64513

# Cloud Functions Configuration
health_monitor_memory       = 512
health_monitor_timeout      = 300
replication_function_memory = 1024
replication_function_timeout = 900

# Monitoring Configuration
enable_detailed_monitoring        = true
replication_lag_threshold_minutes = 15
alert_notification_channels       = []

# Scheduling Configuration
replication_schedule = "*/15 * * * *"  # Every 15 minutes

# Resource Naming
resource_prefix = "hpc-dr"
resource_suffix = ""  # Leave empty for auto-generated

# Common Labels
common_labels = {
  project     = "disaster-recovery"
  managed-by  = "terraform"
  environment = "production"
  team        = "infrastructure"
  cost-center = "engineering"
}

# Security and Compliance
enable_deletion_protection = true
enable_audit_logging      = true

# Cost Optimization
enable_preemptible_instances = false