# Example Terraform variables for GCP Podcast Content Generation
# Copy this file to terraform.tfvars and customize for your environment

# Required Variables
project_id = "your-gcp-project-id"

# Regional Configuration
region = "us-central1"
zone   = "us-central1-a"

# Environment and Naming
environment        = "dev"
bucket_name_prefix = "podcast-content"
function_name      = "podcast-processor"
service_account_name = "podcast-generator"

# Function Configuration
function_memory      = 1024    # Memory allocation in MB (128, 256, 512, 1024, 2048, 4096, 8192)
function_timeout     = 540     # Timeout in seconds (max 3600)
function_min_instances = 0     # Minimum instances (0 for serverless)
function_max_instances = 100   # Maximum instances

# Storage Configuration
bucket_location      = "US"         # Storage location (US, EU, ASIA, or specific region)
bucket_storage_class = "STANDARD"   # Storage class (STANDARD, NEARLINE, COLDLINE, ARCHIVE)
enable_versioning    = true         # Enable object versioning
lifecycle_age_days   = 30           # Days before object deletion

# Monitoring and Logging
enable_monitoring = true
enable_logging   = true

# Optional: Custom Function Source Bucket
# function_source_bucket = "your-existing-bucket-for-function-source"

# Optional: VPC Configuration
# enable_vpc_connector = false
# vpc_connector_name   = "your-vpc-connector"

# Resource Labels
labels = {
  purpose     = "podcast-generation"
  managed-by  = "terraform"
  component   = "ai-content-creation"
  environment = "dev"
  team        = "content-team"
}

# API Services to Enable
api_services = [
  "texttospeech.googleapis.com",
  "language.googleapis.com",
  "storage.googleapis.com",
  "cloudfunctions.googleapis.com",
  "cloudbuild.googleapis.com",
  "monitoring.googleapis.com",
  "logging.googleapis.com"
]