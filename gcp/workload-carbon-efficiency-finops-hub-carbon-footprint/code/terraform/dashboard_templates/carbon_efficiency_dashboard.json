{
  "displayName": "Carbon Efficiency & FinOps Hub Dashboard",
  "mosaicLayout": {
    "tiles": [
      {
        "width": 6,
        "height": 4,
        "widget": {
          "title": "Carbon Efficiency Score",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"custom.googleapis.com/carbon_efficiency/score\" resource.type=\"global\"",
                "aggregation": {
                  "alignmentPeriod": "300s",
                  "perSeriesAligner": "ALIGN_MEAN",
                  "crossSeriesReducer": "REDUCE_MEAN"
                }
              }
            },
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            },
            "gaugeView": {
              "lowerBound": 0.0,
              "upperBound": 100.0
            },
            "thresholds": [
              {
                "value": 80.0,
                "color": "GREEN",
                "direction": "ABOVE",
                "label": "Excellent"
              },
              {
                "value": 70.0,
                "color": "YELLOW",
                "direction": "ABOVE",
                "label": "Good"
              },
              {
                "value": 50.0,
                "color": "RED",
                "direction": "BELOW",
                "label": "Critical"
              }
            ]
          }
        }
      },
      {
        "xPos": 6,
        "width": 6,
        "height": 4,
        "widget": {
          "title": "Compute Instance CPU Utilization",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"compute.googleapis.com/instance/cpu/utilization\" resource.type=\"gce_instance\"",
                    "aggregation": {
                      "alignmentPeriod": "300s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN",
                      "groupByFields": ["resource.label.instance_name"]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1",
                "legendTemplate": "${resource.instance_name}"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "CPU Utilization",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "yPos": 4,
        "width": 12,
        "height": 4,
        "widget": {
          "title": "Carbon Impact Reduction Trends",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"custom.googleapis.com/optimization/carbon_impact\" resource.type=\"global\"",
                    "aggregation": {
                      "alignmentPeriod": "3600s",
                      "perSeriesAligner": "ALIGN_SUM",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["metric.label.optimization_type"]
                    }
                  }
                },
                "plotType": "STACKED_AREA",
                "targetAxis": "Y1",
                "legendTemplate": "${metric.optimization_type}"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Carbon Impact Reduction (kg CO2e)",
              "scale": "LINEAR"
            },
            "chartOptions": {
              "mode": "COLOR"
            }
          }
        }
      },
      {
        "yPos": 8,
        "width": 6,
        "height": 4,
        "widget": {
          "title": "Active Assist Recommendations",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"recommender.googleapis.com/recommendations/count\" resource.type=\"global\"",
                "aggregation": {
                  "alignmentPeriod": "3600s",
                  "perSeriesAligner": "ALIGN_MEAN",
                  "crossSeriesReducer": "REDUCE_SUM",
                  "groupByFields": ["metric.label.recommender_type"]
                }
              }
            },
            "sparkChartView": {
              "sparkChartType": "SPARK_BAR"
            }
          }
        }
      },
      {
        "xPos": 6,
        "yPos": 8,
        "width": 6,
        "height": 4,
        "widget": {
          "title": "Resource Utilization Summary",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"custom.googleapis.com/carbon_efficiency/utilization\" resource.type=\"global\"",
                    "aggregation": {
                      "alignmentPeriod": "300s",
                      "perSeriesAligner": "ALIGN_MEAN"
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Average Utilization (%)",
              "scale": "LINEAR"
            },
            "thresholds": [
              {
                "value": 80.0,
                "color": "GREEN",
                "direction": "ABOVE",
                "label": "Optimal"
              },
              {
                "value": 20.0,
                "color": "RED",
                "direction": "BELOW",
                "label": "Underutilized"
              }
            ]
          }
        }
      },
      {
        "yPos": 12,
        "width": 8,
        "height": 4,
        "widget": {
          "title": "Workflow Execution Status",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"custom.googleapis.com/workflows/carbon_efficiency_analysis\" resource.type=\"global\"",
                    "aggregation": {
                      "alignmentPeriod": "3600s",
                      "perSeriesAligner": "ALIGN_COUNT",
                      "crossSeriesReducer": "REDUCE_COUNT",
                      "groupByFields": ["metric.label.workflow_status"]
                    }
                  }
                },
                "plotType": "STACKED_BAR",
                "targetAxis": "Y1",
                "legendTemplate": "${metric.workflow_status}"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "Execution Count",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "xPos": 8,
        "yPos": 12,
        "width": 4,
        "height": 4,
        "widget": {
          "title": "Cost Optimization Opportunities",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"billing.googleapis.com/billing/total_cost\" resource.type=\"global\"",
                "aggregation": {
                  "alignmentPeriod": "86400s",
                  "perSeriesAligner": "ALIGN_SUM",
                  "crossSeriesReducer": "REDUCE_SUM"
                }
              }
            },
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            }
          }
        }
      }
    ]
  },
  "labels": {
    "solution": "carbon-efficiency",
    "finops-hub": "integrated",
    "managed-by": "terraform"
  }
}