# Example Terraform Variables for Code Review Automation
# Copy this file to terraform.tfvars and customize for your deployment

# Required: Google Cloud Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Environment and Naming
environment       = "dev"
repository_name   = "intelligent-review-system"
function_name     = "code-review-trigger"
agent_name        = "code-review-agent"

# AI Configuration
vertex_ai_model = "gemini-2.0-flash-thinking"

# Function Configuration
function_timeout = 540
function_memory  = "512Mi"

# Feature Toggles
enable_firebase_studio   = true
enable_monitoring       = true
enable_security_scanning = true

# Performance Settings
max_concurrent_reviews = 5

# Notification Configuration (optional)
notification_channels = [
  "devops-team@yourcompany.com",
  "security-team@yourcompany.com"
]

# Code Analysis Configuration
code_analysis_config = {
  temperature           = 0.3
  max_tokens           = 4096
  analysis_depth       = "comprehensive"
  include_suggestions  = true
  check_security       = true
  check_performance    = true
  check_best_practices = true
}

# Supported Programming Languages
supported_languages = [
  "javascript",
  "typescript", 
  "python",
  "java",
  "go",
  "rust"
]

# Resource Labels
labels = {
  purpose     = "code-review-automation"
  component   = "ai-development"
  managed-by  = "terraform"
  team        = "devops"
  environment = "development"
}