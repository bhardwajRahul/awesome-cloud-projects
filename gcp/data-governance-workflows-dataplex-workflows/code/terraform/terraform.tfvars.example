# Example Terraform Variables for Data Governance Workflows Infrastructure
# Copy this file to terraform.tfvars and customize the values for your environment

# Required Variables
project_id = "your-project-id"
region     = "us-central1"
environment = "dev"

# Organization Configuration
organization_domain = "your-company.com"

# Data Governance Configuration
quality_threshold = 0.8
data_retention_days = 90
dlp_scan_frequency = 604800  # Weekly (7 days in seconds)

# DLP Configuration
dlp_info_types = [
  "EMAIL_ADDRESS",
  "PHONE_NUMBER",
  "CREDIT_CARD_NUMBER",
  "US_SOCIAL_SECURITY_NUMBER",
  "PERSON_NAME"
]
dlp_min_likelihood = "POSSIBLE"
dlp_max_findings = 1000

# Cloud Function Configuration
function_memory_mb = 512
function_timeout = 300

# Dataplex Configuration
enable_data_discovery = true
discovery_schedule_raw = "0 */6 * * *"      # Every 6 hours
discovery_schedule_curated = "0 */12 * * *"  # Every 12 hours

# BigQuery Configuration
bigquery_location = null  # Uses region if not specified
enable_bigquery_clustering = true
enable_bigquery_partitioning = true
bigquery_table_expiration_days = 0  # No expiration

# Cloud Storage Configuration
enable_versioning = true
enable_uniform_bucket_access = true
storage_class = "STANDARD"
lifecycle_nearline_days = 30
lifecycle_coldline_days = 365

# Security Configuration
enable_encryption = true

# Monitoring Configuration
monitoring_alert_duration = "300s"
alert_auto_close = "1800s"
notification_channels = []  # Add notification channel IDs

# Optional: Dataproc Metastore (if you have one)
# metastore_service_id = "projects/your-project/locations/us-central1/services/your-metastore"

# Testing Configuration
create_sample_data = true

# Resource Labels
labels = {
  team         = "data-engineering"
  cost_center  = "analytics"
  owner        = "data-team"
  project_type = "governance"
}

