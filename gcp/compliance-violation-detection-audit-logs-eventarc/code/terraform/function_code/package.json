{
  "name": "compliance-detector",
  "version": "1.0.0",
  "description": "Google Cloud Function for detecting compliance violations in audit logs",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=analyzeAuditLog --signature-type=cloudevent",
    "test": "npm run unit-test",
    "unit-test": "mocha test/*.test.js --timeout 10000",
    "system-test": "mocha test/system/*.test.js --timeout 30000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "compliance",
    "security",
    "audit-logs",
    "monitoring",
    "gcp",
    "cloud-functions",
    "eventarc"
  ],
  "author": "Cloud Security Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/pubsub": "^4.1.0",
    "@google-cloud/bigquery": "^7.3.0",
    "@google-cloud/monitoring": "^4.1.0",
    "@google-cloud/logging": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "node": true,
      "es2022": true
    },
    "rules": {
      "max-len": ["error", { "code": 120 }],
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": "off",
      "require-jsdoc": "off",
      "valid-jsdoc": "off"
    }
  }
}