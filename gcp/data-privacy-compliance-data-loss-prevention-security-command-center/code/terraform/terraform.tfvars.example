# Example Terraform variables for GCP Data Privacy Compliance Infrastructure
# Copy this file to terraform.tfvars and customize for your environment

# Required: Your Google Cloud Project ID
project_id = "your-gcp-project-id"

# Required: Primary region for resources
region = "us-central1"

# Optional: Availability zone (will default to {region}-a if not specified)
zone = "us-central1-a"

# Environment configuration
environment = "prod"  # Options: dev, staging, prod

# Resource naming
resource_prefix = "privacy-compliance"

# Email for monitoring alerts (leave empty to disable email notifications)
notification_email = "security-team@your-company.com"

# DLP Configuration
dlp_scan_schedule            = "0 2 * * *"  # Daily at 2 AM UTC (cron format)
dlp_min_likelihood          = "POSSIBLE"    # VERY_UNLIKELY, UNLIKELY, POSSIBLE, LIKELY, VERY_LIKELY
dlp_max_findings_per_request = 100          # 1-3000

# Cloud Function Configuration
function_memory  = "512Mi"  # 128Mi, 256Mi, 512Mi, 1Gi, 2Gi, 4Gi, 8Gi, 16Gi, 32Gi
function_timeout = 540      # seconds (1-3600)

# Pub/Sub Configuration
pubsub_message_retention_duration = "604800s"  # 7 days in seconds
pubsub_ack_deadline               = 600        # seconds (10-600)

# Storage Configuration
storage_lifecycle_age_days = 90  # Days before automatic deletion

# Monitoring Configuration
monitoring_alert_threshold = 5     # Number of high-severity findings to trigger alert
enable_monitoring_alerts   = true
enable_security_command_center = true
enable_audit_logging       = true

# Resource labels (applied to all resources)
labels = {
  managed-by   = "terraform"
  purpose      = "data-privacy-compliance"
  team         = "security"
  environment  = "production"
  cost-center  = "security-ops"
  compliance   = "gdpr-ccpa-hipaa"
}

# Sensitive information types to detect (customize based on your needs)
sensitive_info_types = [
  "US_SOCIAL_SECURITY_NUMBER",
  "CREDIT_CARD_NUMBER",
  "EMAIL_ADDRESS",
  "PHONE_NUMBER",
  "PERSON_NAME",
  "US_HEALTHCARE_NPI",
  "DATE_OF_BIRTH"
  # Add more types as needed:
  # "US_PASSPORT",
  # "US_DRIVERS_LICENSE_NUMBER",
  # "IBAN_CODE",
  # "IP_ADDRESS",
  # "MAC_ADDRESS"
]