# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

# Project Configuration
project_id         = "your-gcp-project-id"
region            = "us-central1"
zone              = "us-central1-a"

# Billing Configuration
billing_account_id = "XXXXXX-XXXXXX-XXXXXX"  # Your billing account ID

# Optional: Specific projects to monitor (leave empty to monitor all projects in billing account)
target_project_ids = [
  # "project-1",
  # "project-2",
  # "project-3"
]

# BigQuery Configuration
dataset_location = "US"  # Options: US, EU, or specific regions

# Cloud Storage Configuration
storage_class = "STANDARD"  # Options: STANDARD, NEARLINE, COLDLINE, ARCHIVE

# Cloud Functions Configuration
function_runtime = "python39"  # Options: python39, python310, python311
function_memory  = "512MB"     # Options: 128MB, 256MB, 512MB, 1024MB, 2048MB, 4096MB
function_timeout = 540         # Seconds (60-540)

# Scheduling Configuration (Cron format)
cost_analysis_schedule   = "0 9 * * *"   # Daily at 9 AM
weekly_report_schedule   = "0 8 * * 1"   # Weekly on Monday at 8 AM
monthly_review_schedule  = "0 7 1 * *"   # Monthly on 1st at 7 AM
schedule_timezone       = "America/New_York"

# Alerting Configuration
notification_email  = "admin@yourcompany.com"  # Email for alerts
slack_webhook_url  = ""                        # Slack webhook URL (optional)
cost_threshold     = 100                       # USD threshold for high-value alerts

# Monitoring Configuration
enable_detailed_monitoring = true
log_retention_days        = 30

# Resource Configuration
resource_prefix = "cost-opt"  # Prefix for resource names

# Data Retention
bigquery_table_expiration_days = 365  # Days to retain BigQuery data
storage_lifecycle_age         = 90   # Days before moving to next storage class

# Resource Labels
labels = {
  purpose     = "cost-optimization"
  environment = "production"
  team        = "finops"
  managed-by  = "terraform"
}