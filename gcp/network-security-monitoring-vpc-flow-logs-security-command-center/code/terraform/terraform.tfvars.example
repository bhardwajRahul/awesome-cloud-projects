# Example Terraform variables file for Network Security Monitoring
# Copy this file to terraform.tfvars and customize the values for your deployment

# Project Configuration
project_id = "your-gcp-project-id"  # Replace with your actual GCP project ID
environment = "dev"                 # Options: dev, staging, prod, test

# Location Configuration
region = "us-central1"             # GCP region for regional resources
zone   = "us-central1-a"           # GCP zone for zonal resources

# Network Configuration
vpc_name    = "security-monitoring-vpc"
subnet_name = "monitored-subnet"
subnet_cidr = "10.0.1.0/24"

# Security Configuration - Restrict SSH access for production
allowed_ssh_sources = [
  "0.0.0.0/0"  # WARNING: This allows SSH from anywhere. Restrict in production!
  # Example: Restrict to your office/home IP
  # "203.0.113.0/24",
  # "198.51.100.0/24"
]

# Compute Instance Configuration
instance_name = "test-vm"
machine_type  = "e2-micro"  # Cost-effective for testing

# Logging Configuration
log_sink_name       = "vpc-flow-security-sink"
bigquery_location   = "US"           # Options: US, EU, or specific region
log_retention_days  = 30             # 0 = never delete, max 365

# Monitoring and Alerting Configuration
enable_monitoring_alerts = true

# Add your email addresses for alert notifications
notification_emails = [
  # "security-team@yourdomain.com",
  # "devops@yourdomain.com"
]

# Alert Thresholds
high_traffic_threshold_bytes    = 1000000000  # 1 GB/s
suspicious_connections_threshold = 100         # connections per minute

# VPC Flow Logs Configuration
enable_flow_logs                = true
flow_log_sampling_rate         = 1.0          # 100% sampling for comprehensive monitoring
flow_log_aggregation_interval  = "INTERVAL_5_SEC"  # Options: INTERVAL_5_SEC, INTERVAL_30_SEC, INTERVAL_1_MIN, etc.

# Cost Control Options
enable_preemptible_instances = false  # Set to true for cost savings (not recommended for production)
auto_delete_boot_disks      = true

# Security Features
enable_oslogin                  = false  # Set to true for centralized SSH key management
enable_confidential_computing  = false  # Set to true for enhanced security (costs more)
enable_private_google_access   = true
enable_cloud_nat               = false  # Set to true if using private instances without external IPs

# Additional Labels (optional)
additional_labels = {
  # team        = "security"
  # cost-center = "engineering"
  # project     = "security-monitoring"
}

# Custom Metadata for VM instances (optional)
custom_metadata = {
  # environment = "development"
  # owner       = "security-team"
}

# Additional Network Ports (optional)
allowed_ports = [
  # 8080,  # Application port
  # 9090,  # Monitoring port
]

# Advanced Configuration (typically not needed)
resource_prefix = ""  # Optional prefix for all resource names