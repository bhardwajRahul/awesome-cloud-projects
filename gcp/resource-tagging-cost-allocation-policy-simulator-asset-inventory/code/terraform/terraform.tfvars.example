# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your environment

# Required: Google Cloud project configuration
project_id      = "your-gcp-project-id"
organization_id = "123456789012"  # Your organization ID, leave empty if not using org policies
region         = "us-central1"
zone           = "us-central1-a"

# Resource naming and tagging
resource_prefix = "cost-alloc"
environment     = "prod"  # Options: dev, staging, prod

# BigQuery configuration
dataset_location = "US"  # Options: US, EU, or specific regions
dataset_description = "Cost allocation and resource tagging analytics dataset"

# Organization policy configuration
# Set to true only if you have organization admin permissions
enforce_org_policy = false

# Mandatory labels that must be present on all resources
mandatory_labels = [
  "department",
  "cost_center", 
  "environment",
  "project_code"
]

# Asset types to monitor for compliance
monitored_asset_types = [
  "compute.googleapis.com/Instance",
  "storage.googleapis.com/Bucket",
  "container.googleapis.com/Cluster",
  "cloudsql.googleapis.com/DatabaseInstance"
]

# Cloud Functions configuration
function_memory  = 256  # Memory in MB (128, 256, 512, 1024, 2048, 4096, 8192)
function_timeout = 60   # Timeout in seconds (1-540)

# Storage configuration
storage_class = "STANDARD"  # Options: STANDARD, NEARLINE, COLDLINE, ARCHIVE

# Automated reporting configuration
enable_automated_reporting = true
report_schedule           = "0 9 * * 1"  # Every Monday at 9 AM (cron format)

# Notification configuration (optional)
notification_channels = [
  "finance-team@yourcompany.com",
  "cloud-ops@yourcompany.com"
]

# Enable Google Cloud APIs automatically
enable_apis = true

# Default labels applied to all resources
default_labels = {
  terraform   = "true"
  solution    = "cost-allocation"
  component   = "governance"
  managed_by  = "platform-team"
}

# Example configurations for different environments:

# Development environment
# environment = "dev"
# enforce_org_policy = false
# enable_automated_reporting = false
# function_memory = 128
# dataset_location = "us-central1"

# Staging environment  
# environment = "staging"
# enforce_org_policy = false
# enable_automated_reporting = true
# report_schedule = "0 10 * * 2,4"  # Tuesday and Thursday at 10 AM
# function_memory = 256

# Production environment
# environment = "prod"
# enforce_org_policy = true
# enable_automated_reporting = true
# report_schedule = "0 9 * * 1"  # Monday at 9 AM
# function_memory = 512
# storage_class = "STANDARD"

# Multi-region configuration example
# region = "us-central1"
# dataset_location = "US"

# Europe configuration example
# region = "europe-west1" 
# dataset_location = "EU"

# Asia configuration example
# region = "asia-northeast1"
# dataset_location = "asia-northeast1"