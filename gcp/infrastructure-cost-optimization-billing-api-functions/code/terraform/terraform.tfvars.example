# Project Configuration
project_id         = "your-gcp-project-id"
billing_account_id = "your-billing-account-id"
region            = "us-central1"
zone              = "us-central1-a"

# Resource Naming
resource_prefix = "cost-opt"

# BigQuery Configuration
dataset_location = "US"
dataset_description = "Cost optimization and billing analytics dataset"

# Cloud Functions Configuration
function_runtime = "python311"
function_memory  = "512Mi"
function_timeout = 540

# Budget Configuration
budget_amount = 1000
budget_thresholds = [0.5, 0.9, 1.0]

# Scheduler Configuration
cost_analysis_schedule = "0 9 * * *"    # Daily at 9 AM UTC
optimization_schedule  = "0 9 * * 1"    # Weekly on Monday at 9 AM UTC

# API Management
enable_apis = true

# Labels
labels = {
  environment = "production"
  purpose     = "cost-optimization"
  managed-by  = "terraform"
  team        = "finops"
  cost-center = "infrastructure"
}