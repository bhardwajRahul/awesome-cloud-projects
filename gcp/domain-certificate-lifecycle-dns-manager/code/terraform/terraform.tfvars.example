# Example Terraform Variables for GCP Domain and Certificate Lifecycle Management
# Copy this file to terraform.tfvars and modify the values for your environment

# Required Variables
project_id  = "my-cert-project-123456"  # Your GCP project ID
domain_name = "example.com"             # Your domain name (without protocol or trailing slash)

# Optional: Regional Configuration
region = "us-central1"      # GCP region for regional resources
zone   = "us-central1-a"    # GCP zone for zonal resources

# Optional: Resource Naming (leave empty for auto-generation)
dns_zone_name     = ""      # Custom DNS zone name (auto-generated if empty)
certificate_name  = ""      # Custom certificate name (auto-generated if empty)

# Optional: Certificate Configuration
certificate_domains = [     # Additional domains for the certificate
  # "www.example.com",
  # "api.example.com",
  # "app.example.com"
]

# Optional: Monitoring Configuration
enable_monitoring      = true           # Enable automated certificate monitoring
monitoring_schedule    = "0 */6 * * *"  # Every 6 hours (cron format)
daily_audit_schedule   = "0 2 * * *"    # Daily at 2:00 AM UTC

# Optional: Cloud Functions Configuration
function_timeout = 60   # Function timeout in seconds (10-540)
function_memory  = 256  # Function memory in MB (128, 256, 512, 1024, 2048, 4096, 8192)

# Optional: Load Balancer Configuration
create_load_balancer = true   # Create demo Application Load Balancer
enable_www_subdomain = true   # Create www CNAME record

# Optional: DNS Configuration
dns_ttl = 300  # TTL for DNS records in seconds (30-86400)

# Optional: Security Configuration
enable_cloud_armor = false  # Enable Cloud Armor security policy

# Optional: Service Account Configuration
service_account_name = "cert-automation"  # Name for automation service account

# Optional: API Management
enable_apis = true  # Automatically enable required Google Cloud APIs

# Optional: Resource Tags
tags = {
  environment = "production"
  team        = "platform"
  purpose     = "certificate-automation"
  managed-by  = "terraform"
  recipe      = "domain-certificate-lifecycle-dns-manager"
}

