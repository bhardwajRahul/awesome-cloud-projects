# Example Terraform variables file for Session Management Infrastructure
# Copy this file to terraform.tfvars and customize for your environment

# Required: Google Cloud Project Configuration
project_id = "your-gcp-project-id"  # Replace with your actual project ID
region     = "us-central1"          # Your preferred region
zone       = "us-central1-a"        # Your preferred zone

# Redis Configuration
redis_instance_name  = "session-store"       # Name for the Redis instance
redis_memory_size_gb = 1                     # Memory size in GB (1-300)
redis_tier          = "BASIC"               # BASIC or STANDARD_HA
redis_version       = "REDIS_7_0"           # REDIS_6_X or REDIS_7_0

# Cloud Functions Configuration
function_name_prefix = "session-manager"     # Prefix for function names
function_memory     = "512M"                # Memory allocation (256M, 512M, 1G, etc.)
function_timeout    = 60                    # Timeout in seconds (1-540)

# Secret Manager Configuration
secret_name_prefix = "redis-connection"     # Prefix for secret names

# Session Management Configuration
session_ttl_hours  = 24                     # Session TTL for cleanup (1-168 hours)
cleanup_schedule   = "0 */6 * * *"          # Cleanup every 6 hours (cron format)

# API Management
enable_apis = true                          # Enable required Google Cloud APIs

# Security Configuration
deletion_protection = false                 # Enable deletion protection for critical resources

# Resource Labels
labels = {
  purpose     = "session-management"
  environment = "production"
  team        = "platform"
  managed-by  = "terraform"
  cost-center = "engineering"
}

