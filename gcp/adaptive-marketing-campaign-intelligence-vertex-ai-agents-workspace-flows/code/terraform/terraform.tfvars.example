# =====================================
# Example Terraform Variables Configuration
# for Adaptive Marketing Campaign Intelligence
# Copy this file to terraform.tfvars and customize values
# =====================================

# =====================================
# Required Variables
# =====================================

# Google Cloud Project ID (REQUIRED)
project_id = "my-marketing-intelligence-project"

# Primary region for resources
region = "us-central1"

# Environment identifier
environment = "development"

# =====================================
# BigQuery Configuration
# =====================================

# Base name for BigQuery dataset
dataset_name = "marketing_data"

# BigQuery location (use multi-region for better performance)
bigquery_location = "US"

# Table expiration in days (0 = never expire)
table_expiration_days = 365

# =====================================
# Storage Configuration
# =====================================

# Cloud Storage location
storage_location = "US"

# Optional: KMS key for bucket encryption
# kms_key_name = "projects/my-project/locations/us-central1/keyRings/my-keyring/cryptoKeys/my-key"

# =====================================
# Vertex AI Workbench Configuration
# =====================================

# Machine type for Workbench instance
workbench_machine_type = "n1-standard-4"

# Additional disk size in GB
workbench_disk_size_gb = 100

# Disable public IP for security (recommended for production)
disable_workbench_public_ip = true

# List of email addresses that can access the Workbench
workbench_owners = [
  "data-scientist@company.com",
  "ml-engineer@company.com"
]

# =====================================
# Access Control and Security
# =====================================

# Google Group for data analysts (optional)
data_analysts_group = "data-analysts@company.com"

# Marketing team email addresses for notifications
marketing_team_emails = [
  "marketing-manager@company.com",
  "campaign-manager@company.com",
  "marketing-analyst@company.com"
]

# =====================================
# Monitoring and Alerting
# =====================================

# Enable monitoring and alerting
enable_monitoring = true

# Email for system alerts
alert_email = "alerts@company.com"

# =====================================
# Google Workspace Integration
# =====================================

# Workspace domain for API integration
workspace_domain = "company.com"

# Enable Google Workspace Flows (requires licensing)
enable_workspace_flows = false

# API enablement flags
gmail_api_enabled = true
sheets_api_enabled = true
docs_api_enabled = true
calendar_api_enabled = true

# =====================================
# Vertex AI Configuration
# =====================================

# Enable Vertex AI Agents (preview feature, requires allowlist)
enable_vertex_ai_agents = false

# Optional: Different region for training jobs
# vertex_ai_training_region = "us-west1"

# =====================================
# Cost Optimization
# =====================================

# Enable cost optimization features
enable_cost_optimization = true

# BigQuery slot commitment (0 = on-demand pricing)
bigquery_slot_commitment = 0

# Archive storage objects after this many days
storage_archive_after_days = 90

# =====================================
# Advanced Configuration
# =====================================

# Enable detailed audit logging
enable_audit_logging = true

# Enable Data Loss Prevention scanning
enable_data_loss_prevention = false

# Cost center for billing allocation
cost_center = "marketing"

# Custom labels for all resources
custom_labels = {
  owner       = "marketing-team"
  project     = "campaign-intelligence"
  application = "ai-marketing"
}

# =====================================
# Network Configuration (Optional)
# =====================================

# Shared VPC configuration (if applicable)
# network_project_id = "shared-vpc-project"
# vpc_network_name = "marketing-vpc"
# subnet_name = "marketing-subnet"

# =====================================
# Data Processing Configuration
# =====================================

# Enable real-time streaming capabilities
enable_data_streaming = false

# Enable real-time analytics with Pub/Sub
enable_real_time_analytics = false

# Streaming buffer size in MB
streaming_buffer_size = 100