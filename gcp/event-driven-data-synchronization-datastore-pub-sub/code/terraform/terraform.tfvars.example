# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

# Core project configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Resource naming
resource_prefix = "datastore-sync"
environment     = "dev"

# Pub/Sub configuration
pubsub_topic_name           = "data-sync-events"
sync_subscription_name      = "sync-processor"
audit_subscription_name     = "audit-logger"
dlq_topic_name             = "sync-dead-letters"
message_retention_duration  = "604800s"  # 7 days
audit_retention_duration    = "1209600s" # 14 days
dlq_retention_duration      = "2592000s" # 30 days
ack_deadline_seconds        = 60
audit_ack_deadline_seconds  = 30
max_delivery_attempts       = 5

# Cloud Functions configuration
sync_function_name      = "data-sync-processor"
audit_function_name     = "audit-logger"
conflict_function_name  = "conflict-resolver"
function_runtime        = "python39"
sync_function_memory    = 256
audit_function_memory   = 128
function_timeout        = 60
audit_function_timeout  = 30
max_instances          = 10
audit_max_instances    = 5

# Datastore configuration
datastore_location = "us-central"

# Monitoring configuration
enable_monitoring              = true
create_monitoring_dashboard    = true
dashboard_display_name         = "Datastore Sync Monitoring"
notification_email            = "your-email@example.com"  # Optional

# Security and compliance
enable_audit_logging = true

# Feature flags
enable_dead_letter_queue    = true
enable_external_sync        = false
enable_conflict_resolution  = true

# Resource labels
labels = {
  managed-by = "terraform"
  purpose    = "event-driven-sync"
  team       = "data-platform"
  cost-center = "engineering"
}