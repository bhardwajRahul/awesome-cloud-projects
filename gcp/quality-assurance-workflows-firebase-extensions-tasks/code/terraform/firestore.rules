rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // QA Workflows collection - allow authenticated read/write access
    match /${firestore_collection}/{workflowId} {
      // Allow authenticated users to read and write workflow documents
      allow read, write: if request.auth != null;
      
      // Allow service accounts (Cloud Functions) to read and write
      allow read, write: if request.auth.token.firebase.sign_in_provider == 'custom';
      
      // Allow read access for specific service account emails (for dashboard)
      allow read: if request.auth != null && 
        ('qa-dashboard' in request.auth.token.email || 
         'qa-functions' in request.auth.token.email);
    }
    
    // Test results collection - allow authenticated read/write access
    match /test-results/{resultId} {
      // Allow authenticated users to read and write test result documents
      allow read, write: if request.auth != null;
      
      // Allow service accounts to read and write
      allow read, write: if request.auth.token.firebase.sign_in_provider == 'custom';
      
      // Allow read access for dashboard service accounts
      allow read: if request.auth != null && 
        ('qa-dashboard' in request.auth.token.email || 
         'qa-functions' in request.auth.token.email);
    }
    
    // QA configuration collection - read-only for most users
    match /qa-config/{configId} {
      // Allow authenticated users to read configuration
      allow read: if request.auth != null;
      
      // Only allow admin users to write configuration
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
      
      // Allow service accounts to read configuration
      allow read: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // QA metrics collection - read-only access for aggregated data
    match /qa-metrics/{metricId} {
      // Allow authenticated users to read metrics
      allow read: if request.auth != null;
      
      // Only allow system (service accounts) to write metrics
      allow write: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // User profile collection for dashboard access control
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read all user profiles
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Analytics collection - system write, authenticated read
    match /analytics/{analyticsId} {
      // Allow authenticated users to read analytics data
      allow read: if request.auth != null;
      
      // Only system accounts can write analytics
      allow write: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // Notification settings - user-specific access
    match /notifications/{userId} {
      // Users can manage their own notification settings
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Service accounts can read notification settings for sending alerts
      allow read: if request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // Global helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isServiceAccount() {
      return request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isQAServiceAccount() {
      return request.auth != null && 
        ('qa-dashboard' in request.auth.token.email || 
         'qa-functions' in request.auth.token.email);
    }
  }
}