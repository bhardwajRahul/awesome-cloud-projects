# Example Terraform Variables Configuration
# Remote Developer Onboarding with Cloud Workstations and Firebase Studio
#
# Copy this file to terraform.tfvars and customize the values for your environment

# Project Configuration (Required)
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Workstation Configuration
cluster_name             = "developer-workstations"
workstation_config_name  = "fullstack-dev-config"
machine_type            = "e2-standard-4"
persistent_disk_size_gb = 200
idle_timeout_seconds    = 7200  # 2 hours

# Container image for workstations
# Options:
# - us-central1-docker.pkg.dev/cloud-workstations-images/predefined/code-oss:latest (VS Code)
# - us-central1-docker.pkg.dev/cloud-workstations-images/predefined/intellij-ultimate:latest (IntelliJ)
# - us-central1-docker.pkg.dev/cloud-workstations-images/predefined/pycharm-professional:latest (PyCharm)
workstation_container_image = "us-central1-docker.pkg.dev/cloud-workstations-images/predefined/code-oss:latest"

# Source Repository Configuration
source_repo_name = "team-templates"

# User Access Configuration
developer_users = [
  "developer1@yourcompany.com",
  "developer2@yourcompany.com",
  "junior-dev@yourcompany.com"
]

admin_users = [
  "admin@yourcompany.com",
  "devops-lead@yourcompany.com"
]

# Network Configuration
network_name            = "default"
subnet_name             = "default"
enable_private_endpoint = true

# Firebase Configuration
firebase_location = "us-central"

# Budget and Cost Control
budget_amount           = 1000  # USD per month
budget_alert_thresholds = [75, 90, 100]  # Percentage thresholds

# Monitoring Configuration
enable_audit_logging        = true
enable_monitoring_dashboard = true

# Resource Labels
environment = "development"  # Options: development, staging, production, testing
team        = "engineering"

# Additional custom labels (optional)
additional_labels = {
  cost_center = "engineering"
  owner       = "platform-team"
  purpose     = "remote-development"
}

