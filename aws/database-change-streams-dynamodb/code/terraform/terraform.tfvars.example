# Example Terraform variables file for DynamoDB Streams real-time processing
# Copy this file to terraform.tfvars and modify values as needed

# Basic Configuration
environment  = "development"
project_name = "stream-processing"

# DynamoDB Configuration
table_name         = "UserActivities"
read_capacity      = 5
write_capacity     = 5
stream_view_type   = "NEW_AND_OLD_IMAGES"

# Lambda Configuration
lambda_runtime     = "python3.9"
lambda_memory_size = 256
lambda_timeout     = 60

# Stream Processing Configuration
batch_size                             = 10
maximum_batching_window_in_seconds     = 5
maximum_record_age_in_seconds          = 3600
maximum_retry_attempts                 = 3
parallelization_factor                 = 2

# Dead Letter Queue Configuration
dlq_message_retention_period = 1209600  # 14 days in seconds

# Notification Configuration
enable_email_notifications = true
notification_email         = "your-email@example.com"

# Monitoring Configuration
cloudwatch_log_retention_days = 7

# S3 Configuration
s3_bucket_name                = ""  # Leave empty for auto-generated name
enable_s3_versioning          = true
s3_lifecycle_transition_days  = 30

# Additional Tags
tags = {
  Owner       = "DataTeam"
  CostCenter  = "Engineering"
  Compliance  = "SOX"
}