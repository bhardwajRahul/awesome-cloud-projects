# Example Terraform variables for CloudWatch Evidently feature flags infrastructure
# Copy this file to terraform.tfvars and customize the values for your environment

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name            = "my-feature-demo"
lambda_function_name    = "my-evidently-demo"
feature_flag_name       = "new-checkout-flow"
launch_name            = "checkout-gradual-rollout"

# Traffic Distribution
# Start with a small percentage and increase gradually
treatment_traffic_percentage = 10

# Lambda Configuration
lambda_timeout     = 30
lambda_memory_size = 128
lambda_runtime     = "python3.9"

# Logging Configuration
enable_data_delivery = true
log_retention_days   = 7

# Resource Tags
default_tags = {
  Environment = "development"
  Project     = "feature-flags-demo"
  Team        = "platform"
  Owner       = "your-name"
  CostCenter  = "engineering"
}