# AWS Configuration
aws_region   = "us-west-2"
project_name = "my-advanced-cdn"
environment  = "dev"

# S3 Configuration
s3_bucket_name       = ""  # Leave empty for auto-generated name
enable_s3_versioning = true
s3_force_destroy     = false  # Set to true for testing environments

# CloudFront Configuration
price_class              = "PriceClass_All"  # PriceClass_All, PriceClass_200, PriceClass_100
enable_ipv6              = true
enable_compression       = true
default_root_object      = "index.html"
custom_origin_domain     = "httpbin.org"
minimum_protocol_version = "TLSv1.2_2021"

# WAF Configuration
enable_waf                     = true
waf_rate_limit                 = 2000
waf_geo_restriction_type       = "none"  # none, whitelist, blacklist
waf_geo_restriction_locations  = []

# Lambda@Edge Configuration
enable_lambda_edge       = true
lambda_edge_timeout      = 5
lambda_edge_memory_size  = 128

# CloudFront Functions Configuration
enable_cloudfront_functions = true

# Monitoring Configuration
enable_real_time_logs                    = true
real_time_logs_kinesis_shard_count      = 1
enable_cloudwatch_dashboard             = true
cloudwatch_log_retention_days           = 14

# KeyValueStore Configuration
enable_key_value_store = true
key_value_store_initial_data = {
  maintenance_mode = "false"
  feature_flags    = "{\"new_ui\": true, \"beta_features\": false}"
  redirect_rules   = "{\"old_domain\": \"new_domain.com\", \"legacy_path\": \"/new-path\"}"
}

# Cache Policies
cache_policy_name          = "Managed-CachingOptimized"
origin_request_policy_name = "Managed-CORS-S3Origin"

# Additional Tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Application = "ContentDelivery"
}