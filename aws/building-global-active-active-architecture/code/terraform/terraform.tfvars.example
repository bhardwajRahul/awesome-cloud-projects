# Example Terraform variables for multi-region active-active application
# Copy this file to terraform.tfvars and customize the values for your deployment

# ============================================================================
# Core Configuration
# ============================================================================

# Project name - used for resource naming and tagging
project_name = "my-global-app"

# Environment - affects resource tagging and configurations
environment = "dev"  # Options: dev, staging, prod

# ============================================================================
# Regional Configuration
# ============================================================================

# Primary region for the application (recommended: us-east-1)
primary_region = "us-east-1"

# Secondary region in Europe (recommended: eu-west-1)
secondary_region_eu = "eu-west-1"

# Secondary region in Asia Pacific (recommended: ap-southeast-1)
secondary_region_asia = "ap-southeast-1"

# ============================================================================
# DynamoDB Configuration
# ============================================================================

# Name of the DynamoDB Global Table
dynamodb_table_name = "GlobalUserData"

# DynamoDB billing mode (PAY_PER_REQUEST recommended for variable workloads)
dynamodb_billing_mode = "PAY_PER_REQUEST"  # Options: PAY_PER_REQUEST, PROVISIONED

# ============================================================================
# Lambda Configuration
# ============================================================================

# Lambda runtime version
lambda_runtime = "python3.11"

# Lambda function timeout in seconds (1-900)
lambda_timeout = 30

# Lambda function memory in MB (128-10240)
lambda_memory_size = 256

# Reserved concurrency for Lambda functions (null for unreserved)
# lambda_reserved_concurrency = 100

# ============================================================================
# Global Accelerator Configuration
# ============================================================================

# Name of the Global Accelerator
accelerator_name = "my-app-accelerator"

# IP address type for Global Accelerator
accelerator_ip_address_type = "IPV4"  # Options: IPV4, DUAL_STACK

# Whether the Global Accelerator is enabled
accelerator_enabled = true

# ============================================================================
# Health Check Configuration
# ============================================================================

# Health check interval in seconds (10-30)
health_check_interval_seconds = 30

# Number of consecutive health checks for healthy endpoint (2-10)
healthy_threshold_count = 3

# Number of consecutive health checks for unhealthy endpoint (2-10)
unhealthy_threshold_count = 3

# ============================================================================
# Traffic Configuration
# ============================================================================

# Percentage of traffic directed to endpoint group (0-100)
traffic_dial_percentage = 100

# Weight for endpoints in endpoint groups (0-255)
endpoint_weight = 100

# ============================================================================
# Application Load Balancer Configuration
# ============================================================================

# Enable deletion protection for ALBs (recommended: true for production)
alb_enable_deletion_protection = false

# ALB idle timeout in seconds (1-4000)
alb_idle_timeout = 60

# Enable cross-zone load balancing
enable_cross_zone_load_balancing = true

# ============================================================================
# Networking Configuration
# ============================================================================

# Whether to use the default VPC in each region
use_default_vpc = true

# ============================================================================
# Security Configuration
# ============================================================================

# Enable AWS WAF for Application Load Balancers (additional costs apply)
enable_waf = false

# ============================================================================
# Monitoring and Logging Configuration
# ============================================================================

# Enable detailed CloudWatch monitoring (additional costs apply)
enable_detailed_monitoring = true

# CloudWatch log retention period in days
# Valid values: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1827, 3653
log_retention_days = 14

# ============================================================================
# Optional SSL/TLS Configuration
# ============================================================================

# Custom domain name for the application (leave empty to use ALB DNS names)
# custom_domain_name = "api.yourdomain.com"

# ACM certificate ARN for HTTPS (required if custom_domain_name is provided)
# certificate_arn = "arn:aws:acm:us-west-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# ============================================================================
# Cost Optimization Configuration
# ============================================================================

# Enable spot instances for cost optimization (if applicable)
enable_spot_instances = false

# Number of days to retain backups (1-35)
backup_retention_days = 7

# ============================================================================
# Development and Testing Configuration
# ============================================================================

# Example configuration for development environment
# Uncomment and modify these settings for development/testing

# project_name = "dev-global-app"
# environment = "dev"
# log_retention_days = 3
# alb_enable_deletion_protection = false
# enable_detailed_monitoring = false
# lambda_memory_size = 128
# health_check_interval_seconds = 30

# ============================================================================
# Production Configuration
# ============================================================================

# Example configuration for production environment
# Uncomment and modify these settings for production

# project_name = "prod-global-app"
# environment = "prod"
# log_retention_days = 30
# alb_enable_deletion_protection = true
# enable_detailed_monitoring = true
# lambda_memory_size = 512
# lambda_reserved_concurrency = 1000
# health_check_interval_seconds = 10
# enable_waf = true

# ============================================================================
# High-Performance Configuration
# ============================================================================

# Example configuration for high-performance requirements
# Uncomment and modify these settings for high-performance scenarios

# lambda_memory_size = 1024
# lambda_timeout = 60
# lambda_reserved_concurrency = 2000
# health_check_interval_seconds = 10
# healthy_threshold_count = 2
# unhealthy_threshold_count = 2