# ==============================================================================
# Example Terraform Variables Configuration
# ==============================================================================
# Copy this file to terraform.tfvars and modify values as needed
# Do not commit terraform.tfvars to version control as it may contain sensitive data

# General Configuration
environment = "dev"  # Options: dev, staging, prod

# Notification Configuration
# notification_email = "admin@yourcompany.com"  # Uncomment and set your email
notification_email = ""  # Leave empty to skip email notifications

# Schedule Configuration
timezone = "America/New_York"  # Your preferred timezone

# Custom schedule expressions (optional - defaults provided)
# daily_report_schedule = "cron(0 9 * * ? *)"           # 9 AM daily
# hourly_processing_schedule = "rate(1 hour)"           # Every hour  
# weekly_notification_schedule = "cron(0 10 ? * MON *)" # Monday 10 AM

# Feature Toggles
schedules_enabled = true               # Set to false to disable all schedules
enable_hourly_processing = true        # Enable/disable hourly data processing
enable_weekly_notifications = true     # Enable/disable weekly notifications
enable_monitoring = true               # Enable/disable CloudWatch alarms

# Lambda Configuration
lambda_timeout = 60        # Lambda timeout in seconds (3-900)
lambda_memory_size = 256   # Lambda memory in MB (128-10240)

# Logging Configuration
log_retention_days = 30    # CloudWatch logs retention (1,3,5,7,14,30,60,90,120,150,180,365,400,545,731,1827,3653)

# S3 Configuration
enable_s3_lifecycle = true                # Enable lifecycle policies for cost optimization
s3_intelligent_tiering_days = 30          # Days before moving to Intelligent Tiering
s3_glacier_transition_days = 90           # Days before moving to Glacier
s3_version_expiration_days = 365          # Days to keep old versions

# Security Configuration
enable_s3_encryption = true               # Enable S3 server-side encryption
enable_sns_encryption = true              # Enable SNS encryption
lambda_tracing_mode = "Active"            # X-Ray tracing: Active or PassThrough

# Cost Optimization
# lambda_reserved_concurrency = 10        # Uncomment to set reserved concurrency
enable_cost_tags = true                   # Add cost tracking tags

# Advanced Configuration
# scheduler_flexible_time_window_minutes = 5  # Uncomment for flexible scheduling
retry_policy_max_attempts = 3             # Max retry attempts (0-185)
retry_policy_max_age_seconds = 3600       # Max event age for retries (60-86400)

# Development and Testing
enable_debug_logging = false              # Enable debug logging in Lambda

# Additional environment variables for Lambda (optional)
lambda_environment_variables = {
  # "CUSTOM_VAR1" = "value1"
  # "CUSTOM_VAR2" = "value2"
}

# Additional tags for all resources
tags = {
  Owner       = "DataTeam"
  CostCenter  = "Engineering"
  Department  = "IT"
  Application = "BusinessAutomation"
  # Add any other tags your organization requires
}

# ==============================================================================
# Example Configurations for Different Environments
# ==============================================================================

# Development Environment Example:
# environment = "dev"
# schedules_enabled = false  # Disable schedules in dev
# enable_monitoring = false  # Disable monitoring in dev
# log_retention_days = 7     # Shorter retention in dev
# lambda_memory_size = 128   # Smaller memory in dev

# Staging Environment Example:
# environment = "staging"
# schedules_enabled = true
# enable_monitoring = true
# log_retention_days = 30
# lambda_memory_size = 256

# Production Environment Example:
# environment = "prod"
# schedules_enabled = true
# enable_monitoring = true
# log_retention_days = 90
# lambda_memory_size = 512
# lambda_reserved_concurrency = 10  # Set concurrency limits in prod

# ==============================================================================
# Schedule Expression Examples
# ==============================================================================

# Cron Expressions (EventBridge format):
# "cron(0 9 * * ? *)"     # Every day at 9 AM
# "cron(0 */6 * * ? *)"   # Every 6 hours
# "cron(0 12 ? * MON *)"  # Every Monday at noon
# "cron(0 0 1 * ? *)"     # First day of every month at midnight
# "cron(0 10 ? * MON-FRI *)" # Weekdays at 10 AM

# Rate Expressions:
# "rate(1 minute)"        # Every minute
# "rate(5 minutes)"       # Every 5 minutes
# "rate(1 hour)"          # Every hour
# "rate(2 hours)"         # Every 2 hours
# "rate(1 day)"           # Every day

# ==============================================================================
# Common Timezone Examples
# ==============================================================================

# Americas:
# "America/New_York"      # Eastern Time
# "America/Chicago"       # Central Time
# "America/Denver"        # Mountain Time
# "America/Los_Angeles"   # Pacific Time
# "America/Sao_Paulo"     # Brazil

# Europe:
