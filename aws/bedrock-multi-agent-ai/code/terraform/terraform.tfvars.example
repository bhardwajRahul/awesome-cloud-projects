# Example Terraform variables configuration file
# Copy this file to terraform.tfvars and customize for your environment

# ===================
# Core Configuration
# ===================

# AWS region where resources will be deployed
# Must be a region where Amazon Bedrock is available
aws_region = "us-east-1"

# Environment identifier (dev, test, prod)
environment = "dev"

# Team or person responsible for the infrastructure
owner = "platform-team"

# Project name - used for resource naming and tagging
project_name = "multi-agent-workflows"

# ===================
# Agent Configuration
# ===================

# Names for the specialized agents (will be suffixed with unique identifier)
supervisor_agent_name = "supervisor-agent"
finance_agent_name    = "finance-agent"
support_agent_name    = "support-agent"
analytics_agent_name  = "analytics-agent"

# ===================
# Bedrock Configuration
# ===================

# Foundation model for all agents
# Options: 
# - anthropic.claude-3-sonnet-20240229-v1:0 (recommended for production)
# - anthropic.claude-3-haiku-20240307-v1:0 (faster, lower cost)
# - anthropic.claude-v2:1 (previous generation)
foundation_model = "anthropic.claude-3-sonnet-20240229-v1:0"

# Agent session timeout in seconds (600-28800)
# 3600 = 1 hour, 28800 = 8 hours
agent_session_timeout = 3600

# ===================
# Lambda Configuration
# ===================

# Memory allocation for coordinator function in MB (128-10240)
coordinator_memory_size = 512

# Timeout for coordinator function in seconds (1-900)
coordinator_timeout = 300

# Lambda runtime version
lambda_runtime = "python3.11"

# ===================
# DynamoDB Configuration
# ===================

# Billing mode: PAY_PER_REQUEST (recommended) or PROVISIONED
dynamodb_billing_mode = "PAY_PER_REQUEST"

# If using PROVISIONED billing mode, set capacity units
dynamodb_read_capacity  = 5
dynamodb_write_capacity = 5

# How long to retain agent memory records (1-365 days)
memory_retention_days = 30

# ===================
# EventBridge Configuration
# ===================

# Enable KMS encryption for EventBridge (requires enable_resource_encryption = true)
enable_eventbridge_encryption = true

# How long to retain failed events in dead letter queue (1-14 days)
event_retention_days = 14

# ===================
# Monitoring Configuration
# ===================

# Enable AWS X-Ray distributed tracing
enable_xray_tracing = true

# Create CloudWatch dashboard and custom metrics
enable_enhanced_monitoring = true

# CloudWatch log retention period in days
# Valid values: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1827, 3653
log_retention_days = 30

# ===================
# Security Configuration
# ===================

# Enable KMS encryption for all supported resources
enable_resource_encryption = true

# KMS key deletion window in days (7-30)
kms_key_deletion_window = 7

# ===================
# Additional Tags
# ===================

# Add custom tags to all resources
additional_tags = {
  CostCenter    = "AI-Platform"
  Department    = "Engineering"
  Application   = "Multi-Agent-AI"
  Compliance    = "SOC2"
  Backup        = "Required"
  Contact       = "platform-team@company.com"
}

# ===================
# Development Environment Example
# ===================

# For development environments, you might want:
# environment = "dev"
# coordinator_memory_size = 256
# enable_resource_encryption = false
# enable_enhanced_monitoring = false
# log_retention_days = 7
# memory_retention_days = 7

# ===================
# Production Environment Example
# ===================

# For production environments, you might want:
# environment = "prod"
# coordinator_memory_size = 1024
# coordinator_timeout = 600
# enable_resource_encryption = true
# enable_enhanced_monitoring = true
# enable_xray_tracing = true
# log_retention_days = 90
# memory_retention_days = 90
# kms_key_deletion_window = 30