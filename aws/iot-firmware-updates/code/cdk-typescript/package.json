{
  "name": "iot-firmware-updates-cdk",
  "version": "1.0.0",
  "description": "CDK TypeScript application for IoT firmware updates with device management jobs",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "deploy:dev": "cdk deploy --context environment=dev",
    "deploy:prod": "cdk deploy --context environment=prod",
    "destroy:dev": "cdk destroy --context environment=dev",
    "destroy:prod": "cdk destroy --context environment=prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.133.0",
    "constructs": "^10.3.0"
  },
  "keywords": [
    "aws-cdk",
    "iot",
    "firmware-updates",
    "device-management",
    "ota",
    "aws-signer",
    "cloudwatch",
    "lambda"
  ],
