# Example Terraform variables file for IoT firmware updates infrastructure
# Copy this file to terraform.tfvars and customize the values for your environment

# ============================================================================
# BASIC CONFIGURATION
# ============================================================================

# AWS region for resource deployment
aws_region = "us-east-1"

# Environment name (dev, staging, prod)
environment = "dev"

# Project name (used for resource naming)
project_name = "iot-firmware-updates"

# ============================================================================
# RESOURCE NAMING (Optional - leave empty for auto-generated names)
# ============================================================================

# Custom S3 bucket name (leave empty for auto-generated)
firmware_bucket_name = ""

# Custom IoT Thing name (leave empty for auto-generated)
thing_name = ""

# Custom IoT Thing Group name (leave empty for auto-generated)
thing_group_name = ""

# ============================================================================
# AWS SIGNER CONFIGURATION
# ============================================================================

# AWS Signer platform ID for firmware signing
# Options: AmazonFreeRTOS-TI-CC3220SF, AmazonFreeRTOS-Default, AWSLambda-SHA384-ECDSA
signing_platform_id = "AmazonFreeRTOS-TI-CC3220SF"

# Number of days the signature remains valid (1-3650)
signature_validity_days = 365

# ============================================================================
# LAMBDA CONFIGURATION
# ============================================================================

# Lambda function timeout in seconds (30-900)
lambda_timeout = 300

# Lambda function memory size in MB (128-10240)
lambda_memory_size = 256

# ============================================================================
# S3 CONFIGURATION
# ============================================================================

# Enable versioning on the S3 bucket
enable_s3_versioning = true

# Enable server-side encryption on the S3 bucket
enable_s3_encryption = true

# Server-side encryption algorithm (AES256 or aws:kms)
s3_encryption_algorithm = "AES256"

# KMS key ID for encryption (only needed if using aws:kms)
# s3_kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# ============================================================================
# IOT JOBS CONFIGURATION
# ============================================================================

# Maximum number of devices to update per minute
job_rollout_max_per_minute = 10

# Base rate for exponential rollout
job_rollout_base_rate_per_minute = 5

# Increment factor for exponential rollout (1.0-5.0)
job_rollout_increment_factor = 2.0

# Percentage of failed jobs that triggers abort (0-100)
job_abort_failure_threshold = 20.0

# Timeout for job execution in minutes (1-10080)
job_timeout_minutes = 60

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Number of days to retain CloudWatch logs
cloudwatch_log_retention_days = 14

# ============================================================================
# OPTIONAL FEATURES
# ============================================================================

# Whether to create a sample IoT device for testing
create_sample_device = true

# Whether to create CloudWatch dashboard for monitoring
create_cloudwatch_dashboard = true

# ============================================================================
# ADDITIONAL TAGS
# ============================================================================

# Additional tags to apply to all resources
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Department  = "IoT"
}

# ============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# ============================================================================

# Development Environment Example:
# environment = "dev"
# job_rollout_max_per_minute = 5
# cloudwatch_log_retention_days = 7
# create_sample_device = true
# create_cloudwatch_dashboard = true

# Staging Environment Example:
# environment = "staging"
# job_rollout_max_per_minute = 20
# cloudwatch_log_retention_days = 14
# create_sample_device = true
# create_cloudwatch_dashboard = true

# Production Environment Example:
# environment = "prod"
# job_rollout_max_per_minute = 50
# cloudwatch_log_retention_days = 30
# create_sample_device = false
# create_cloudwatch_dashboard = true
# s3_encryption_algorithm = "aws:kms"
# s3_kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"