# Example Terraform variables file for Infrastructure Monitoring
# Copy this file to terraform.tfvars and customize the values for your environment

# AWS Region (leave null to use provider default or AWS_DEFAULT_REGION)
aws_region = "us-east-1"

# Environment name
environment = "dev"

# Enable automated remediation using Lambda functions
enable_automated_remediation = false

# Email address for SNS notifications (leave empty to skip email subscription)
notification_email = "your-email@example.com"

# Enable CloudTrail Insights for anomalous activity detection
cloudtrail_enable_insights = false

# AWS Config settings
config_recorder_name        = "default"
config_delivery_channel_name = "default"

# S3 bucket lifecycle configuration
s3_bucket_lifecycle_enabled    = true
s3_transition_to_ia_days      = 30
s3_transition_to_glacier_days = 90

# CloudWatch log retention
cloudwatch_log_retention_days = 14

# Systems Manager maintenance window settings
maintenance_window_schedule  = "cron(0 02 ? * SUN *)"  # 2 AM UTC every Sunday
maintenance_window_duration = 4  # hours
maintenance_window_cutoff   = 1  # hours

# Config rules to enable
enable_config_rules = {
  s3_bucket_public_access_prohibited = true
  encrypted_volumes                  = true
  root_access_key_check             = true
  iam_password_policy               = true
}

# Lambda function settings (when automated remediation is enabled)
lambda_runtime     = "python3.9"
lambda_timeout     = 300  # seconds
lambda_memory_size = 128  # MB

# CloudWatch dashboard
enable_cloudwatch_dashboard = true
dashboard_widgets_config = {
  compliance_widget_width  = 12
  compliance_widget_height = 6
  logs_widget_width       = 24
  logs_widget_height      = 6
}

# Additional tags to apply to all resources
additional_tags = {
  Owner       = "Platform Team"
  CostCenter  = "12345"
  Application = "Infrastructure Monitoring"
}