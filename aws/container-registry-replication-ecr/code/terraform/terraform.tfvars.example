# Example terraform.tfvars file for ECR Container Registry Replication Strategies
# Copy this file to terraform.tfvars and customize the values for your environment

# ============================================================================
# REGIONAL CONFIGURATION
# ============================================================================

# AWS region for source ECR registries (where repositories are created)
source_region = "us-east-1"

# AWS region for destination ECR registries (replication target)
destination_region = "us-west-2"

# AWS region for secondary ECR registries (additional replication target)
secondary_region = "eu-west-1"

# ============================================================================
# REPOSITORY CONFIGURATION
# ============================================================================

# Prefix for ECR repository names (will be used to filter replication)
repository_prefix = "enterprise-apps"

# Environment name for resource tagging and naming
environment = "production"

# Project name for resource naming and tagging
project_name = "ecr-replication-strategy"

# ============================================================================
# IMAGE SCANNING AND SECURITY
# ============================================================================

# Enable image scanning for security vulnerabilities
enable_image_scanning = true

# Create new IAM roles for ECR access (set to false if using existing roles)
create_iam_roles = true

# ARN of existing production role (only used if create_iam_roles = false)
# existing_production_role_arn = "arn:aws:iam::123456789012:role/existing-production-role"

# ARN of existing CI/CD pipeline role (only used if create_iam_roles = false)
# existing_ci_pipeline_role_arn = "arn:aws:iam::123456789012:role/existing-ci-pipeline-role"

# ============================================================================
# LIFECYCLE POLICY CONFIGURATION
# ============================================================================

# Number of production images to retain (tagged with prod, release prefixes)
production_image_retention_count = 10

# Number of testing images to retain (tagged with test, dev, staging prefixes)
testing_image_retention_count = 5

# Days to retain untagged images before deletion
untagged_image_retention_days = 1

# Days to retain testing images before deletion
testing_image_retention_days = 7

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================

# Enable CloudWatch monitoring and dashboards
enable_monitoring = true

# Enable SNS notifications for alerts
enable_sns_notifications = true

# Email address for SNS notifications (leave empty to skip email subscription)
notification_email = "devops@company.com"

# Threshold for replication failure rate alarm (0.0 to 1.0)
replication_failure_threshold = 0.1

# ============================================================================
# RESOURCE TAGGING
# ============================================================================

# Default tags applied to all resources
default_tags = {
  Project     = "Container-Registry-Replication"
  Environment = "production"
  Team        = "DevOps"
  CostCenter  = "Engineering"
  ManagedBy   = "terraform"
  Owner       = "platform-team"
  Repository  = "recipes"
}