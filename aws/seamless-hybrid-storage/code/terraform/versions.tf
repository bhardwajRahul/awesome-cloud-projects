# Terraform and provider version requirements for AWS Storage Gateway hybrid cloud storage
terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.4"
    }
  }
}

# Configure the AWS Provider
provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = "hybrid-cloud-storage"
      Environment = var.environment
      ManagedBy   = "terraform"
    }
  }
}