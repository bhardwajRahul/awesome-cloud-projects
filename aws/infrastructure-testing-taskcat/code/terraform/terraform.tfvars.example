# Example Terraform variables for TaskCat CloudFormation testing infrastructure
# Copy this file to terraform.tfvars and customize the values

# Basic Configuration
project_name     = "taskcat-demo"
environment_name = "testing"

# AWS Regions for TaskCat Testing
# Add or remove regions based on your testing requirements
aws_regions = [
  "us-east-1",
  "us-west-2",
  "eu-west-1"
]

# S3 Configuration
s3_bucket_force_destroy      = true  # Set to false for production environments
s3_bucket_versioning_enabled = true

# Notification Configuration
# Provide an email address to receive test notifications
notification_email = ""  # Example: "devops-team@example.com"

# EC2 Key Pair Configuration
# Leave empty to auto-generate a key pair, or specify existing key pair name
key_pair_name = ""  # Example: "my-existing-keypair"

# Monitoring and Logging
enable_cloudtrail_logging = false
cloudtrail_retention_days = 7

# IAM Configuration
iam_role_path = "/taskcat/"

# VPC CIDR Blocks for Different Test Scenarios
vpc_cidr_blocks = {
  basic    = "10.0.0.0/16"
  no_nat   = "10.1.0.0/16"
  custom   = "172.16.0.0/16"
  dynamic  = "10.2.0.0/16"
  regional = "10.3.0.0/16"
}

# Advanced Features (Optional)
enable_cost_monitoring   = false
enable_security_scanning = false
test_timeout_minutes     = 60

# Additional Resource Tags
tags = {
  Department  = "DevOps"
  Team        = "Infrastructure"
  Cost_Center = "IT-001"
  Purpose     = "TaskCat-Testing"
}