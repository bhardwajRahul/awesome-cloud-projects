# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and modify the values as needed

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
environment  = "dev"
project_name = "fraud-detection"

# Email Configuration
alert_email = "fraud-alerts@example.com"

# Kinesis Configuration
kinesis_shard_count = 3

# DynamoDB Configuration
dynamodb_read_capacity  = 100
dynamodb_write_capacity = 100

# Lambda Configuration
lambda_enrichment_memory = 256
lambda_processor_memory  = 512
lambda_timeout          = 60

# Fraud Detection Thresholds
high_risk_score_threshold   = 900
medium_risk_score_threshold = 600
low_risk_score_threshold    = 400

# Monitoring Configuration
enable_cloudwatch_logs     = true
enable_enhanced_monitoring = true
log_retention_days        = 14

# Training Data Configuration
fraud_model_training_data_path = "training-data/enhanced_training_data.csv"

# Default Tags
default_tags = {
  Project     = "fraud-detection"
  Environment = "dev"
  ManagedBy   = "terraform"
  Recipe      = "real-time-fraud-detection-amazon-fraud-detector"
  Owner       = "your-team"
  CostCenter  = "your-cost-center"
}