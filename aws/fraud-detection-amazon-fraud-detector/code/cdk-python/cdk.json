{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/.venv",
      "**/.env",
      "**/node_modules",
      "**/.git",
      "**/.pytest_cache",
      "**/*.pyc",
      "**/*.pyo",
      "**/__pycache__/**",
      "**/dist/**",
      "**/build/**",
      "**/.coverage",
      "**/htmlcov/**",
      "**/.tox/**",
      "**/*.egg-info/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeRemovalPolicy": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:roleNameAsExternalId": true,
    "@aws-cdk/aws-lambda:removeDuplicateVersions": true,
    "@aws-cdk/aws-dynamodb:resourcePolicyPerReplica": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLoggingForLambdaInvoke": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:reduceCrossAccountRegionPolicyScope": true,
    "@aws-cdk/aws-eks:nodegroupNameAttribute": true,
    "@aws-cdk/aws-ec2:ebsDefaultGp3Volume": true,
    "@aws-cdk/aws-ecs:removeDefaultDeploymentAlarm": true,
    "@aws-cdk/aws-rds:preventRenderingDeprecatedCredentials": true,
    "@aws-cdk/aws-codepipeline-actions:useNewDefaultBranchForCodeCommitSource": true,
    "@aws-cdk/aws-cloudwatch-actions:changeLambdaPermissionLogicalIdForLambdaAction": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeysDefaultValueToFalse": true,
    "@aws-cdk/aws-codepipeline:defaultPipelineTypeToV2": true,
    "@aws-cdk/aws-kms:fireEventRuleOnImportedKey": true,
    "@aws-cdk/aws-s3:grantWriteWithoutAcl": true,
    "@aws-cdk/aws-iam:writeIamPolicyStatements": true,
    "@aws-cdk/aws-lambda:useWarmUpConcurrency": true,
    "@aws-cdk/aws-cloudformation:parseIntentionallyMalformedArnExceptions": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:blockDeviceMappingEnabled": true,
    "@aws-cdk/aws-lambda:currentVersionOptions": true,
    "@aws-cdk/aws-lambda:permissionsBoundary": true,
    
    "fraud_detector_email": "fraud-alerts@example.com",
    "random_suffix": "prod",
    
    "deployment_environment": "production",
    "enable_monitoring": true,
    "enable_detailed_monitoring": true,
    "enable_xray_tracing": true,
    "log_retention_days": 7,
    
    "kinesis_shard_count": 3,
    "kinesis_retention_days": 7,
    
    "dynamodb_read_capacity": 100,
    "dynamodb_write_capacity": 100,
    "dynamodb_gsi_read_capacity": 50,
    "dynamodb_gsi_write_capacity": 50,
    
    "lambda_timeout_seconds": 30,
    "lambda_memory_size": 512,
    "lambda_enrichment_timeout_seconds": 60,
    "lambda_enrichment_memory_size": 256,
    
    "enable_s3_versioning": true,
    "s3_lifecycle_enabled": true,
    "s3_ia_transition_days": 30,
    "s3_glacier_transition_days": 90,
    "s3_expiration_days": 365,
    
    "cloudwatch_alarm_evaluation_periods": 2,
    "cloudwatch_alarm_datapoints_to_alarm": 1,
    "lambda_error_threshold": 5,
    "lambda_duration_threshold_ms": 25000,
    
    "tags": {
      "Application": "FraudDetection",
      "Environment": "Production",
      "Owner": "FinTech-Team",
      "Project": "RealTimeFraudDetection",
      "CostCenter": "Security",
      "Version": "1.0.0"
    }
  },
  "toolkit": {
    "stackName": "CDKToolkit",
    "fileAssetsBucketName": "cdk-assets-${AWS::AccountId}-${AWS::Region}",
    "containerAssetsRepositoryName": "cdk-assets"
  },
  "build": {
    "commands": [
      "pip install -r requirements.txt"
    ]
  },
  "diff": {
    "include": [
      "**"
    ],
    "exclude": []
  }
}