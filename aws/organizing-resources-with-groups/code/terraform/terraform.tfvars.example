# Basic AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region
environment = "production"  # Options: development, staging, production
application = "web-app"    # Your application name
deployed_by = "terraform"  # Who deployed this infrastructure

# Notification Configuration
notification_email = "admin@yourcompany.com"  # Email for alerts (leave empty to skip)

# Resource Naming
resource_name_prefix = "rg-automation"  # Prefix for all resource names

# CloudWatch Monitoring Configuration
cpu_alarm_threshold = 80          # CPU utilization alarm threshold (50-100%)
alarm_evaluation_periods = 2      # Number of periods before alarm triggers
dashboard_period = 300            # Dashboard metrics period in seconds

# Budget and Cost Management
monthly_budget_limit = 100           # Monthly budget limit in USD
budget_threshold_percentage = 80     # Budget notification threshold (50-100%)
enable_cost_anomaly_detection = true # Enable AWS Cost Anomaly Detection

# Systems Manager Automation
enable_automation_documents = true        # Enable SSM automation documents
enable_eventbridge_tagging_rules = true  # Enable automated resource tagging

# Resource Group Configuration
additional_resource_types = ["AWS::AllSupported"]  # Resource types to include
# Uncomment to limit to specific resource types:
# additional_resource_types = ["AWS::EC2::Instance", "AWS::S3::Bucket", "AWS::RDS::DBInstance"]

# EventBridge Configuration - Services to monitor for auto-tagging
eventbridge_monitored_services = [
  "ec2.amazonaws.com",
  "s3.amazonaws.com",
  "rds.amazonaws.com"
]

# Additional Custom Tags (optional)
additional_tags = {
  Team       = "DevOps"
  CostCenter = "Engineering" 
  Owner      = "platform-team"
  Project    = "resource-automation"
}

# Advanced Configuration (optional)
# Uncomment and modify as needed:

# Enable specific features
# enable_automation_documents = false      # Disable SSM documents
# enable_eventbridge_tagging_rules = false # Disable auto-tagging
# enable_cost_anomaly_detection = false    # Disable cost anomaly detection