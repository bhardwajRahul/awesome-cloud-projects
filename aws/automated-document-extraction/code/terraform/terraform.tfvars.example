# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "textract-processor"
environment  = "dev"

# S3 Configuration
documents_prefix = "documents"
results_prefix   = "results"

# Lambda Configuration
lambda_runtime     = "python3.9"
lambda_timeout     = 60
lambda_memory_size = 256

# Document Processing
supported_formats = ["pdf", "png", "jpg", "jpeg", "tiff", "txt"]
textract_api_version = "2018-06-27"

# Monitoring Configuration
enable_monitoring    = true
log_retention_days   = 14
log_level           = "INFO"
error_threshold     = 5
duration_threshold  = 45000

# CloudWatch Alarm Actions (optional)
# alarm_actions = ["arn:aws:sns:us-east-1:123456789012:alerts-topic"]

# Security Configuration (optional)
# enable_kms_encryption = false
# kms_key_id           = ""

# Advanced Configuration (optional)
# enable_enhanced_monitoring = false
# max_concurrent_executions = 0
# enable_x_ray_tracing      = false

# VPC Configuration (optional - for private deployment)
# vpc_id              = "vpc-xxxxxxxxx"
# subnet_ids          = ["subnet-xxxxxxxxx", "subnet-yyyyyyyyy"]
# security_group_ids  = ["sg-xxxxxxxxx"]

# Cost Optimization
enable_intelligent_tiering = true
transition_to_ia_days     = 30
transition_to_glacier_days = 90

# Resource Tagging
tags = {
  Owner       = "DevOps Team"
  Project     = "Document Processing"
  Environment = "Development"
  CostCenter  = "Engineering"
  Purpose     = "Automated Document Analysis"
}