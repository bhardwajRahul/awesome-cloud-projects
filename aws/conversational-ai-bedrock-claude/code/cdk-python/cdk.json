{
  "app": "python3 app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/.venv"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": [
      "aws",
      "aws-cn"
    ],
    "@aws-cdk-containers/ecs-service-extensions:enableDefaultLogDriver": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLoggingConfigurationForEMRServerlessStepFunctions": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-opensearchservice:enableOpensearchMultiAzWithStandby": true
  },
  "build": "npm run build",
  "require-approval": "never",
  "bootstrapVersionSsmParameter": "/cdk-bootstrap/hnb659fds/version",
  "versionReporting": false,
  "pathMetadata": false,
  "assetMetadata": false,
  "notices": false,
  "lookups": false,
  "metadata": {
    "description": "CDK configuration for Conversational AI application using Amazon Bedrock and Claude",
    "version": "1.0.0",
    "author": "AWS Solutions",
    "tags": {
      "project": "conversational-ai",
      "technology": "bedrock",
      "model": "claude",
      "framework": "cdk-python"
    }
  },
  "parameters": {
    "ClaudeModelId": {
      "type": "String",
      "default": "anthropic.claude-3-haiku-20240307-v1:0",
      "description": "The Claude model ID to use for conversations",
      "allowedValues": [
        "anthropic.claude-3-haiku-20240307-v1:0",
        "anthropic.claude-3-sonnet-20240229-v1:0",
        "anthropic.claude-3-opus-20240229-v1:0",
        "anthropic.claude-v2:1",
        "anthropic.claude-v2",
        "anthropic.claude-instant-v1"
      ]
    },
    "MaxTokens": {
      "type": "Number",
      "default": 1000,
      "description": "Maximum number of tokens for Claude responses"
    },
    "Temperature": {
      "type": "Number",
      "default": 0.7,
      "description": "Temperature setting for Claude model (0.0-1.0)"
    }
  },
  "deployment": {
    "toolkit": {
      "stackName": "CDKToolkit"
    },
    "defaults": {
      "account": "${CDK_DEFAULT_ACCOUNT}",
      "region": "${CDK_DEFAULT_REGION}"
    }
  },
  "feature_flags": {
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true
  },
  "environments": {
    "development": {
      "account": "${CDK_DEFAULT_ACCOUNT}",
      "region": "${CDK_DEFAULT_REGION}",
      "parameters": {
        "ClaudeModelId": "anthropic.claude-3-haiku-20240307-v1:0",
        "MaxTokens": 1000,
        "Temperature": 0.7
      }
    },
    "staging": {
      "account": "${CDK_DEFAULT_ACCOUNT}",
      "region": "${CDK_DEFAULT_REGION}",
      "parameters": {
        "ClaudeModelId": "anthropic.claude-3-sonnet-20240229-v1:0",
        "MaxTokens": 2000,
        "Temperature": 0.5
      }
    },
    "production": {
      "account": "${CDK_DEFAULT_ACCOUNT}",
      "region": "${CDK_DEFAULT_REGION}",
      "parameters": {
        "ClaudeModelId": "anthropic.claude-3-opus-20240229-v1:0",
        "MaxTokens": 4000,
        "Temperature": 0.3
      }
    }
  },
  "scripts": {
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap",
    "list": "cdk list",
    "watch": "cdk watch"
  },
  "outputs": {
    "format": "json",
    "file": "cdk-outputs.json"
  }
}