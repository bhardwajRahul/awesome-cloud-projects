# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your deployment

# ================================
# Basic Configuration
# ================================

# AWS region for resource deployment
aws_region = "us-east-1"

# Environment name (dev, staging, prod)
environment = "dev"

# Project name for resource naming
project_name = "anomaly-detection"

# ================================
# Kinesis Data Stream Configuration
# ================================

# Number of shards for the Kinesis Data Stream
# More shards = higher throughput (1000 records/sec per shard)
kinesis_stream_shard_count = 2

# Data retention period in hours (24-8760 hours)
kinesis_stream_retention_period = 24

# Enable enhanced monitoring for Kinesis streams
enable_enhanced_monitoring = true

# ================================
# Flink Application Configuration
# ================================

# Parallelism level for the Flink application
# Higher parallelism = better performance but higher cost
flink_parallelism = 2

# Parallelism per KPU (Kinesis Processing Unit)
flink_parallelism_per_kpu = 1

# Checkpoint interval in milliseconds (fault tolerance)
checkpoint_interval_ms = 60000

# ================================
# Anomaly Detection Settings
# ================================

# Multiplier for anomaly detection threshold
# 3.0 means 3x the average is considered anomalous
anomaly_threshold_multiplier = 3.0

# ================================
# Notification Configuration
# ================================

# Email address for anomaly notifications (optional)
# Leave empty if you don't want email notifications
notification_email = "security-team@yourcompany.com"

# ================================
# Storage Configuration
# ================================

# Enable S3 bucket versioning
s3_bucket_versioning = true

# Enable S3 bucket encryption
enable_s3_encryption = true

# ================================
# Monitoring and Logging
# ================================

# CloudWatch log retention period in days
cloudwatch_log_retention_days = 14

# Lambda function timeout in seconds
lambda_timeout_seconds = 60

# ================================
# Additional Tags
# ================================

# Additional tags to apply to all resources
tags = {
  Owner       = "DataEngineering"
  CostCenter  = "Engineering"
  Department  = "Technology"
  Application = "FraudDetection"
}