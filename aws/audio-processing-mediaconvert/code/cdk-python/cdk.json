{
  "app": "python3 app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      "**/.pytest_cache/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-s3:grantWriteWithoutAcl": true,
    "@aws-cdk/aws-s3deployments:useNewSdkForStaticWebsite": true,
    "@aws-cdk/aws-cloudformation:stackNameParameter": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLoggingConfiguration": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codebuild:privilegedModeDefaultEnabled": false,
    "@aws-cdk/aws-synthetics:useNewStyleStackSynthesis": true,
    "@aws-cdk/aws-appsync:useArnForSourceApiAssociationIdentifier": true,
    "@aws-cdk/aws-opensearch:enableOpensearchMultiAzWithStandby": true,
    "@aws-cdk/aws-route53resolver:useNewStyleConstructs": true,
    "@aws-cdk/aws-route53:moveTargetsBetweenRoute53RecordSets": true,
    
    "_comment": "Configuration options for audio processing pipeline",
    "deployment_name": "audio-processing",
    "enable_enhanced_audio": true,
    "supported_audio_formats": [".mp3", ".wav", ".flac", ".m4a", ".aac"],
    "monitoring_enabled": true,
    "notifications_enabled": true,
    "cost_optimization": true,
    "environment": "production",
    
    "_comment": "MediaConvert specific configuration",
    "mediaconvert_config": {
      "mp3_bitrate": 128000,
      "aac_bitrate": 128000,
      "flac_sample_rate": 44100,
      "enhanced_aac_bitrate": 192000,
      "loudness_target": -23.0,
      "normalization_algorithm": "ITU_BS_1770_2"
    },
    
    "_comment": "S3 lifecycle configuration",
    "s3_lifecycle": {
      "transition_to_ia_days": 30,
      "transition_to_glacier_days": 90,
      "delete_incomplete_multipart_days": 1
    },
    
    "_comment": "Lambda configuration",
    "lambda_config": {
      "timeout_minutes": 5,
      "memory_size_mb": 512,
      "log_retention_days": 7,
      "runtime": "python3.9"
    },
    
    "_comment": "CloudWatch monitoring configuration",
    "monitoring_config": {
      "dashboard_enabled": true,
      "alarms_enabled": true,
      "metric_period_minutes": 5,
      "error_threshold": 1,
      "duration_threshold_ms": 240000
    },
    
    "_comment": "Security configuration",
    "security_config": {
      "encrypt_s3_buckets": true,
      "block_public_access": true,
      "enable_versioning": true,
      "least_privilege_iam": true
    },
    
    "_comment": "Cost optimization settings",
    "cost_optimization_config": {
      "auto_delete_objects": true,
      "lifecycle_rules_enabled": true,
      "reserved_capacity": false,
      "spot_instances": false
    },
    
    "_comment": "Development and testing configuration",
    "dev_config": {
      "enable_debug_logging": false,
      "test_mode": false,
      "dry_run": false,
      "local_development": false
    }
  }
}