# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize values for your environment

# Basic Configuration
aws_region  = "us-east-1"
environment = "production"

# Application Configuration
app_name                    = "my-feature-demo-app"
configuration_profile_name  = "feature-flags"
deployment_strategy_name    = "gradual-rollout"

# Lambda Configuration
lambda_function_name = "my-feature-flag-demo"
lambda_runtime      = "python3.9"
lambda_timeout      = 30
lambda_memory_size  = 256

# Deployment Strategy Configuration
deployment_duration_minutes = 20
final_bake_time_minutes    = 10
growth_factor              = 25

# Monitoring Configuration
cloudwatch_alarm_threshold = 5
alarm_evaluation_periods   = 2

# Feature Flag Initial Configuration
initial_feature_flags = {
  new_checkout_flow = {
    enabled             = false
    rollout_percentage  = 0
    target_audience     = "beta-users"
  }
  enhanced_search = {
    enabled          = true
    search_algorithm = "elasticsearch"
    cache_ttl        = 300
  }
  premium_features = {
    enabled      = false
    feature_list = "advanced-analytics,priority-support,premium-templates"
  }
}

# Deployment Options
enable_auto_deployment = true

# Additional Tags
tags = {
  Owner       = "platform-team"
  Project     = "feature-management"
  CostCenter  = "engineering"
  Environment = "production"
}