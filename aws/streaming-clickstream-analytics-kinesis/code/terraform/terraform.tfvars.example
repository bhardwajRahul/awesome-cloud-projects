# Example Terraform variables file for Clickstream Analytics
# Copy this file to terraform.tfvars and customize values as needed

# Basic Configuration
aws_region   = "us-east-1"
environment  = "dev"
project_name = "clickstream-analytics"

# Kinesis Configuration
kinesis_shard_count      = 2
kinesis_retention_period = 24  # hours

# Lambda Configuration
lambda_memory_size = 256  # MB
lambda_timeout     = 60   # seconds

# Event Source Mapping Configuration
batch_size                          = 100
maximum_batching_window_in_seconds  = 5

# Feature Toggles
enable_anomaly_detection    = true
enable_sns_alerts          = false
enable_cloudwatch_dashboard = true

# SNS Configuration (if enable_sns_alerts = true)
# sns_email_endpoint = "your-email@example.com"

# Storage Configuration
s3_lifecycle_expiration_days = 30
dynamodb_billing_mode       = "PAY_PER_REQUEST"

# Additional Tags
tags = {
  Owner       = "DataTeam"
  CostCenter  = "Analytics"
  Application = "ClickstreamAnalytics"
}