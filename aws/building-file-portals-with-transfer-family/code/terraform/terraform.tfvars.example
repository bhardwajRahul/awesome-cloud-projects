# ==========================================================================
# TERRAFORM VARIABLES EXAMPLE FILE
# ==========================================================================
# Copy this file to terraform.tfvars and customize the values for your
# specific deployment requirements. This file contains example values
# for all configurable parameters.
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars
#   # Edit terraform.tfvars with your values
#   terraform plan
#   terraform apply

# ==========================================================================
# GENERAL CONFIGURATION
# ==========================================================================

# Name of the project used for resource naming
project_name = "secure-file-portal"

# Environment name (dev, test, staging, prod)
environment = "dev"

# Cost center for billing and cost allocation
cost_center = "IT-Operations"

# ==========================================================================
# TRANSFER FAMILY WEB APP CONFIGURATION
# ==========================================================================

# Number of web app units (affects pricing and performance)
# 1 unit = up to 500 concurrent users
# Additional units support more concurrent users
web_app_units = 1

# ==========================================================================
# IAM IDENTITY CENTER USER CONFIGURATION
# ==========================================================================

# Whether to create a test user for demonstration
create_identity_center_user = true

# Test user configuration
test_user_name         = "portal-test-user"
test_user_display_name = "Portal Test User"
test_user_given_name   = "Portal"
test_user_family_name  = "User"
test_user_email        = "portal-test@example.com"

# ==========================================================================
# S3 BUCKET CONFIGURATION
# ==========================================================================

# Enable versioning for file history
enable_s3_versioning = true

# Enable lifecycle policies for cost optimization
s3_lifecycle_enabled = true

# Days after which to transition to different storage classes
s3_transition_to_ia_days      = 30   # Infrequent Access
s3_transition_to_glacier_days = 60   # Glacier
s3_expiration_days           = 365  # Delete old versions

# ==========================================================================
# SECURITY AND COMPLIANCE CONFIGURATION
# ==========================================================================

# Enable security features
enable_access_logging      = true
enable_encryption         = true
enable_public_access_block = true

# Optional: Use custom KMS key for encryption
# kms_key_arn = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# ==========================================================================
# MONITORING AND LOGGING CONFIGURATION
# ==========================================================================

# CloudWatch logs retention period
log_retention_days = 30

# Security monitoring configuration
enable_security_monitoring = true
failed_login_threshold     = 5

# Optional: SNS topic for security alerts
# sns_topic_arn = "arn:aws:sns:us-east-1:123456789012:security-alerts"

# ==========================================================================
# BACKUP CONFIGURATION
# ==========================================================================

# Enable AWS Backup (additional cost)
enable_backup = false

# Backup configuration (if enabled)
backup_schedule           = "cron(0 5 ? * * *)"  # Daily at 5 AM UTC
backup_retention_days     = 120
backup_cold_storage_days  = 30

# Optional: Custom KMS key for backup encryption
# backup_kms_key_arn = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# ==========================================================================
# CORS CONFIGURATION
# ==========================================================================

# CORS settings for web app access
cors_max_age_seconds = 3000
cors_allowed_methods = ["GET", "PUT", "POST", "DELETE", "HEAD"]

# ==========================================================================
# NETWORK CONFIGURATION
# ==========================================================================

# Optional: Restrict access to specific IP ranges
# Leave empty for no IP restrictions
allowed_ip_ranges = []

# Example: Restrict to office and VPN IP ranges
# allowed_ip_ranges = [
#   "203.0.113.0/24",  # Office network
#   "198.51.100.0/24"  # VPN network
# ]

# ==========================================================================
# ADVANCED CONFIGURATION
# ==========================================================================

# Enable additional AWS service integrations (additional cost and complexity)
enable_cloudtrail_integration = false
enable_config_integration     = false
enable_guardduty_integration  = false

# Optional: Custom domain configuration
# custom_domain_name   = "files.example.com"
# ssl_certificate_arn  = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# ==========================================================================
# ADDITIONAL TAGS
# ==========================================================================

# Additional tags to apply to all resources
additional_tags = {
  Department  = "IT"
  Application = "FileSharing"
  Compliance  = "SOC2"
  DataClass   = "Internal"
}

