{
  "app": "python3 app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      ".venv/**",
      ".env/**",
      "node_modules/**",
      ".git/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      "*.egg-info/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeVersionPropsAndCodePathOrHash": true,
    "@aws-cdk/aws-events:parameterNamePrefix": true,
    "@aws-cdk/core:enableStackNameDuplicates": true,
    "@aws-cdk/core:enableDiffNoFail": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-ecr-assets:dockerIgnoreSupport": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/core:enableStackTerminationProtection": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/core:bootstrapQualifier": "hnb659fds",
    "@aws-cdk/aws-lambda:checkLayerAvailability": true,
    "aws-cdk:enableDiffNoFail": true,
    "environment": "dev",
    "blockchain": {
      "networkName": "IdentityManagementNetwork",
      "frameworkVersion": "2.2",
      "edition": "STANDARD",
      "adminUsername": "admin",
      "memberName": "IdentityOrganization"
    },
    "qldb": {
      "ledgerName": "identity-ledger",
      "permissionsMode": "STANDARD",
      "deletionProtection": false
    },
    "lambda": {
      "runtime": "python3.11",
      "timeout": 30,
      "memorySize": 512,
      "retryAttempts": 2
    },
    "api": {
      "stageName": "prod",
      "throttlingRateLimit": 1000,
      "throttlingBurstLimit": 2000,
      "loggingLevel": "INFO",
      "dataTraceEnabled": true,
      "metricsEnabled": true
    },
    "dynamodb": {
      "billingMode": "PAY_PER_REQUEST",
      "pointInTimeRecovery": true,
      "encryption": "AWS_MANAGED"
    },
    "s3": {
      "versioning": true,
      "encryption": "S3_MANAGED",
      "lifecycleRules": {
        "deleteOldVersions": 30
      }
    },
    "monitoring": {
      "logRetention": 30,
      "enableXRayTracing": true,
      "enableDetailedMonitoring": true
    },
    "security": {
      "enableEncryption": true,
      "enforceSSL": true,
      "enableAccessLogging": true,
      "blockPublicAccess": true
    },
    "tags": {
      "Project": "DecentralizedIdentityManagement",
      "Purpose": "BlockchainIdentitySystem",
      "ManagedBy": "CDK",
      "CostCenter": "Innovation",
      "Owner": "SolutionsTeam"
    }
  },
  "build": {
    "commands": [
      "python -m pip install --upgrade pip",
      "python -m pip install -r requirements.txt",
      "python -m pytest tests/ -v --cov=. --cov-report=term-missing",
      "python -m black --check .",
      "python -m flake8 .",
      "python -m mypy .",
      "python -m bandit -r .",
      "python -m safety check"
    ]
  },
  "deploy": {
    "requireApproval": "never",
    "reuseAssets": true,
    "rollback": true,
    "notificationArns": [],
    "parameters": {
      "environment": "dev"
    }
  },
  "diff": {
    "fail": false,
    "securityChanges": true,
    "includeChangingSecurityGroups": true
  },
  "metadata": {
    "version": "1.0.0",
    "description": "CDK application for Decentralized Identity Management with Blockchain",
    "author": "AWS Solutions Team",
    "license": "MIT",
    "keywords": [
      "aws",
      "cdk",
      "blockchain",
      "identity",
      "hyperledger",
      "qldb",
      "decentralized"
    ]
  },
  "featureFlags": {
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "@aws-cdk/core:enableStackNameDuplicates": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:parameterNamePrefix": true
  },
  "versionReporting": false,
  "analyticsReporting": false,
  "pathMetadata": false,
  "assetMetadata": false,
  "profile": "default",
  "toolkitStackName": "CDKToolkit",
  "staging": true,
  "output": "cdk.out",
  "requireApproval": "never",
  "lookups": true,
  "bundling": {
    "stacks": ["*"],
    "buildArgs": {
      "BUILDKIT_INLINE_CACHE": "1"
    }
  }
}