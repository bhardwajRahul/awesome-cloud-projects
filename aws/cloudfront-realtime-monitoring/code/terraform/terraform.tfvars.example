# Project Configuration
project_name = "cloudfront-monitoring"
environment  = "dev"

# Additional tags
tags = {
  Owner       = "DataTeam"
  Purpose     = "RealTimeMonitoring"
  CostCenter  = "Engineering"
}

# Kinesis Configuration
kinesis_shard_count           = 2
kinesis_processed_shard_count = 1

# OpenSearch Configuration
opensearch_instance_type     = "t3.small.search"
opensearch_instance_count    = 1
opensearch_ebs_volume_size   = 20
opensearch_allowed_ips       = ["0.0.0.0/0"]  # Restrict this in production

# Lambda Configuration
lambda_memory_size     = 512
lambda_timeout         = 300
lambda_batch_size      = 100
lambda_batching_window = 5

# Kinesis Firehose Configuration
firehose_buffer_size     = 5    # MB
firehose_buffer_interval = 60   # seconds

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # Use PriceClass_All for global distribution

# CloudWatch Configuration
cloudwatch_log_retention_days = 14