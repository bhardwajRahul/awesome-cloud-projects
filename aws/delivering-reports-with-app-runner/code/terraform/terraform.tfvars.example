# =============================================================================
# Email Reports Infrastructure - Example Variables Configuration
# =============================================================================
# Copy this file to terraform.tfvars and update the values for your environment.
# This file provides example values and guidance for configuring the
# scheduled email reports infrastructure.

# -----------------------------------------------------------------------------
# Required Variables
# -----------------------------------------------------------------------------

# Email address that has been verified in Amazon SES
# This email will be used as both sender and recipient for the reports
# You must verify this email in SES before running Terraform
ses_verified_email = "your-email@example.com"

# GitHub repository URL containing your Flask application code
# Must be a public repository accessible by App Runner
# Format: https://github.com/username/repository-name
github_repository_url = "https://github.com/your-username/email-reports-app"

# -----------------------------------------------------------------------------
# Optional Variables - Scheduling Configuration
# -----------------------------------------------------------------------------

# Cron expression for when to run the email reports
# Default: Daily at 9 AM UTC
# Examples:
#   "cron(0 9 * * ? *)"     # Daily at 9 AM UTC
#   "cron(0 8 * * MON *)"   # Every Monday at 8 AM UTC
#   "cron(0 17 * * FRI *)"  # Every Friday at 5 PM UTC
#   "cron(0 12 1 * ? *)"    # First day of every month at 12 PM UTC
# schedule_expression = "cron(0 9 * * ? *)"

# Timezone for the schedule expression
# Use standard timezone names
# Examples: "UTC", "America/New_York", "Europe/London", "Asia/Tokyo"
# schedule_timezone = "UTC"

# -----------------------------------------------------------------------------
# Optional Variables - App Runner Configuration
# -----------------------------------------------------------------------------

# CPU allocation for App Runner service
# Valid values: "0.25 vCPU", "0.5 vCPU", "1 vCPU"
# app_runner_cpu = "0.25 vCPU"

# Memory allocation for App Runner service
# Valid values depend on CPU:
#   0.25 vCPU: 0.5 GB, 1 GB, 2 GB
#   0.5 vCPU:  1 GB, 2 GB, 3 GB, 4 GB
#   1 vCPU:    2 GB, 3 GB, 4 GB, 5 GB, 6 GB, 7 GB, 8 GB
# app_runner_memory = "0.5 GB"

# Path for App Runner health checks
# health_check_path = "/health"

# Interval in seconds between health checks (5-300 seconds)
# health_check_interval = 10

# Timeout in seconds for health check requests (1-20 seconds)
# health_check_timeout = 5

# Enable automatic deployments when code changes are pushed
# enable_auto_deployments = true

# Source code version type and value
# source_code_version_type = "BRANCH"
# source_code_version_value = "main"

# -----------------------------------------------------------------------------
# Optional Variables - EventBridge Scheduler Configuration
# -----------------------------------------------------------------------------

# Maximum number of retry attempts when invocation fails (0-5)
# scheduler_retry_attempts = 3

# Maximum age in seconds for events before they are discarded (60-86400)
# scheduler_max_event_age = 86400

# -----------------------------------------------------------------------------
# Optional Variables - CloudWatch Monitoring Configuration
# -----------------------------------------------------------------------------

# Period in seconds for CloudWatch alarm evaluation (60-86400, multiple of 60)
# cloudwatch_alarm_period = 3600

# Threshold for CloudWatch alarm (alert when reports generated < threshold)
# cloudwatch_alarm_threshold = 1

# Enable CloudWatch dashboard creation
# enable_cloudwatch_dashboard = true

# Enable CloudWatch alarms creation
# enable_cloudwatch_alarms = true

# -----------------------------------------------------------------------------
# Optional Variables - Tagging and Environment
# -----------------------------------------------------------------------------

# Environment name for resource tagging
# environment = "dev"

# Common tags to apply to all resources
# common_tags = {
#   Project     = "EmailReports"
#   Owner       = "your-team@company.com"
#   CostCenter  = "engineering"
#   Environment = "dev"
# }

# -----------------------------------------------------------------------------
# Usage Examples
# -----------------------------------------------------------------------------

# Example 1: Basic configuration for development environment
# ses_verified_email = "developer@mycompany.com"
# github_repository_url = "https://github.com/mycompany/email-reports"
# environment = "dev"

# Example 2: Production configuration with custom scheduling
# ses_verified_email = "reports@mycompany.com"
# github_repository_url = "https://github.com/mycompany/email-reports-prod"
# schedule_expression = "cron(0 8 * * MON-FRI *)"  # Weekdays at 8 AM UTC
# schedule_timezone = "America/New_York"
# app_runner_cpu = "0.5 vCPU"
# app_runner_memory = "1 GB"
# environment = "prod"

# Example 3: High-frequency reporting configuration
# ses_verified_email = "alerts@mycompany.com"
# github_repository_url = "https://github.com/mycompany/hourly-reports"
# schedule_expression = "cron(0 * * * ? *)"  # Every hour
# scheduler_retry_attempts = 5
# cloudwatch_alarm_threshold = 2
# environment = "monitoring"