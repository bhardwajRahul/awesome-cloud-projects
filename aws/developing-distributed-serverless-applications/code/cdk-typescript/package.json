{
  "name": "multi-region-aurora-dsql-app",
  "version": "1.0.0",
  "description": "CDK TypeScript application for multi-region Aurora DSQL setup",
  "main": "lib/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:all": "npm run deploy:primary && npm run deploy:secondary",
    "deploy:primary": "cdk deploy MultiRegionAuroraDSQLPrimary --require-approval never",
    "deploy:secondary": "cdk deploy MultiRegionAuroraDSQLSecondary --require-approval never",
    "destroy:all": "npm run destroy:secondary && npm run destroy:primary",
    "destroy:primary": "cdk destroy MultiRegionAuroraDSQLPrimary --force",
    "destroy:secondary": "cdk destroy MultiRegionAuroraDSQLSecondary --force",
    "diff": "cdk diff",
    "synth": "cdk synth"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "aws-cdk": "^2.206.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.206.0",
    "constructs": "^10.3.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "aurora",
    "dsql",
    "multi-region",
    "serverless",
    "typescript"
  ],
  "author": "AWS CDK Community",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}