# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your deployment

# =============================================================================
# REGION CONFIGURATION
# =============================================================================

primary_region   = "us-east-1"
secondary_region = "us-east-2"
witness_region   = "us-west-2"

# =============================================================================
# AURORA DSQL CONFIGURATION
# =============================================================================

cluster_name_prefix      = "multi-region-app"
enable_deletion_protection = true
database_name            = "postgres"

# =============================================================================
# LAMBDA CONFIGURATION
# =============================================================================

lambda_function_name_prefix = "multi-region-app"
lambda_runtime              = "python3.11"
lambda_timeout              = 30
lambda_memory_size          = 512
lambda_reserved_concurrency = null

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

api_gateway_name_prefix         = "multi-region-api"
api_gateway_stage_name          = "prod"
enable_api_gateway_logging      = true
api_gateway_throttle_rate_limit = 1000
api_gateway_throttle_burst_limit = 2000

# =============================================================================
# ROUTE 53 CONFIGURATION (OPTIONAL)
# =============================================================================

create_route53_health_checks = false
route53_hosted_zone_id       = ""
custom_domain_name           = ""

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

enable_cloudwatch_logs        = true
cloudwatch_log_retention_days = 7
enable_xray_tracing          = true
create_cloudwatch_alarms     = true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# VPC Configuration (optional - leave empty for Lambda in AWS managed VPC)
lambda_security_group_ids = []
lambda_subnet_ids         = []

# API Gateway Security
enable_api_key_required = false

# CORS Configuration
cors_allow_origins  = ["*"]
cors_allow_headers  = ["Content-Type", "X-Amz-Date", "Authorization", "X-Api-Key", "X-Amz-Security-Token"]
cors_allow_methods  = ["GET", "POST", "PUT", "DELETE", "OPTIONS"]

# =============================================================================
# TAGGING AND METADATA
# =============================================================================

environment  = "prod"
cost_center  = "engineering"
project_name = "multi-region-aurora-dsql"
owner        = "platform-team"

# Additional custom tags
additional_tags = {
  # "Department"     = "Engineering"
  # "BusinessUnit"   = "Platform"
  # "ContactEmail"   = "platform-team@company.com"
}

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

create_sample_data              = true
lambda_layer_arns              = []
enable_performance_insights    = false
backup_retention_period        = 7
maintenance_window             = "sun:03:00-sun:04:00"

# Additional Lambda environment variables
lambda_environment_variables = {
  # "LOG_LEVEL"         = "INFO"
  # "CUSTOM_SETTING"    = "value"
}