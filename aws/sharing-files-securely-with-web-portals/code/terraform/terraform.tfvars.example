# Example Terraform variables file for secure file sharing with AWS Transfer Family
# Copy this file to terraform.tfvars and customize the values for your deployment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# AWS region where resources will be deployed
aws_region = "us-east-1"

# Environment name for resource tagging (dev, test, staging, prod)
environment = "dev"

# Project name used for resource naming and tagging
project_name = "secure-file-sharing"

# Prefix for S3 bucket names (random suffix will be added automatically)
bucket_name_prefix = "secure-files"

# =============================================================================
# TRANSFER FAMILY CONFIGURATION
# =============================================================================

# Transfer server endpoint type: PUBLIC, VPC, or VPC_ENDPOINT
# PUBLIC: Internet-accessible endpoint (default)
# VPC: Private endpoint within your VPC
# VPC_ENDPOINT: Interface VPC endpoint for enhanced security
transfer_server_endpoint_type = "PUBLIC"

# List of protocols to enable: SFTP, FTPS, FTP
# SFTP is recommended for security
transfer_protocols = ["SFTP"]

# Test user configuration
test_user_name = "testuser"
test_user_home_directory = "/"

# =============================================================================
# SECURITY AND COMPLIANCE SETTINGS
# =============================================================================

# Enable CloudTrail for comprehensive audit logging
enable_cloudtrail = true

# CloudTrail log retention in CloudWatch (days)
cloudtrail_log_retention_days = 30

# Enable IAM Identity Center (SSO) integration
# Set to true if you have IAM Identity Center configured
enable_sso_integration = false

# Enable multi-factor authentication requirements
enable_multi_factor_auth = false

# KMS key deletion window (7-30 days)
kms_key_deletion_window = 10

# CIDR blocks allowed to access Transfer Family endpoints
# Use ["0.0.0.0/0"] for unrestricted access (not recommended for production)
# Use specific IP ranges for enhanced security
allowed_cidr_blocks = [
  "10.0.0.0/8",     # Private network range
  "172.16.0.0/12",  # Private network range
  "192.168.0.0/16"  # Private network range
]

# =============================================================================
# COST OPTIMIZATION SETTINGS
# =============================================================================

# Enable S3 lifecycle management for automatic storage class transitions
s3_lifecycle_enable = true

# Days after which to transition objects to Infrequent Access (minimum 30)
s3_transition_to_ia_days = 30

# Days after which to transition objects to Glacier (minimum 30)
s3_transition_to_glacier_days = 90

# Days to retain backup files before deletion
backup_retention_days = 365

