{
  "name": "high-performance-file-systems-cdk",
  "version": "1.0.0",
  "description": "AWS CDK TypeScript application for High-Performance File Systems with Amazon FSx",
  "bin": {
    "high-performance-file-systems-cdk": "lib/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "destroy": "chmod +x scripts/destroy.sh && ./scripts/destroy.sh",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "cdk-nag": "^2.28.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/high-performance-file-systems-cdk.git"
  },
  "keywords": [
    "aws",
    "cdk",
    "fsx",
    "lustre",
    "high-performance-computing",
    "file-systems",
    "storage"
  ],
  "author": "AWS CDK Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}