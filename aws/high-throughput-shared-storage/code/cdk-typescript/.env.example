# High-Performance File Systems CDK Configuration
# Copy this file to .env and customize the values

# AWS Configuration
CDK_DEFAULT_REGION=us-east-1
CDK_DEFAULT_ACCOUNT=123456789012

# Stack Configuration
STACK_NAME=HighPerformanceFileSystemsStack

# FSx Configuration Options
# Enable/disable ONTAP file system (requires 2+ subnets in different AZs)
FSX_ENABLE_ONTAP=true

# Lustre Configuration
LUSTRE_STORAGE_CAPACITY=1200
LUSTRE_THROUGHPUT_PER_UNIT=250
LUSTRE_DEPLOYMENT_TYPE=SCRATCH_2

# Windows Configuration  
WINDOWS_STORAGE_CAPACITY=32
WINDOWS_THROUGHPUT_CAPACITY=8

# ONTAP Configuration
ONTAP_STORAGE_CAPACITY=1024
ONTAP_THROUGHPUT_CAPACITY=256

# EC2 Configuration
EC2_INSTANCE_TYPE=c5.large

# Monitoring Configuration
ALARM_LUSTRE_THROUGHPUT_THRESHOLD=80
ALARM_WINDOWS_CPU_THRESHOLD=85
ALARM_ONTAP_STORAGE_THRESHOLD=90

# Tagging
PROJECT_TAG=FSx-Demo
ENVIRONMENT_TAG=Development
CREATED_BY_TAG=CDK