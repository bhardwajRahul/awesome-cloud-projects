# =============================================================================
# Terraform Variables Example File
# =============================================================================
# Copy this file to terraform.tfvars and customize the values for your
# specific deployment requirements. This file provides examples of all
# configurable variables for the S3 storage cost optimization solution.

# =============================================================================
# Basic Configuration
# =============================================================================
# Environment name for resource tagging and organization
environment = "demo"

# Prefix for S3 bucket name (will be appended with random suffix)
bucket_name_prefix = "storage-optimization-demo"

# AWS region for resource deployment
aws_region = "us-east-1"

# =============================================================================
# S3 Bucket Configuration
# =============================================================================
# Enable versioning for data protection
enable_versioning = false

# Allow Terraform to destroy bucket with objects (use with caution)
force_destroy = false

# Create sample data objects for testing lifecycle policies
create_sample_data = true

# =============================================================================
# Storage Analytics Configuration
# =============================================================================
# Prefix for objects to be analyzed (leave as "data/" for full analysis)
analytics_prefix = "data/"

# Prefix for storing analytics reports
analytics_reports_prefix = "analytics-reports/"

# =============================================================================
# Intelligent Tiering Configuration
# =============================================================================
# Days after which objects move to Archive Access tier
intelligent_tiering_archive_days = 1

# Days after which objects move to Deep Archive Access tier
intelligent_tiering_deep_archive_days = 90

# =============================================================================
# Lifecycle Policy Configuration
# =============================================================================
# Frequently accessed data transitions
frequently_accessed_ia_days = 30      # Days to Standard-IA
frequently_accessed_glacier_days = 90  # Days to Glacier

# Infrequently accessed data transitions
infrequently_accessed_ia_days = 1           # Days to Standard-IA
infrequently_accessed_glacier_days = 30      # Days to Glacier
infrequently_accessed_deep_archive_days = 180 # Days to Deep Archive

# Archive data transitions
archive_glacier_days = 1          # Days to Glacier
archive_deep_archive_days = 30    # Days to Deep Archive

# Cleanup incomplete multipart uploads
cleanup_incomplete_uploads_days = 7

# =============================================================================
# Budget Configuration
# =============================================================================
# Monthly budget limit for S3 storage costs (format: "XX.XX")
budget_limit_amount = "50.00"

# Percentage threshold for budget alerts (1-100)
budget_alert_threshold = 80

# Email addresses for budget alerts (REQUIRED for alerts to work)
budget_alert_emails = [
  "admin@example.com",
  "finance@example.com"
]

# Enable forecasted budget alerts in addition to actual spending
enable_forecasted_alerts = false

# =============================================================================
# Monitoring and Alerting Configuration
# =============================================================================
# Enable enhanced notifications via SNS topic
enable_enhanced_notifications = false

# Enable CloudWatch alarms for storage size monitoring
enable_storage_alarms = false

# Storage size threshold in bytes for CloudWatch alarm (1 GB = 1073741824)
storage_size_alarm_threshold = 1073741824

# =============================================================================
# Dashboard Configuration
# =============================================================================
# Period in seconds for dashboard metric widgets (86400 = 24 hours)
dashboard_widget_period = 86400

# Statistic to display in dashboard widgets
dashboard_widget_stat = "Average"

# =============================================================================
# Tagging Configuration
# =============================================================================
# Additional tags to apply to all resources
additional_tags = {
  Department  = "IT"
  Application = "DataArchive"
  Environment = "Demo"
}

# Cost center for resource allocation
cost_center = "CC-12345"

# Owner of the resources
owner = "data-team@example.com"

# Project name for organization
project = "S3-Storage-Cost-Optimization"

# =============================================================================
# Advanced Configuration (Optional)
# =============================================================================
# Enable cross-region replication for disaster recovery
enable_cross_region_replication = false
replication_destination_bucket = ""
replication_destination_region = ""

# Enable S3 access logging
enable_logging = false
logging_target_bucket = ""
logging_target_prefix = "access-logs/"

