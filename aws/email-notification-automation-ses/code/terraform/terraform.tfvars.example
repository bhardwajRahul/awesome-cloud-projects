# ============================================================================
# Required Variables
# ============================================================================

# Email configuration - REQUIRED
sender_email = "your-verified-email@example.com"

# ============================================================================
# Optional Variables (with recommended values)
# ============================================================================

# Project configuration
project_name = "email-automation"
environment  = "dev"
aws_region   = "us-east-1"

# Email settings
recipient_email         = "test-recipient@example.com"
verify_email_addresses  = true

# Lambda configuration
lambda_timeout     = 30
lambda_memory_size = 256
lambda_runtime     = "python3.11"

# EventBridge configuration
enable_eventbridge_custom_bus = true
eventbridge_bus_name          = "" # Leave empty to auto-generate

# Email template customization
email_template_name    = "NotificationTemplate"
email_template_subject = "{{subject}}"
email_template_html    = "<html><body><h2>{{title}}</h2><p>{{message}}</p><p>Timestamp: {{timestamp}}</p><p>Event Source: {{source}}</p></body></html>"
email_template_text    = "{{title}}\n\n{{message}}\n\nTimestamp: {{timestamp}}\nEvent Source: {{source}}"

# Monitoring configuration
enable_cloudwatch_alarms   = true
lambda_error_threshold     = 1
ses_bounce_threshold       = 5
alarm_evaluation_periods   = 1

# Scheduled emails
enable_scheduled_emails = true
scheduled_email_cron    = "cron(0 9 * * ? *)" # 9 AM daily

# Additional tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Application = "Email Automation"
}