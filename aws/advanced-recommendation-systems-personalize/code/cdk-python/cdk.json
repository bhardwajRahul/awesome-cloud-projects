{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      ".venv/**",
      ".env/**",
      "venv/**",
      "env/**",
      ".git/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      "**/.DS_Store",
      "**/node_modules/**",
      "dist/**",
      "build/**",
      "*.egg-info/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target": "aws-cdk-lib",
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/core:enableStackNameDuplicates": true,
    "aws-cdk:enableDiffNoFail": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizePythonVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2019": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:hardStringifySecretValue": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-s3:bucketNotificationsHandlerRolePolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeys": true,
    "@aws-cdk/aws-events:eventsTargetSubmachineRolePolicy": true,
    "personalize-recommendation-system": {
      "description": "Configuration settings for the Amazon Personalize recommendation system",
      "features": {
        "enableABTesting": true,
        "enableAutomatedRetraining": true,
        "enableBatchInference": true,
        "enableRealTimeInference": true,
        "enableFiltering": true,
        "enableMonitoring": true
      },
      "algorithms": {
        "userPersonalization": {
          "enabled": true,
          "trafficAllocation": 0.4,
          "hyperparameters": {
            "hidden_dimension": "100",
            "bptt": "32",
            "recency_mask": "true"
          }
        },
        "similarItems": {
          "enabled": true,
          "trafficAllocation": 0.2
        },
        "trendingNow": {
          "enabled": true,
          "trafficAllocation": 0.2
        },
        "popularityCount": {
          "enabled": true,
          "trafficAllocation": 0.2
        }
      },
      "infrastructure": {
        "enableEncryption": true,
        "enableVersioning": true,
        "enableLifecyclePolicies": true,
        "logRetentionDays": 30,
        "retrainingSchedule": "rate(7 days)"
      },
      "monitoring": {
        "enableDashboards": true,
        "enableAlarms": true,
        "enableMetrics": true,
        "customMetricsNamespace": "PersonalizeABTest"
      }
    }
  },
  "toolkitStackName": "CDKToolkit",
  "profile": "default",
  "requireApproval": "never",
  "lookups": false,
  "bundling": {
    "stacks": [],
    "excludeEmptyAssets": true
  },
  "featureFlags": {
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/core:enforceValidation": true,
    "@aws-cdk/core:target": "aws-cdk-lib",
    "@aws-cdk/aws-lambda:recognizeVersionProps": true
  },
  "build": {
    "commands": [
      "python -m pip install -r requirements.txt",
      "python -m pytest tests/ -v || echo 'No tests found'",
      "python -m black --check . || echo 'Code formatting check completed'",
      "python -m flake8 . || echo 'Linting completed'"
    ]
  },
  "deploy": {
    "rollback": true,
    "requireApproval": "never",
    "parameters": {},
    "outputs": "outputs.json"
  },
  "destroy": {
    "force": false,
    "excludeStacksWithDependents": false
  }
}