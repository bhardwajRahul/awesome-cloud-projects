# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values for your deployment

# =============================================================================
# REGIONAL CONFIGURATION
# =============================================================================

# Primary AWS region for Aurora PostgreSQL cluster and Lambda deployment
# Must support Aurora PostgreSQL Global Database
aws_region = "us-east-1"

# Secondary AWS region for multi-region deployment
# Must be different from primary region and support Aurora PostgreSQL Global Database
secondary_region = "us-west-2"

# =============================================================================
# ENVIRONMENT AND NAMING
# =============================================================================

# Environment name for resource tagging and naming
# Valid options: dev, test, staging, prod
environment = "dev"

# Project name for resource naming and tagging
# Must contain only lowercase letters, numbers, and hyphens
project_name = "real-time-task-mgmt"

# Random suffix for unique resource naming (leave empty for auto-generation)
# Must contain only lowercase letters and numbers
random_suffix = ""

# =============================================================================
# AURORA POSTGRESQL CONFIGURATION
# =============================================================================

# Custom name for the Aurora PostgreSQL cluster (optional)
dsql_cluster_name = ""

# Enable deletion protection for Aurora PostgreSQL cluster
# Set to true for production environments
dsql_deletion_protection = false

# Enable encryption at rest for Aurora PostgreSQL
enable_database_encryption = true

# Enable enhanced monitoring for Aurora PostgreSQL
enable_enhanced_monitoring = true

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================

# Username for Aurora PostgreSQL database connection
db_username = "postgres"

# Password for Aurora PostgreSQL database connection
# Leave empty for auto-generation of secure password
db_password = ""

# =============================================================================
# EVENTBRIDGE CONFIGURATION
# =============================================================================

# Custom name for the EventBridge event bus (optional)
event_bus_name = ""

# Number of days to retain EventBridge events
event_retention_days = 7

# Enable EventBridge event replay functionality
enable_event_replay = false

# =============================================================================
# LAMBDA CONFIGURATION
# =============================================================================

# Custom name for the task processor Lambda function (optional)
lambda_function_name = ""

# Runtime environment for Lambda function
# Valid options: python3.9, python3.10, python3.11, python3.12, python3.13
lambda_runtime = "python3.12"

# Memory allocation for Lambda function in MB
# Range: 128-10240 MB
lambda_memory_size = 512

# Timeout for Lambda function in seconds
# Range: 1-900 seconds
lambda_timeout = 60

# Instruction set architecture for Lambda function
# Valid options: x86_64, arm64
lambda_architecture = "x86_64"

# Reserved concurrency for Lambda function
# -1 for unreserved, or positive integer for reserved
lambda_reserved_concurrency = -1

# Provisioned concurrency for Lambda function
# 0 to disable, or positive integer to enable
lambda_provisioned_concurrency = 0

# =============================================================================
# CLOUDWATCH MONITORING
# =============================================================================

# Number of days to retain CloudWatch logs
# Valid options: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1096, 1827, 2192, 2557, 2922, 3288, 3653
log_retention_days = 7

# Enable CloudWatch Insights for log analysis
enable_cloudwatch_insights = true

# Create CloudWatch dashboard for monitoring
create_cloudwatch_dashboard = true

# Number of evaluation periods for CloudWatch alarms
cloudwatch_alarm_evaluation_periods = 2

# =============================================================================
# SECURITY AND COMPLIANCE
# =============================================================================

# Enable AWS X-Ray tracing for Lambda functions
enable_xray_tracing = true

# CIDR blocks allowed to access the task management API
# Default allows all traffic - restrict for production
allowed_cidr_blocks = ["0.0.0.0/0"]

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Deploy resources in multiple regions for high availability
enable_multi_region_deployment = true

# Enable dead letter queue for failed Lambda invocations
enable_dead_letter_queue = true

# Enable detailed cost allocation tags for billing analysis
enable_cost_allocation_tags = true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External event sources allowed to publish to EventBridge bus
# Example: ["external-app.company.com", "partner-system.example.org"]
external_event_sources = []

# SNS topic ARNs for task management notifications
# Example: ["arn:aws:sns:us-east-1:123456789012:task-notifications"]
notification_endpoints = []

# =============================================================================
# EXAMPLE PRODUCTION CONFIGURATION
# =============================================================================

# For production deployments, consider these settings:
# environment = "prod"
# dsql_deletion_protection = true
# lambda_memory_size = 1024
# lambda_timeout = 300
