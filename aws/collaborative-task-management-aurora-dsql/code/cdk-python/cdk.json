{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      ".venv/**",
      ".env/**",
      "node_modules/**",
      "*.egg-info/**",
      ".pytest_cache/**",
      ".coverage",
      ".mypy_cache/**",
      "build/**",
      "dist/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": [
      "aws",
      "aws-cn"
    ],
    "@aws-cdk-containers/ecs-service-extensions:enableLogging": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueTokenization": true,
    "@aws-cdk/aws-iam:standardizeServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-norththamerica-west-1:enabled": true,
    "@aws-cdk/aws-lambda:cloudWatchInsights": true,
    "@aws-cdk/aws-route53resolver:migrateToTransferDnsQueries": true,
    "@aws-cdk/aws-logs:addDefaultEncryption": true,
    
    "primary_region": "us-east-1",
    "secondary_region": "us-west-2",
    "environment": "dev",
    "cluster_suffix": "001",
    
    "task_management_config": {
      "aurora_dsql": {
        "deletion_protection": false,
        "backup_retention_period": 7,
        "preferred_backup_window": "03:00-04:00",
        "preferred_maintenance_window": "sun:04:00-sun:05:00",
        "database_name": "task_management",
        "engine": "aurora-dsql"
      },
      "eventbridge": {
        "custom_bus_name": "task-events-bus",
        "event_source_name": "task.management",
        "rule_names": {
          "creation": "task-creation-processing",
          "update": "task-update-processing", 
          "completion": "task-completion-processing"
        }
      },
      "lambda": {
        "runtime": "python3.9",
        "timeout_seconds": 60,
        "memory_size": 512,
        "reserved_concurrency": 100,
        "handler": "task_processor.lambda_handler"
      },
      "cloudwatch": {
        "log_retention_days": 7,
        "dashboard_name": "TaskManagementSystem",
        "alarm_thresholds": {
          "error_count": 5,
          "duration_ms": 30000,
          "evaluation_periods": {
            "errors": 2,
            "duration": 3
          }
        },
        "metrics": {
          "namespace": "TaskManagement",
          "custom_metrics": [
            "TasksCreated",
            "TasksUpdated", 
            "TasksCompleted",
            "TaskProcessingErrors"
          ]
        }
      },
      "iam": {
        "lambda_role_name": "TaskProcessorLambdaRole",
        "policy_name": "TaskProcessorPolicy",
        "managed_policies": [
          "service-role/AWSLambdaBasicExecutionRole"
        ]
      }
    },
    
    "deployment_config": {
      "stack_name_prefix": "TaskManagementStack",
      "tags": {
        "Project": "TaskManagement",
        "Environment": "dev",
        "ManagedBy": "CDK",
        "CostCenter": "Engineering",
        "Application": "CollaborativeTaskManagement",
        "Owner": "DevOpsTeam"
      },
      "removal_policy": "DESTROY",
      "termination_protection": false
    },
    
    "security_config": {
      "enable_xray_tracing": true,
      "encrypt_environment_variables": true,
      "enable_vpc_endpoints": false,
      "restrict_cross_account_access": true,
      "enable_cloudtrail": true
    },
    
    "monitoring_config": {
      "enable_detailed_monitoring": true,
      "enable_container_insights": true,
      "enable_performance_insights": true,
      "custom_dashboard": true,
      "alert_email": "devops-alerts@company.com"
    },
    
    "cost_optimization": {
      "enable_spot_instances": false,
      "lambda_reserved_concurrency": 100,
      "enable_s3_intelligent_tiering": true,
      "cloudwatch_log_retention": 7,
      "delete_incomplete_multipart_uploads": 7
    },
    
    "feature_flags": {
      "enable_multi_region": true,
      "enable_encryption_at_rest": true,
      "enable_encryption_in_transit": true,
      "enable_audit_logging": true,
      "enable_performance_monitoring": true,
      "enable_cost_allocation_tags": true,
      "enable_backup_automation": true
    },
    
    "development_config": {
      "enable_debug_logging": true,
      "skip_tests": false,
      "mock_external_services": false,
      "enable_local_development": true
    }
  },
  
  "toolkitStackName": "CDKToolkit-TaskManagement",
  "pathMetadata": true,
  "assetMetadata": true,
  "versionReporting": true,
  
  "bundling": {
    "stacks": ["*"],
    "exclude": [
      "node_modules/**",
      ".git/**",
      ".venv/**",
      "__pycache__/**",
      "*.pyc",
      ".DS_Store",
      ".pytest_cache/**",
      ".mypy_cache/**",
      "coverage.xml",
      ".coverage"
    ]
  },
  
  "build": {
    "commands": [
      "python -m pip install -r requirements.txt",
      "python -m pip install -e .",
      "python -m pytest tests/ -v --cov=app"
    ]
  }
}