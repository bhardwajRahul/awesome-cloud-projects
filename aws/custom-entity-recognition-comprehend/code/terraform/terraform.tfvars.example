# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values for your deployment

# Project configuration
project_name = "comprehend-custom-demo"
environment  = "dev"
aws_region   = "us-east-1"

# S3 configuration
s3_bucket_force_destroy = false
enable_versioning       = true
enable_encryption       = true

# Lambda configuration
lambda_timeout     = 300
lambda_memory_size = 256

# Step Functions configuration
step_functions_log_level = "ERROR"

# API Gateway configuration
api_gateway_stage_name           = "prod"
api_gateway_throttle_rate_limit  = 100
api_gateway_throttle_burst_limit = 200

# DynamoDB configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"

# CloudWatch configuration
enable_cloudwatch_logs_retention = true
cloudwatch_logs_retention_days   = 14
enable_api_gateway_logging       = true

# SNS notifications (optional)
enable_sns_notifications = false
notification_email       = ""  # Required if enable_sns_notifications is true

# Monitoring
enable_monitoring_dashboard = true

# Comprehend configuration
comprehend_language_code = "en"

# Custom tags
custom_tags = {
  Owner       = "your-team"
  CostCenter  = "ml-engineering"
  Application = "nlp-platform"
}