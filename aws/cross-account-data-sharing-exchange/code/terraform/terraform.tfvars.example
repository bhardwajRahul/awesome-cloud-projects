# AWS Data Exchange Cross-Account Data Sharing - Terraform Variables Example
# Copy this file to terraform.tfvars and customize for your environment

# ============================================================================
# REQUIRED VARIABLES
# ============================================================================

# AWS region where resources will be deployed
# Note: Data Exchange is not available in all regions
aws_region = "us-east-1"

# AWS account ID of the data subscriber (12-digit account ID)
# This account will receive data grants and access to shared datasets
subscriber_account_id = "123456789012"

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Custom name for the Data Exchange dataset
# If not provided, a unique name will be auto-generated
# dataset_name = "my-enterprise-analytics-data"

# Custom S3 bucket names for data provider and subscriber
# If not provided, unique names will be auto-generated
# provider_bucket_name = "my-data-exchange-provider-bucket"
# subscriber_bucket_name = "my-data-exchange-subscriber-bucket"

# Email address for SNS notifications (optional)
# If provided, you'll receive email notifications for Data Exchange events
# notification_email = "admin@example.com"

# ============================================================================
# DATA GRANT CONFIGURATION
# ============================================================================

# Expiration date and time for data grants (ISO 8601 format)
# Data grants will automatically expire at this date/time
data_grant_expires_at = "2024-12-31T23:59:59Z"

# ============================================================================
# LAMBDA FUNCTION CONFIGURATION
# ============================================================================

# Timeout in seconds for Lambda functions (1-900 seconds)
lambda_timeout = 60

# Memory allocation in MB for Lambda functions (128-10240 MB)
lambda_memory_size = 256

# ============================================================================
# AUTOMATION CONFIGURATION
# ============================================================================

# EventBridge schedule expression for automated data updates
# Examples:
#   "rate(24 hours)" - Every 24 hours
#   "rate(12 hours)" - Every 12 hours
#   "cron(0 6 * * ? *)" - Daily at 6:00 AM UTC
#   "cron(0 0 ? * MON *)" - Every Monday at midnight UTC
schedule_expression = "rate(24 hours)"

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Number of days to retain CloudWatch logs (1-3653 days)
# Valid values: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1096, 1827, 2192, 2557, 2922, 3288, 3653
log_retention_days = 30

# Enable comprehensive CloudWatch monitoring and alarms
enable_monitoring = true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable creation and upload of sample data files
# Set to false if you want to use your own data files
sample_data_enabled = true

# Enable versioning on S3 buckets for data consistency
enable_versioning = true

# ============================================================================
# RESOURCE TAGGING
# ============================================================================

# Default tags applied to all resources
default_tags = {
  Environment = "production"
  Project     = "data-exchange-cross-account-sharing"
  ManagedBy   = "terraform"
  Owner       = "data-team"
  CostCenter  = "analytics"
}

# Additional tags for specific resources
additional_tags = {
  Compliance    = "required"
  DataClass     = "internal"
  BusinessUnit  = "analytics"
}

# ============================================================================
# ADVANCED CONFIGURATION (OPTIONAL)
# ============================================================================

# Uncomment and customize these variables for advanced configurations

# Custom AWS provider configuration
# aws_profile = "my-aws-profile"
# aws_shared_credentials_file = "~/.aws/credentials"

# Custom resource naming
# resource_prefix = "myorg"
# environment = "prod"

# Advanced monitoring settings
# enable_xray_tracing = true
# enable_detailed_monitoring = true

# Security settings
# enable_bucket_notification = true
# enable_access_logging = true

