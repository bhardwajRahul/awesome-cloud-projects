# AWS Configuration
aws_region   = "us-east-1"
environment  = "dev"
project_name = "video-analysis"

# Lambda Configuration
lambda_timeout                   = 60
lambda_memory_size              = 256
aggregation_lambda_timeout      = 300
aggregation_lambda_memory_size  = 512

# DynamoDB Configuration
dynamodb_read_capacity  = 10
dynamodb_write_capacity = 10

# S3 Configuration
enable_s3_versioning           = true
enable_s3_encryption           = true
s3_lifecycle_transition_days   = 30
s3_lifecycle_expiration_days   = 0  # 0 = disabled

# Rekognition Configuration
rekognition_min_confidence = 50.0

# CloudWatch Configuration
enable_cloudwatch_logs        = true
cloudwatch_log_retention_days = 14

# Additional Tags
tags = {
  Owner       = "DataTeam"
  CostCenter  = "Analytics"
  Application = "VideoAnalysis"
}