{
  "name": "blockchain-voting-system-cdk",
  "version": "1.0.0",
  "description": "CDK TypeScript application for blockchain-based voting system with Amazon Managed Blockchain",
  "keywords": [
    "aws",
    "cdk",
    "blockchain",
    "voting",
    "ethereum",
    "lambda",
    "dynamodb",
    "typescript"
  ],
  "author": "AWS CDK Application Generator",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "diff": "cdk diff",
    "deploy": "cdk deploy --require-approval never",
    "deploy:dev": "ENVIRONMENT=dev cdk deploy --require-approval never",
    "deploy:staging": "ENVIRONMENT=staging cdk deploy --require-approval never", 
    "deploy:prod": "ENVIRONMENT=prod cdk deploy --require-approval never",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf lib/ cdk.out/ node_modules/ coverage/ .nyc_output/",
    "docs": "typedoc --out docs lib/",
    "validate": "npm run lint && npm run format:check && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "aws-cdk": "^2.133.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.133.0",
    "constructs": "^10.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-samples/blockchain-voting-system-cdk"
  },
  "bugs": {
    "url": "https://github.com/aws-samples/blockchain-voting-system-cdk/issues"
  },
  "homepage": "https://github.com/aws-samples/blockchain-voting-system-cdk#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "lib/**/*",
    "bin/**/*"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts",
      "!lib/**/*.test.ts"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "ignorePatterns": [
      "*.js",
      "*.d.ts",
      "node_modules/",
      "cdk.out/",
      "coverage/"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "cdk": {
    "version": "2.133.0",
    "context": {
      "@aws-cdk/core:enableStackNameDuplicates": "true",
      "aws-cdk:enableDiffNoFail": "true",
      "@aws-cdk/core:stackRelativeExports": "true",
      "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
      "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
      "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
      "@aws-cdk/core:target-partitions": [
        "aws",
        "aws-cn"
      ]
    }
  }
}