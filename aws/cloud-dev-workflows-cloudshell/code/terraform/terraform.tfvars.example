# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values for your environment

# AWS region for resource deployment
aws_region = "us-east-1"

# Environment name for resource tagging and naming
environment = "dev"

# Project name for resource naming
project_name = "dev-workflow"

# CodeCommit repository configuration
repository_name        = ""  # Leave empty to auto-generate
repository_description = "Demo repository for cloud-based development workflow using AWS CloudShell and CodeCommit"

# IAM user configuration
create_iam_user = false  # Set to true to create a test IAM user
iam_user_name   = ""     # Leave empty to auto-generate

# CloudShell configuration
cloudshell_timeout = 20  # Session timeout in minutes (10-120)

# Development team configuration
team_size = 5  # Expected number of developers (1-100)

# Enable versioning for development artifacts
enable_versioning = true

# Additional tags for all resources
additional_tags = {
  Owner       = "development-team"
  CostCenter  = "engineering"
  Project     = "cloud-development-workflow"
  Department  = "software-engineering"
}

