# Example Terraform variables file for EMR on EKS with Flink
# Copy this file to terraform.tfvars and customize values for your deployment

# AWS Configuration
aws_region  = "us-west-2"
environment = "dev"

# EKS Cluster Configuration
cluster_name    = "emr-flink-analytics"
cluster_version = "1.28"
emr_namespace   = "emr-flink"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
enable_nat_gateway = true
single_nat_gateway = true

# EKS Node Group Configuration
node_group_instance_types = ["m5.xlarge", "m5.2xlarge"]
node_group_min_size       = 2
node_group_max_size       = 10
node_group_desired_size   = 4
node_group_disk_size      = 100

# Kinesis Configuration
trading_stream_shard_count = 4
market_stream_shard_count  = 2
kinesis_retention_period   = 24  # hours

# S3 Lifecycle Configuration
s3_lifecycle_ia_days     = 30   # days to transition to IA
s3_lifecycle_glacier_days = 90  # days to transition to Glacier

# Feature Toggles
enable_monitoring    = true
enable_data_generator = true

# Flink Configuration
flink_operator_version = "1.7.0"
flink_image_tag       = "1.17.1-emr-7.0.0"

# Monitoring Configuration
cloudwatch_log_retention_days = 7

# Additional Tags
tags = {
  Owner       = "data-engineering-team"
  Project     = "streaming-analytics"
  CostCenter  = "engineering"
  Environment = "development"
}