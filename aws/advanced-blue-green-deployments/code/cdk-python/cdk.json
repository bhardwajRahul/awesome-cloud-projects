{
  "app": "python app.py",
  "version": "2.115.0",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      ".venv/**",
      ".env/**",
      "**/.git/**",
      "**/.pytest_cache/**",
      "**/node_modules/**",
      "**/cdk.out/**",
      "**/.DS_Store"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": [
      "aws",
      "aws-cn"
    ],
    "@aws-cdk-containers/ecs-service-extensions:enableDefaultLogDriver": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patternslibrary:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": false,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLoggingConfiguration": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-norths:disableLogGroupResourcePolicy": true,
    "@aws-cdk/aws-lambda:codeCuratorVersionUpgrade": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:auroraClusterChangeScopeOfInstanceParameterGroupWithEachParameters": true,
    "@aws-cdk/aws-appsync:useArnForSourceApiAssociationIdentifier": true,
    "@aws-cdk/aws-rds:preventRenderingDeprecatedCredentials": true,
    "@aws-cdk/aws-codepipeline-actions:useNewDefaultBranchForSourceAction": true,
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "project_name": "advanced-deployment",
    "environment": "production",
    "enable_container_insights": true,
    "enable_auto_scaling": true,
    "enable_xray_tracing": true,
    "log_retention_days": 7,
    "deployment_config": {
      "ecs": {
        "deployment_type": "LINEAR_10_PERCENT_EVERY_1_MINUTES",
        "approval_wait_time_minutes": 0,
        "termination_wait_time_minutes": 5
      },
      "lambda": {
        "deployment_type": "LINEAR_10_PERCENT_EVERY_1_MINUTE",
        "approval_wait_time_minutes": 0
      }
    },
    "monitoring": {
      "alarm_thresholds": {
        "ecs_error_rate": 10,
        "ecs_response_time": 2.0,
        "lambda_error_rate": 5,
        "lambda_duration": 5000
      },
      "evaluation_periods": {
        "ecs_error_rate": 3,
        "ecs_response_time": 5,
        "lambda_error_rate": 3,
        "lambda_duration": 5
      }
    },
    "networking": {
      "vpc_cidr": "10.0.0.0/16",
      "public_subnet_cidr_mask": 24,
      "private_subnet_cidr_mask": 24,
      "max_azs": 2
    },
    "compute": {
      "ecs": {
        "cpu": 256,
        "memory": 512,
        "desired_count": 2,
        "auto_scaling": {
          "min_capacity": 1,
          "max_capacity": 10,
          "cpu_target_utilization": 70,
          "memory_target_utilization": 80
        }
      },
      "lambda": {
        "runtime": "python3.9",
        "memory_size": 256,
        "timeout_seconds": 30
      }
    },
    "container": {
      "port": 8080,
      "health_check_path": "/health",
      "initial_image_tag": "1.0.0"
    },
    "tags": {
      "Project": "advanced-blue-green-deployments",
      "Environment": "production",
      "DeploymentPattern": "BlueGreen",
      "Owner": "SolutionsArchitecture",
      "CostCenter": "Engineering",
      "Compliance": "SOC2"
    }
  },
  "build": {
    "cache": true
  },
  "diff": {
    "changeSet": true,
    "fail": true
  },
  "deploy": {
    "requireApproval": "broadening",
    "rollback": true,
    "hotswap": false,
    "hotswapFallback": true
  },
  "destroy": {
    "requireApproval": "never"
  },
  "bundling": {
    "stacks": [],
    "enabled": false
  },
  "featureFlags": {
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true
  },
  "metadata": {
    "aws:cdk:version": "2.115.0",
    "aws:cdk:path": "AdvancedBlueGreenDeploymentStack",
    "description": "Advanced Blue-Green Deployments with ECS, Lambda, and CodeDeploy",
    "author": "AWS Solutions Architecture Team",
    "license": "Apache-2.0",
    "repository": "https://github.com/aws-samples/advanced-blue-green-deployments",
    "documentation": "https://docs.aws.amazon.com/cdk/",
    "keywords": [
      "aws",
      "cdk",
      "blue-green",
      "deployment",
      "ecs",
      "lambda",
      "codedeploy",
      "devops"
    ]
  }
}