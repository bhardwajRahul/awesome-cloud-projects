# =============================================================================
# Terraform Variables Example File
# Copy this file to terraform.tfvars and customize for your environment
# =============================================================================

# Core Configuration
project_name = "data-viz-pipeline"
environment  = "dev"
aws_region   = "us-east-1"

# =============================================================================
# S3 Configuration
# =============================================================================

# Enable S3 bucket versioning for data protection
enable_s3_versioning = true

# Lifecycle management for cost optimization
s3_lifecycle_enabled = true
s3_lifecycle_transition_days = 30
s3_lifecycle_expiration_days = 365

# Intelligent Tiering for automatic cost optimization
enable_intelligent_tiering = true

# =============================================================================
# AWS Glue Configuration
# =============================================================================

# Schedule for automatic data discovery (cron format)
# Default: Daily at 2 AM UTC
glue_crawler_schedule = "cron(0 2 * * ? *)"

# ETL job configuration
glue_job_timeout = 60
glue_job_max_retries = 1
glue_version = "4.0"

# =============================================================================
# Amazon Athena Configuration
# =============================================================================

# Enable encryption for Athena query results
athena_query_result_encryption = true

# Force workgroup configuration for all queries
athena_workgroup_force_configuration = true

# Query cost control - 10GB scan limit per query
athena_bytes_scanned_cutoff = 10737418240

# =============================================================================
# AWS Lambda Configuration
# =============================================================================

# Lambda runtime and resource allocation
lambda_runtime = "nodejs18.x"
lambda_timeout = 300
lambda_memory_size = 256

# =============================================================================
# Sample Data Configuration
# =============================================================================

# Upload sample data for testing (set to false for production)
upload_sample_data = true

# =============================================================================
# Security Configuration
# =============================================================================

# Enable KMS encryption for enhanced security
enable_kms_encryption = true

# Enable CloudTrail for API call logging (additional costs)
enable_cloudtrail_logging = false

# =============================================================================
# Monitoring and Alerting
# =============================================================================

# Enable CloudWatch alarms for monitoring
enable_cloudwatch_alarms = true

# Email address for notifications (leave empty to disable email notifications)
notification_email = ""
# notification_email = "admin@yourcompany.com"

