# Example Terraform variables for content caching strategies infrastructure
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region
environment = "dev"       # Options: dev, staging, prod

# Project Configuration
project_name = "cache-demo"  # Must be lowercase, alphanumeric, and hyphens only

# ElastiCache Configuration
elasticache_node_type = "cache.t3.micro"  # For production, consider cache.r6g.large or higher
elasticache_port = 6379                   # Standard Redis port
elasticache_ttl = 300                     # Cache TTL in seconds (5 minutes)

# Lambda Configuration
lambda_timeout = 30      # Function timeout in seconds
lambda_memory_size = 128 # Memory allocation in MB

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # Options: PriceClass_All, PriceClass_200, PriceClass_100
api_cache_ttl_default = 60                 # Default TTL for API responses (seconds)
api_cache_ttl_max = 300                    # Maximum TTL for API responses (seconds)

# Monitoring Configuration
enable_cloudwatch_alarms = true    # Enable CloudWatch alarms
cache_hit_ratio_threshold = 80     # Alert when cache hit ratio drops below this percentage

# Security Configuration
enable_deletion_protection = false  # Set to true for production environments

