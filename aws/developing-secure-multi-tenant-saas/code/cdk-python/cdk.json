{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/.venv"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizePlatformProps": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-lambda:baseEnvironmentVariables": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeysDefaultValueToFalse": true,
    "@aws-cdk/aws-route53:deleteHostedZone": true,
    "@aws-cdk/aws-s3:enforceSSL": true,
    "@aws-cdk/aws-ecs:reduceRunTaskPermissions": true,
    "@aws-cdk/aws-backup:enableBackupVaultEvents": true,
    "@aws-cdk/aws-lambda-nodejs:alwaysAddCorrelationIdEnvVar": true,
    
    "app_name": "multitenant-saas",
    "environment": "dev",
    "enable_monitoring": true,
    "enable_xray": true,
    
    "tenant_isolation_mode": "shared-tables",
    "data_residency_region": null,
    "enable_cross_region_backup": false,
    
    "cognito_mfa_required": false,
    "cognito_password_policy": {
      "min_length": 12,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_symbols": true
    },
    
    "dynamodb_backup_enabled": true,
    "dynamodb_point_in_time_recovery": true,
    "dynamodb_billing_mode": "PAY_PER_REQUEST",
    
    "lambda_memory_size": 512,
    "lambda_timeout_seconds": 30,
    "lambda_log_retention_days": 30,
    "lambda_tracing_enabled": true,
    
    "appsync_log_level": "ALL",
    "appsync_xray_enabled": true,
    "appsync_caching_enabled": false,
    
    "s3_versioning_enabled": true,
    "s3_lifecycle_rules_enabled": true,
    "s3_encryption_enabled": true,
    
    "cloudwatch_detailed_monitoring": true,
    "cloudwatch_dashboard_enabled": true,
    "cloudwatch_alarms_enabled": true,
    
    "amplify_platform": "WEB",
    "amplify_auto_build": true,
    "amplify_branch_protection": false,
    
    "tags": {
      "Project": "MultiTenantSaaS",
      "Environment": "Development",
      "ManagedBy": "CDK",
      "Purpose": "SaaS Platform",
      "Owner": "Platform Team",
      "CostCenter": "Engineering",
      "Compliance": "SOC2",
      "DataClassification": "Confidential"
    },
    
    "feature_flags": {
      "enable_tenant_metrics": true,
      "enable_audit_logging": true,
      "enable_data_encryption": true,
      "enable_backup_retention": true,
      "enable_cost_allocation_tags": true,
      "enable_security_monitoring": true,
      "enable_performance_monitoring": true,
      "enable_custom_domains": false,
      "enable_multi_region": false,
      "enable_disaster_recovery": false
    },
    
    "environments": {
      "dev": {
        "account": null,
        "region": "us-east-1",
        "stage": "development",
        "retention_policy": "DESTROY",
        "deletion_protection": false,
        "min_capacity": 1,
        "max_capacity": 10
      },
      "staging": {
        "account": null,
        "region": "us-east-1", 
        "stage": "staging",
        "retention_policy": "RETAIN",
        "deletion_protection": true,
        "min_capacity": 2,
        "max_capacity": 50
      },
      "prod": {
        "account": null,
        "region": "us-east-1",
        "stage": "production",
        "retention_policy": "RETAIN",
        "deletion_protection": true,
        "min_capacity": 5,
        "max_capacity": 100
      }
    },
    
    "security": {
      "enforce_https": true,
      "enable_waf": false,
      "enable_shield": false,
      "vpc_enabled": false,
      "nat_gateways": 0,
      "availability_zones": 2
    },
    
    "cost_optimization": {
      "use_spot_instances": false,
      "enable_savings_plans": false,
      "enable_reserved_instances": false,
      "enable_lifecycle_policies": true,
      "enable_cost_budgets": false
    }
  }
}