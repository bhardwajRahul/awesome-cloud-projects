# Example Terraform variables file for EC2 Hibernation Cost Optimization
# Copy this file to terraform.tfvars and customize the values

# Core Configuration
aws_region  = "us-east-1"
environment = "dev"

# EC2 Instance Configuration
instance_type    = "m5.large"     # Must support hibernation
ebs_volume_size  = 30             # Must be >= RAM size for hibernation
ebs_volume_type  = "gp3"          # Recommended for cost optimization

# Resource Naming (optional - will be auto-generated if not provided)
key_pair_name  = ""               # Leave empty to auto-generate
instance_name  = ""               # Leave empty to auto-generate
name_prefix    = "hibernate-demo" # Prefix for all resources

# CloudWatch Monitoring
enable_detailed_monitoring = true
cpu_threshold             = 10    # CPU % threshold for low utilization alarm
cpu_evaluation_periods    = 6     # Number of periods to evaluate
cpu_alarm_period          = 300   # Period in seconds (5 minutes)

# SNS Notifications
notification_email = ""           # Your email address for notifications
sns_topic_name    = ""           # Leave empty to auto-generate

# VPC Configuration (optional - will use default VPC if not provided)
vpc_id    = ""                   # Leave empty to use default VPC
subnet_id = ""                   # Leave empty to use default subnet

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # CIDR blocks allowed SSH access
                                      # Consider restricting to your IP range

# Additional Tags
additional_tags = {
  Owner       = "YourName"
  Department  = "IT"
  CostCenter  = "12345"
  Purpose     = "Cost-Optimization-Demo"
}

# Example configurations for different environments:

# Development Environment
# environment = "dev"
# instance_type = "t3.medium"
# ebs_volume_size = 20
# enable_detailed_monitoring = false

# Staging Environment
# environment = "staging"
# instance_type = "m5.large"
# ebs_volume_size = 30
# enable_detailed_monitoring = true

# Production Environment (hibernation typically not used in production)
# environment = "prod"
# instance_type = "m5.xlarge"
# ebs_volume_size = 50
# enable_detailed_monitoring = true