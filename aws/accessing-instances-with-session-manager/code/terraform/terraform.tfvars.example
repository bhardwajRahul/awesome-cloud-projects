# Example Terraform variables file for Session Manager secure access
# Copy this file to terraform.tfvars and customize the values

# Environment configuration
environment = "dev"
project_name = "session-manager-demo"

# EC2 instance configuration
instance_type = "t3.micro"  # Use t3.small or larger for production workloads

# Logging configuration
enable_logging = true
log_retention_days = 30
s3_log_prefix = "session-logs/"

# Security configuration
enable_cloudtrail_logging = true
kms_key_deletion_window = 7

# Network configuration (optional - uses default VPC/subnet if not specified)
# vpc_id = "vpc-12345678"
# subnet_id = "subnet-12345678"

# IAM configuration
allowed_users = [
  # "arn:aws:iam::123456789012:user/alice",
  # "arn:aws:iam::123456789012:user/bob",
  # "arn:aws:iam::123456789012:role/AdminRole"
]

# Instance tags
instance_tags = {
  Purpose = "SessionManagerTesting"
  Owner = "DevOpsTeam"
  Department = "IT"
  CostCenter = "12345"
}

