# Terraform Variables Example File
# Copy this file to terraform.tfvars and customize the values for your environment

# Core Project Configuration
project_name = "textract-analysis"
environment  = "dev"
aws_region   = "us-east-1"

# S3 Configuration
# Leave bucket names empty for auto-generation with unique suffixes
input_bucket_name  = ""
output_bucket_name = ""

# Enable S3 features
s3_bucket_versioning = true
s3_lifecycle_enabled = true
s3_lifecycle_days    = 30

# DynamoDB Configuration
# Use PAY_PER_REQUEST for variable workloads, PROVISIONED for predictable workloads
dynamodb_billing_mode   = "PAY_PER_REQUEST"
dynamodb_read_capacity  = 5  # Only used with PROVISIONED billing
dynamodb_write_capacity = 5  # Only used with PROVISIONED billing

# Lambda Configuration
lambda_runtime             = "python3.9"
lambda_timeout             = 300     # 5 minutes
lambda_memory_size         = 512     # MB
lambda_log_retention_days  = 14      # days

# Step Functions Configuration
step_functions_log_level = "ERROR"

# SNS Configuration
# Provide an email address to receive notifications (optional)
sns_email_endpoint = "your-email@example.com"
sns_email_protocol = "email"

# Security Configuration
enable_s3_encryption       = true
enable_dynamodb_encryption = true
enable_cloudtrail          = false  # Set to true for production environments

# Monitoring Configuration
enable_enhanced_monitoring  = true
cloudwatch_metric_namespace = "TextractAnalysis"

# Additional Tags
additional_tags = {
  Owner       = "DataTeam"
  CostCenter  = "Analytics"
  Purpose     = "DocumentProcessing"
}

