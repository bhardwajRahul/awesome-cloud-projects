# =====================================================
# Example Terraform Variables Configuration
# =====================================================
# Copy this file to terraform.tfvars and customize the values
# for your specific deployment requirements.
#
# Usage: cp terraform.tfvars.example terraform.tfvars

# =====================================================
# General Configuration
# =====================================================

# Environment for this deployment
environment = "production"

# Common tags applied to all resources
common_tags = {
  Project     = "BusinessNotifications"
  ManagedBy   = "Terraform"
  Purpose     = "AutomatedNotifications"
  CostCenter  = "IT-Operations"
  Owner       = "your-team@company.com"
  Environment = "production"
}

# =====================================================
# SNS Topic Configuration
# =====================================================

# Prefix for SNS topic name (will have random suffix appended)
topic_name_prefix = "business-notifications"

# Display name shown in AWS Console
sns_display_name = "Business Notifications"

# Email addresses for notification delivery
# IMPORTANT: Recipients will receive confirmation emails that must be clicked
notification_emails = [
  "manager@company.com",
  "team-lead@company.com",
  "notifications@company.com"
]

# SMS phone numbers for urgent notifications (optional)
# Format: +1234567890 (include country code)
notification_phone_numbers = [
  # "+15551234567",
  # "+15559876543"
]

# Enable SQS integration for system processing
enable_sqs_integration = false

# Enable dead letter queue for failed deliveries
enable_dlq = true

# =====================================================
# EventBridge Scheduler Configuration
# =====================================================

# Prefix for schedule group name
schedule_group_prefix = "business-schedules"

# Prefix for IAM role name
scheduler_role_prefix = "eventbridge-scheduler-role"

# Enable/disable all schedules (useful for maintenance)
schedules_enabled = true

# Timezone for all schedules
# Options: America/New_York, America/Chicago, America/Denver, America/Los_Angeles, etc.
schedule_timezone = "America/New_York"

# =====================================================
# Schedule Expressions (Cron Format)
# =====================================================

# Daily business report - 9 AM on weekdays
# Format: cron(minute hour day month day-of-week year)
daily_schedule_expression = "cron(0 9 ? * MON-FRI *)"

# Weekly summary - Monday 8 AM
weekly_schedule_expression = "cron(0 8 ? * MON *)"

# Monthly reminder - 1st of each month 10 AM
monthly_schedule_expression = "cron(0 10 1 * ? *)"

# =====================================================
# Flexible Time Windows (Minutes)
# =====================================================

# Time window for daily notifications (1-60 minutes)
daily_flexible_window_minutes = 15

# Time window for weekly notifications (1-60 minutes)
weekly_flexible_window_minutes = 30

# =====================================================
# Notification Message Content
# =====================================================

# Daily notification content
daily_notification_subject = "Daily Business Report - Ready for Review"
daily_notification_message = "Good morning! Your daily business report is ready for review. Please check the dashboard for key metrics including sales performance, customer engagement, and operational status. Have a great day!"

# Weekly notification content
weekly_notification_subject = "Weekly Business Summary - New Week Ahead"
weekly_notification_message = "Good Monday morning! Here is your weekly business summary with key achievements from last week and priorities for the week ahead. Review the quarterly goals progress and upcoming milestones. Let us make this week productive!"

# Monthly notification content
monthly_notification_subject = "Monthly Business Reminder - Important Tasks"
monthly_notification_message = "Welcome to a new month! This is your monthly reminder for important business tasks: review financial reports, update quarterly projections, conduct team performance reviews, and assess goal progress. Schedule time for strategic planning and process improvements."

# =====================================================
# CloudWatch Logging Configuration
# =====================================================

# Enable CloudWatch logging for debugging and monitoring
enable_cloudwatch_logs = true

# Log retention period in days
# Options: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1096, 1827, 2192, 2557, 2922, 3288, 3653
log_retention_days = 14

# =====================================================
# Advanced Configuration (Optional)
# =====================================================

# Custom message attributes for SNS filtering
custom_message_attributes = {
  # priority = "normal"
  # department = "operations"
}

# Enable server-side encryption for SNS messages
enable_message_encryption = true

# Custom KMS key ID for encryption (optional - uses AWS managed key if not specified)
# kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# Custom email filter policy (optional)
# email_filter_policy = {
#   priority = ["high", "normal"]
# }

# =====================================================
# Example Alternative Configurations
# =====================================================

# Configuration for Development Environment:
# environment = "development"
# schedules_enabled = false  # Disable schedules in dev
# enable_cloudwatch_logs = false  # Reduce costs in dev
# notification_emails = ["developer@company.com"]

# Configuration for Testing Environment:
# environment = "staging"
# daily_schedule_expression = "cron(0 10 ? * MON-FRI *)"  # Later start time
# enable_sqs_integration = true  # Test SQS integration
# log_retention_days = 7  # Shorter retention for testing

# Configuration for High-Volume Production:
# enable_sqs_integration = true
# enable_dlq = true
# log_retention_days = 30
# enable_message_encryption = true

# =====================================================
# Regional Considerations
# =====================================================

# For multi-region deployments, consider:
# - Different timezone settings per region
# - Regional compliance requirements
# - Local business hours adjustments
# - Language localization for messages

# Example for US West Coast:
# schedule_timezone = "America/Los_Angeles"
# daily_schedule_expression = "cron(0 9 ? * MON-FRI *)"  # 9 AM Pacific

# Example for Europe:
# schedule_timezone = "Europe/London"
# daily_schedule_expression = "cron(0 8 ? * MON-FRI *)"  # 8 AM GMT

# =====================================================
# Cost Optimization Tips
# =====================================================

# To minimize costs:
# 1. Set enable_cloudwatch_logs = false if detailed logging not needed
# 2. Use shorter log_retention_days for non-production environments
# 3. Disable SMS notifications if not required (SMS has per-message costs)
# 4. Use flexible time windows to optimize scheduler efficiency