{
  "name": "aurora-dsql-disaster-recovery",
  "version": "1.0.0",
  "description": "CDK TypeScript application for Aurora DSQL multi-region disaster recovery with EventBridge monitoring",
  "bin": {
    "aurora-dsql-dr": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:primary": "cdk deploy AuroraDsqlDrPrimary --require-approval never",
    "deploy:secondary": "cdk deploy AuroraDsqlDrSecondary --require-approval never",
    "destroy": "cdk destroy --all --force",
    "destroy:primary": "cdk destroy AuroraDsqlDrPrimary --force",
    "destroy:secondary": "cdk destroy AuroraDsqlDrSecondary --force",
    "diff": "cdk diff --all",
    "synth": "cdk synth --all",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.113.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aurora-dsql-disaster-recovery.git"
  },
  "keywords": [
    "aws",
    "cdk",
    "aurora-dsql",
    "disaster-recovery",
    "multi-region",
    "eventbridge",
    "lambda",
    "cloudwatch",
    "sns",
    "monitoring",
    "high-availability"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "cdk": {
    "version": "^2.113.0",
    "context": {
      "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
      "@aws-cdk/core:checkSecretUsage": true,
      "@aws-cdk/core:target": "es2022",
      "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
      "@aws-cdk/assertions:recognizeLayerVersion": true,
      "@aws-cdk/core:stackRelativeExports": true,
      "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
      "@aws-cdk/aws-lambda:recognizeVersionProps": true,
      "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
      "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
      "@aws-cdk/core:enablePartitionLiterals": true,
      "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
      "@aws-cdk/aws-iam:minimizePolicies": true,
      "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
      "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
      "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
      "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
      "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
      "@aws-cdk/aws-kms:aliasNameRef": true,
      "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
      "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
      "@aws-cdk/aws-opensearchservice:enableLogging": true,
      "@aws-cdk/aws-redshift:columnId": true,
      "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
      "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
      "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
      "@aws-cdk/core:enableStructuredLogging": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}