# Example Terraform variables file for CloudFront and S3 CDN
# Copy this file to terraform.tfvars and customize values as needed

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "cdn-content"

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # Options: PriceClass_All, PriceClass_200, PriceClass_100
cloudfront_default_ttl = 86400             # 24 hours in seconds
cloudfront_max_ttl = 31536000              # 1 year in seconds
cloudfront_min_ttl = 0                     # Minimum cache time

# Features Configuration
enable_cloudfront_logging = true
enable_cloudwatch_monitoring = true
enable_ipv6 = true
enable_compression = true

# Monitoring Thresholds
error_rate_threshold = 5.0        # Percentage of 4xx errors to trigger alarm
origin_latency_threshold = 1000   # Milliseconds of origin latency to trigger alarm

# Error Page Configuration
custom_error_response_code = 200
custom_error_response_path = "/index.html"

# Additional Tags
tags = {
  Owner = "DevOps Team"
  CostCenter = "Engineering"
  Backup = "Required"
}