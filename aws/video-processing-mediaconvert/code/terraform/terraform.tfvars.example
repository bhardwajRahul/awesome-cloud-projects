# Example Terraform Variables for Video Processing Workflow
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "video-processing"

# S3 Configuration
s3_source_bucket_name = "video-source"
s3_output_bucket_name = "video-output"
s3_versioning_enabled = false
s3_lifecycle_enabled = true
s3_lifecycle_transition_days = 30
s3_lifecycle_expiration_days = 0  # Set to 0 to disable expiration

# Lambda Configuration
lambda_function_name = "video-processor"
lambda_timeout = 60
lambda_memory_size = 256

# MediaConvert Settings
mediaconvert_bitrate = 2000000    # 2 Mbps
mediaconvert_framerate = 30       # 30 fps
mediaconvert_width = 1280         # 720p width
mediaconvert_height = 720         # 720p height

# Video File Extensions to Process
video_file_extensions = ["mp4", "mov", "avi", "mkv", "m4v"]

# CloudFront Configuration
cloudfront_enabled = true
cloudfront_price_class = "PriceClass_100"  # Use edge locations in North America and Europe

# EventBridge and Completion Handler
enable_completion_handler = true

# Additional Resource Tags
tags = {
  Owner = "DevOps Team"
  CostCenter = "Engineering"
  Project = "Video Processing Pipeline"
}

