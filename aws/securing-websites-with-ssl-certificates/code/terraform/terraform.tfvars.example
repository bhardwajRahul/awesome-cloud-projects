# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your deployment

# REQUIRED: Your domain name (must be registered and have Route 53 hosted zone)
domain_name = "example.com"

# Optional: Subdomain prefix (default: www)
subdomain_name = "www"

# Optional: AWS region for S3 bucket (ACM certificate will always be in us-east-1)
aws_region = "us-east-1"

# Optional: S3 bucket name prefix (random suffix will be added)
bucket_name_prefix = "my-static-website"

# Optional: Route 53 hosted zone ID (if not provided, will be looked up automatically)
# hosted_zone_id = "Z1D633PJN98FT9"

# Optional: Enable S3 bucket versioning (recommended for production)
enable_versioning = true

# Optional: CloudFront price class (affects cost and global reach)
# PriceClass_100: North America, Europe
# PriceClass_200: North America, Europe, Asia, Middle East, Africa
# PriceClass_All: All edge locations globally
price_class = "PriceClass_100"

# Optional: Default files for website
default_root_object = "index.html"
error_document = "error.html"

# Optional: SSL/TLS configuration
minimum_protocol_version = "TLSv1.2_2021"
certificate_validation_method = "DNS"

# Optional: CloudFront caching configuration (in seconds)
cloudfront_cache_ttl = 86400  # 24 hours

# Optional: Performance settings
enable_compression = true
enable_ipv6 = true

# Optional: Custom tags for all resources
tags = {
  Project     = "MyStaticWebsite"
  Environment = "Production"
  Owner       = "DevOps Team"
  ManagedBy   = "Terraform"
  CostCenter  = "WebDevelopment"
}