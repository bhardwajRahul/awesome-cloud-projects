# AWS Configuration
aws_region = "us-east-1"
environment = "dev"  # Options: dev, staging, prod

# Security Automation Configuration
automation_prefix = "security-automation"

# Lambda Configuration
lambda_timeout = 300
lambda_memory_size = 512
lambda_runtime = "python3.9"

# Security Hub Configuration
security_hub_enabled = true
enable_automation_rules = true
enable_custom_actions = true

# EventBridge Configuration
event_rule_state = "ENABLED"  # Options: ENABLED, DISABLED
finding_severities = ["HIGH", "CRITICAL", "MEDIUM"]

# Notification Configuration
notification_email = ""  # Set to your email address for notifications

# SNS Configuration
sns_delivery_policy = {
  min_delay_target = 5
  max_delay_target = 300
  num_retries = 10
}

# Dead Letter Queue Configuration
dlq_message_retention_period = 1209600  # 14 days in seconds
dlq_visibility_timeout = 300

# CloudWatch Configuration
enable_cloudwatch_monitoring = true
cloudwatch_alarm_evaluation_periods = 1
cloudwatch_alarm_threshold = 1

# Systems Manager Configuration
enable_ssm_automation = true

# Additional Tags (optional)
additional_tags = {
  Owner = "SecurityTeam"
  CostCenter = "IT-Security"
  Project = "SecurityAutomation"
}