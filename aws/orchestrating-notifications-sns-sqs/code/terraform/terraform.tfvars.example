# AWS Configuration
aws_region = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "notification-system"
random_suffix = "" # Leave empty to generate random suffix

# SNS Configuration
sns_topic_name = "notifications"

# SQS Configuration
sqs_visibility_timeout = 300
sqs_message_retention_period = 1209600 # 14 days
sqs_max_receive_count = 3

# Lambda Configuration
lambda_timeout = 300
lambda_memory_size = 256
lambda_runtime = "python3.9"

# Event Source Mapping Configuration
event_source_batch_size = 10
event_source_max_batching_window = 5

# Notification Configuration
test_email = "your-email@example.com"
webhook_url = "https://httpbin.org/post"

# Additional Tags
additional_tags = {
  Owner = "DevOps Team"
  CostCenter = "Engineering"
}