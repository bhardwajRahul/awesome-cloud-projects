{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/.venv",
      "**/.env",
      "**/node_modules",
      "**/*.pyc",
      ".git/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      "**/.DS_Store"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": ["aws", "aws-cn"],
    "@aws-cdk-containers/ecs-service-extensions:enableDefaultLogDriver": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-norths:enablePartitionLiterals": true,
    "@aws-cdk/aws-events:eventsTargetQueueSameAccount": true,
    "@aws-cdk/aws-events-targets:logGroupCreateLogStream": true,
    "@aws-cdk/aws-lambda:codePipelineInlineCode": true,
    "@aws-cdk/aws-lambda-nodejs:useLatestRuntimeVersion": true,
    
    "_comment": "Environment-specific configuration",
    "environment": "dev",
    "testEmail": "test@example.com",
    "createPublisher": true,
    
    "_comment": "Feature flags for CDK v2 migration",
    "newStyleStackSynthesis": true,
    "stackRelativeExports": true,
    
    "_comment": "Security and compliance settings",
    "enableLogging": true,
    "encryptionAtRest": true,
    "encryptionInTransit": true,
    "minimumTlsVersion": "1.2",
    
    "_comment": "Cost optimization settings",
    "enableCostOptimization": true,
    "reservedConcurrency": false,
    "provisionedConcurrency": false,
    
    "_comment": "Monitoring and observability",
    "enableXRayTracing": true,
    "enableDetailedMonitoring": true,
    "logRetentionDays": 7,
    
    "_comment": "Notification system specific settings",
    "notificationSettings": {
      "maxBatchSize": 10,
      "maxBatchingWindowSeconds": 5,
      "visibilityTimeoutMinutes": 5,
      "messageRetentionDays": 14,
      "maxReceiveCount": 3,
      "enableMessageFiltering": true,
      "enableRawMessageDelivery": true
    },
    
    "_comment": "Lambda function settings",
    "lambdaSettings": {
      "runtime": "python3.9",
      "timeoutMinutes": 5,
      "memorySize": 128,
      "architecture": "x86_64",
      "enableInsights": true,
      "enableActiveTracing": true
    },
    
    "_comment": "Development and testing settings",
    "developmentMode": false,
    "enableTestResources": true,
    "enableMockServices": false,
    "enableIntegrationTests": true,
    
    "_comment": "Deployment settings",
    "deploymentSettings": {
      "autoRollback": true,
      "enableBlueGreenDeployment": false,
      "enableCanaryDeployment": false,
      "enableRolloutConfig": false
    },
    
    "_comment": "Tagging strategy",
    "defaultTags": {
      "Project": "ServerlessNotificationSystem",
      "Owner": "DevOps",
      "CostCenter": "Engineering",
      "Environment": "dev",
      "ManagedBy": "CDK",
      "Version": "1.0.0"
    }
  }
}