# ==============================================================================
# Example Terraform Variables Configuration
# ==============================================================================
# Copy this file to terraform.tfvars and customize the values for your deployment
# ==============================================================================

# ------------------------------------------------------------------------------
# General Configuration
# ------------------------------------------------------------------------------

# Name of the AppSync GraphQL API
api_name = "my-blog-api"

# Name of the DynamoDB table for blog posts
table_name = "MyBlogPosts"

# Name of the Cognito User Pool
user_pool_name = "MyBlogUserPool"

# Deployment environment
environment = "dev"

# Resource tags for cost tracking and management
tags = {
  Environment = "development"
  Project     = "my-blog-api"
  Owner       = "my-team"
  Department  = "engineering"
  CostCenter  = "12345"
}

# ------------------------------------------------------------------------------
# DynamoDB Configuration
# ------------------------------------------------------------------------------

# DynamoDB billing mode: "PAY_PER_REQUEST" or "PROVISIONED"
# PAY_PER_REQUEST is recommended for unpredictable workloads
# PROVISIONED is recommended for predictable workloads
dynamodb_billing_mode = "PAY_PER_REQUEST"

# DynamoDB capacity settings (only used if billing_mode is "PROVISIONED")
dynamodb_read_capacity = 5
dynamodb_write_capacity = 5
dynamodb_gsi_read_capacity = 5
dynamodb_gsi_write_capacity = 5

# Security settings
enable_point_in_time_recovery = true
enable_encryption = true

# ------------------------------------------------------------------------------
# AppSync Configuration
# ------------------------------------------------------------------------------

# Enable API key authentication for testing
# Set to false for production deployments
enable_api_key_auth = true

# API key expiration (Unix timestamp)
# Leave null for default expiration (7 days)
api_key_expires = null

# Logging level: "NONE", "ERROR", "ALL"
# Use "ERROR" for production, "ALL" for debugging
log_level = "ERROR"

# Enable X-Ray tracing for performance monitoring
enable_xray_tracing = false

# ------------------------------------------------------------------------------
# Test User Configuration
# ------------------------------------------------------------------------------

# Create a test user for authentication testing
# Set to false for production deployments
create_test_user = true

# Test user credentials
test_username = "testuser@example.com"
test_password = "MySecurePassword123!"

# ------------------------------------------------------------------------------
# Advanced Configuration
# ------------------------------------------------------------------------------

# Enable AppSync caching (additional costs apply)
enable_caching = false

# Cache TTL in seconds (only applies if caching is enabled)
cache_ttl = 300

# Enable detailed CloudWatch monitoring
enable_detailed_monitoring = false

# GraphQL operation limits
max_batch_size = 10
query_depth_limit = 10

# Enable GraphQL introspection (disable in production)
introspection_enabled = true

# ------------------------------------------------------------------------------
# Example Configurations by Environment
# ------------------------------------------------------------------------------

# Development Environment
# environment = "dev"
# dynamodb_billing_mode = "PAY_PER_REQUEST"
# enable_api_key_auth = true
# create_test_user = true
# log_level = "ALL"
# enable_xray_tracing = true
# introspection_enabled = true

# Staging Environment
# environment = "staging"
# dynamodb_billing_mode = "PAY_PER_REQUEST"
# enable_api_key_auth = false
# create_test_user = false
# log_level = "ERROR"
# enable_xray_tracing = true
# introspection_enabled = false

# Production Environment
# environment = "prod"
# dynamodb_billing_mode = "PROVISIONED"
# dynamodb_read_capacity = 20
# dynamodb_write_capacity = 20
# enable_api_key_auth = false
# create_test_user = false
# log_level = "ERROR"
# enable_xray_tracing = true
# enable_caching = true
# introspection_enabled = false