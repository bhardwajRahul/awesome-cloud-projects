{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "eastus"
    },
    "resourcePrefix": {
      "value": "cloudnat"
    },
    "environment": {
      "value": "dev"
    },
    "aksConfig": {
      "value": {
        "nodeCount": 3,
        "nodeVmSize": "Standard_D2s_v3",
        "kubernetesVersion": "1.29.0",
        "enableWorkloadIdentity": true,
        "networkPlugin": "azure",
        "networkPolicy": "azure"
      }
    },
    "applicationGatewayConfig": {
      "value": {
        "sku": "Standard_v2",
        "capacity": 2,
        "frontendPort": 80,
        "protocol": "Http"
      }
    },
    "storageConfig": {
      "value": {
        "sku": "Standard_LRS",
        "kind": "StorageV2",
        "allowBlobPublicAccess": false,
        "minTlsVersion": "TLS1_2"
      }
    },
    "sqlConfig": {
      "value": {
        "edition": "Basic",
        "computeModel": "Serverless",
        "autoPauseDelay": 60,
        "adminUsername": "cloudadmin",
        "adminPassword": "SecurePassword123!"
      }
    },
    "keyVaultConfig": {
      "value": {
        "sku": "standard",
        "enableRbacAuthorization": true,
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 90
      }
    },
    "tags": {
      "value": {
        "Environment": "dev",
        "Purpose": "cloud-native-connectivity",
        "ManagedBy": "bicep",
        "Owner": "DevOps Team",
        "Project": "Cloud Native Connectivity Demo",
        "CostCenter": "Engineering",
        "Backup": "Required"
      }
    }
  }
}