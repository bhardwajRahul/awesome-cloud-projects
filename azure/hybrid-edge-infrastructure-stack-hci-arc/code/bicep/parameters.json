{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "eastus"
    },
    "environment": {
      "value": "production"
    },
    "baseName": {
      "value": "edge-infra"
    },
    "randomSuffix": {
      "value": "abc123"
    },
    "hciClusterConfig": {
      "value": {
        "nodeCount": 2,
        "vmSize": "Standard_D8s_v3",
        "osType": "Windows"
      }
    },
    "aksConfig": {
      "value": {
        "kubernetesVersion": "1.28.5",
        "nodeCount": 2,
        "nodeVmSize": "Standard_A4_v2",
        "enableAutoScaling": true,
        "minNodeCount": 1,
        "maxNodeCount": 5
      }
    },
    "monitoringConfig": {
      "value": {
        "retentionInDays": 30,
        "enableInsights": true,
        "enableMetrics": true
      }
    },
    "storageConfig": {
      "value": {
        "skuName": "Standard_LRS",
        "enableHierarchicalNamespace": true,
        "fileShareQuota": 1024
      }
    },
    "resourceTags": {
      "value": {
        "purpose": "edge-computing",
        "environment": "production",
        "solution": "azure-stack-hci-arc",
        "managedBy": "bicep",
        "project": "edge-infrastructure",
        "owner": "platform-team",
        "cost-center": "IT-Operations"
      }
    }
  }
}