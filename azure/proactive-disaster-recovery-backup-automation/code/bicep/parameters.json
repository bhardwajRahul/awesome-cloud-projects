{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "primaryLocation": {
      "value": "eastus"
    },
    "secondaryLocation": {
      "value": "westus2"
    },
    "environmentSuffix": {
      "value": "prod"
    },
    "uniqueSuffix": {
      "value": "a1b2c3"
    },
    "resourceTags": {
      "value": {
        "environment": "production",
        "purpose": "disaster-recovery",
        "managedBy": "bicep",
        "costCenter": "operations",
        "owner": "infrastructure-team",
        "project": "intelligent-dr-orchestration"
      }
    },
    "adminEmail": {
      "value": "admin@company.com"
    },
    "adminPhoneNumber": {
      "value": "+11234567890"
    },
    "teamsWebhookUrl": {
      "value": "https://company.webhook.office.com/webhookb2/00000000-0000-0000-0000-000000000000@00000000-0000-0000-0000-000000000000/IncomingWebhook/00000000000000000000000000000000/00000000-0000-0000-0000-000000000000"
    },
    "backupPolicies": {
      "value": {
        "vmPolicy": {
          "name": "DRVMPolicy",
          "scheduleRunTimes": [
            "02:00:00"
          ],
          "dailyRetentionDurationCount": 30,
          "weeklyRetentionDurationCount": 12,
          "weeklyRetentionDaysOfTheWeek": [
            "Sunday"
          ]
        },
        "sqlPolicy": {
          "name": "DRSQLPolicy",
          "scheduleRunTimes": [
            "22:00:00"
          ],
          "dailyRetentionDurationCount": 30
        }
      }
    },
    "logAnalyticsConfig": {
      "value": {
        "sku": "PerGB2018",
        "retentionInDays": 30,
        "dailyQuotaGb": 10
      }
    },
    "alertConfig": {
      "value": {
        "evaluationFrequency": "PT5M",
        "windowSize": "PT15M",
        "autoMitigate": true,
        "enabled": true
      }
    }
  }
}