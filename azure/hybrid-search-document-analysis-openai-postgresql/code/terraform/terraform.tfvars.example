# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize the values for your environment

# Basic Configuration
resource_group_name = "rg-doc-analysis-demo"
location = "East US"
environment = "demo"
project_name = "doc-search"

# PostgreSQL Configuration
postgresql_admin_password = "ComplexPassword123!"  # Change this to a secure password
postgresql_sku_name = "GP_Standard_D2s_v3"        # Use B_Standard_B1ms for testing
postgresql_storage_mb = 131072                     # 128 GB, use 32768 (32 GB) for testing

# Azure OpenAI Configuration
openai_deployment_capacity = 10                    # Adjust based on expected load
openai_deployment_model = "text-embedding-ada-002"
openai_deployment_version = "2"

# Azure AI Search Configuration
search_sku = "standard"                            # Use "basic" for testing
search_replica_count = 1
search_partition_count = 1

# Azure Functions Configuration
function_app_service_plan_sku = "Y1"              # Consumption plan
function_app_runtime = "python"
function_app_version = "3.9"

# Storage Configuration
storage_account_tier = "Standard"
storage_account_replication_type = "LRS"          # Use "GRS" for production

# Security Configuration
enable_private_endpoints = false                   # Set to true for production
allowed_ip_ranges = ["0.0.0.0/0"]                # Restrict to specific IP ranges in production

# Monitoring Configuration
enable_monitoring = true                           # Enable Application Insights
log_retention_days = 30

# Tags
tags = {
  Purpose     = "Document Analysis"
  Solution    = "Hybrid Search"
  Technology  = "Azure OpenAI + PostgreSQL"
  Owner       = "Development Team"
  Environment = "Demo"
}