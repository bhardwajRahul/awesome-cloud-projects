{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hpcEnvironmentName": {
      "value": "hpc-lustre-demo"
    },
    "location": {
      "value": "East US"
    },
    "lustreCapacityTiB": {
      "value": 4
    },
    "lustreThroughputMBps": {
      "value": 1000
    },
    "lustreStorageType": {
      "value": "SSD"
    },
    "sshPublicKey": {
      "value": "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC7... your-public-key-here"
    },
    "adminUsername": {
      "value": "azureuser"
