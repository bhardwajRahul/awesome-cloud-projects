    "maxComputeNodes": {
      "value": 10
    },
    "enableMonitoring": {
      "value": true
    },
    "tags": {
      "value": {
        "purpose": "hpc-demo",
        "environment": "production",
        "workloadType": "high-performance-computing",
        "createdBy": "bicep-template",
