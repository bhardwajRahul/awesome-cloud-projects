{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Production parameter file for Secure IoT Edge Analytics with Azure Percept and Sphere deployment",
    "author": "Azure IoT Team",
    "version": "1.0.0"
  },
  "parameters": {
    "environment": {
      "value": "prod",
      "metadata": {
        "description": "Environment name (dev, test, prod)"
      }
    },
    "location": {
      "value": "eastus",
      "metadata": {
        "description": "Azure region for resource deployment"
      }
    },
    "uniqueSuffix": {
      "value": "xyz789",
      "metadata": {
        "description": "Unique suffix for resource names (3-8 characters)"
      }
    },
    "adminEmail": {
      "value": "iot-admin@company.com",
      "metadata": {
        "description": "Administrator email address for alert notifications"
      }
    },
    "iotHubSku": {
      "value": "S2",
      "metadata": {
        "description": "IoT Hub pricing tier (S1, S2, S3) - S2 for production workloads"
      }
    },
    "iotHubCapacity": {
      "value": 2,
      "metadata": {
        "description": "IoT Hub capacity (number of units) - increased for production"
      }
    },
    "streamAnalyticsStreamingUnits": {
      "value": 3,
      "metadata": {
        "description": "Stream Analytics streaming units (1-48) - increased for production"
      }
    },
    "storageAccountSku": {
      "value": "Standard_GRS",
      "metadata": {
        "description": "Storage account SKU - GRS for production redundancy"
      }
    },
    "enableDiagnostics": {
      "value": true,
      "metadata": {
        "description": "Enable diagnostic logging for resources"
      }
    },
    "logRetentionDays": {
      "value": 90,
      "metadata": {
        "description": "Log Analytics workspace retention in days - extended for production"
      }
    },
    "tags": {
      "value": {
        "Environment": "prod",
        "Solution": "IoT Edge Analytics",
        "Purpose": "Secure IoT Analytics with Azure Percept and Sphere",
        "Project": "Manufacturing IoT",
        "CostCenter": "IT-Operations",
        "Owner": "IoT-Team",
        "DeploymentDate": "2025-01-12",
        "MaintenanceWindow": "Sunday 02:00-06:00 UTC",
        "Compliance": "SOC2",
        "DataClassification": "Internal",
        "BackupSchedule": "Daily"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  }
}