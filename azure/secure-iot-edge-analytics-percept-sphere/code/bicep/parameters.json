{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Parameter file for Secure IoT Edge Analytics with Azure Percept and Sphere deployment",
    "author": "Azure IoT Team",
    "version": "1.0.0"
  },
  "parameters": {
    "environment": {
      "value": "dev",
      "metadata": {
        "description": "Environment name (dev, test, prod)"
      }
    },
    "location": {
      "value": "eastus",
      "metadata": {
        "description": "Azure region for resource deployment"
      }
    },
    "uniqueSuffix": {
      "value": "abc123",
      "metadata": {
        "description": "Unique suffix for resource names (3-8 characters)"
      }
    },
    "adminEmail": {
      "value": "admin@contoso.com",
      "metadata": {
        "description": "Administrator email address for alert notifications"
      }
    },
    "iotHubSku": {
      "value": "S1",
      "metadata": {
        "description": "IoT Hub pricing tier (S1, S2, S3)"
      }
    },
    "iotHubCapacity": {
      "value": 1,
      "metadata": {
        "description": "IoT Hub capacity (number of units)"
      }
    },
    "streamAnalyticsStreamingUnits": {
      "value": 1,
      "metadata": {
        "description": "Stream Analytics streaming units (1-48)"
      }
    },
    "storageAccountSku": {
      "value": "Standard_LRS",
      "metadata": {
        "description": "Storage account SKU (Standard_LRS, Standard_GRS, Standard_RAGRS)"
      }
    },
    "enableDiagnostics": {
      "value": true,
      "metadata": {
        "description": "Enable diagnostic logging for resources"
      }
    },
    "logRetentionDays": {
      "value": 30,
      "metadata": {
        "description": "Log Analytics workspace retention in days (30-730)"
      }
    },
    "tags": {
      "value": {
        "Environment": "dev",
        "Solution": "IoT Edge Analytics",
        "Purpose": "Secure IoT Analytics with Azure Percept and Sphere",
        "Project": "Manufacturing IoT",
        "CostCenter": "IT-Operations",
        "Owner": "IoT-Team",
        "DeploymentDate": "2025-01-12",
        "MaintenanceWindow": "Sunday 02:00-06:00 UTC"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  }
}