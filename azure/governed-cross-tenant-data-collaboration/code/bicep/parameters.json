{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "eastus"
    },
    "environment": {
      "value": "dev"
    },
    "uniqueSuffix": {
      "value": "abc123"
    },
    "deploymentRole": {
      "value": "provider"
    },
    "storageConfig": {
      "value": {
        "sku": "Standard_LRS",
        "kind": "StorageV2",
        "accessTier": "Hot",
        "enableHierarchicalNamespace": true,
        "enableHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": true,
        "networkAcls": {
          "bypass": "AzureServices",
          "defaultAction": "Allow"
        }
      }
    },
    "purviewConfig": {
      "value": {
        "sku": "Standard",
        "capacity": 4,
        "managedResourceGroupName": "rg-purview-managed-abc123"
      }
    },
    "dataShareConfig": {
      "value": {
        "description": "Cross-tenant data collaboration and sharing for development environment",
        "terms": "Standard data sharing terms and conditions apply - development use only"
      }
    },
    "containerNames": {
      "value": [
        "shared-datasets",
        "processed-data",
        "archived-data"
      ]
    },
    "resourceTags": {
      "value": {
        "Environment": "dev",
        "Purpose": "DataShare-CrossTenant",
        "Role": "provider",
        "ManagedBy": "Bicep",
        "CostCenter": "IT-DataServices",
        "Owner": "DataGovernanceTeam",
        "Project": "CrossTenantCollaboration"
      }
    }
  }
}