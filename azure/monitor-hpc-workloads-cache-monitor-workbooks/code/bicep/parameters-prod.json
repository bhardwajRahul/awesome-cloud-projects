{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourcePrefix": {
      "value": "hpc"
    },
    "environment": {
      "value": "prod"
    },
    "location": {
      "value": "eastus"
    },
    "hpcCacheSize": {
      "value": 12288
    },
    "hpcCacheSku": {
      "value": "Standard_8G"
    },
    "batchStorageAccountType": {
      "value": "Premium_LRS"
    },
    "batchVmSize": {
      "value": "Standard_HC44rs"
    },
    "batchPoolNodeCount": {
      "value": 10
    },
    "logAnalyticsRetentionDays": {
      "value": 365
    },
    "enableDiagnostics": {
      "value": true
    },
    "alertEmailAddress": {
      "value": "hpc-alerts@company.com"
    },
    "tags": {
      "value": {
        "Environment": "prod",
        "Purpose": "HPC-Monitoring",
        "Recipe": "monitoring-high-performance-computing-workloads",
        "CostCenter": "Research-Computing",
        "Owner": "HPC-Operations",
        "Project": "Production-HPC-Monitoring",
        "BusinessUnit": "Scientific-Computing",
        "MaintenanceWindow": "Sunday-02:00-06:00"
      }
    }
  }
}