{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourcePrefix": {
      "value": "hpc"
    },
    "environment": {
      "value": "dev"
    },
    "location": {
      "value": "eastus"
    },
    "hpcCacheSize": {
      "value": 3072
    },
    "hpcCacheSku": {
      "value": "Standard_2G"
    },
    "batchStorageAccountType": {
      "value": "Standard_LRS"
    },
    "batchVmSize": {
      "value": "Standard_HC44rs"
    },
    "batchPoolNodeCount": {
      "value": 2
    },
    "logAnalyticsRetentionDays": {
      "value": 90
    },
    "enableDiagnostics": {
      "value": true
    },
    "alertEmailAddress": {
      "value": "admin@example.com"
    },
    "tags": {
      "value": {
        "Environment": "dev",
        "Purpose": "HPC-Monitoring",
        "Recipe": "monitoring-high-performance-computing-workloads",
        "CostCenter": "IT-Operations",
        "Owner": "HPC-Team",
        "Project": "HPC-Monitoring-Solution"
      }
    }
  }
}