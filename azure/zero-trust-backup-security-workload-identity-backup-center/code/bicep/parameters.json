{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "East US"
    },
    "environment": {
      "value": "dev"
    },
    "resourceSuffix": {
      "value": "abc123"
    },
    "enableSoftDelete": {
      "value": true
    },
    "softDeleteRetentionDays": {
      "value": 90
    },
    "enablePurgeProtection": {
      "value": true
    },
    "storageReplication": {
      "value": "LRS"
    },
    "vmSize": {
      "value": "Standard_B2s"
    },
    "adminUsername": {
      "value": "azureuser"
    },
    "adminPassword": {
      "value": "SecurePassword123!"
    },
    "githubRepository": {
      "value": "organization/repository"
    },
    "kubernetesServiceAccount": {
      "value": "system:serviceaccount:backup-system:backup-operator"
    },
    "tags": {
      "value": {
        "purpose": "zero-trust-backup",
        "environment": "dev",
        "security-level": "high",
        "compliance": "required",
        "project": "backup-security-demo",
        "owner": "backup-team"
      }
    }
  }
}