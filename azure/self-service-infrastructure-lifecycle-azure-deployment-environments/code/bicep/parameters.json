{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "devCenterName": {
      "value": "dc-selfservice"
    },
    "projectName": {
      "value": "proj-webapp"
    },
    "catalogName": {
      "value": "infrastructure-catalog"
    },
    "storageAccountName": {
      "value": "sttemplates"
    },
    "location": {
      "value": "eastus"
    },
    "environmentType": {
      "value": "dev"
    },
    "tags": {
      "value": {
        "purpose": "self-service-infrastructure",
        "environment": "dev",
        "deployment-method": "bicep",
        "team": "platform-engineering",
        "cost-center": "engineering"
      }
    },
    "deploymentSubscriptionId": {
      "value": "YOUR_SUBSCRIPTION_ID"
    },
    "deploymentResourceGroupName": {
      "value": "YOUR_RESOURCE_GROUP_NAME"
    },
    "environmentTypes": {
      "value": [
        {
          "name": "development",
          "displayName": "Development",
          "description": "Development environment for rapid prototyping and testing",
          "tags": {
            "tier": "development",
            "cost-center": "engineering",
            "auto-shutdown": "enabled"
          }
        },
        {
          "name": "staging",
          "displayName": "Staging",
          "description": "Staging environment for pre-production testing",
          "tags": {
            "tier": "staging",
            "cost-center": "engineering",
            "monitoring": "enhanced",
            "backup": "enabled"
          }
        },
        {
          "name": "production",
          "displayName": "Production",
          "description": "Production environment with enterprise controls",
          "tags": {
            "tier": "production",
            "cost-center": "operations",
            "monitoring": "enterprise",
            "backup": "enabled",
            "compliance": "required"
          }
        }
      ]
    },
    "environmentDefinitions": {
      "value": [
        {
          "name": "webapp-basic",
          "displayName": "Basic Web Application",
          "description": "Simple web application with App Service and App Service Plan",
          "templatePath": "webapp-basic.json",
          "parameters": [
            {
              "name": "appName",
              "description": "Name of the web application",
              "type": "string",
              "required": false
            },
            {
              "name": "location",
              "description": "Location for all resources",
              "type": "string",
              "required": false
            },
            {
              "name": "environmentType",
              "description": "Environment type for resource sizing",
              "type": "string",
              "required": false,
              "allowedValues": ["dev", "staging", "prod"]
            }
          ]
        },
        {
          "name": "webapp-database",
          "displayName": "Web Application with Database",
          "description": "Web application with App Service and Azure SQL Database",
          "templatePath": "webapp-database.json",
          "parameters": [
            {
              "name": "appName",
              "description": "Name of the web application",
              "type": "string",
              "required": false
            },
            {
              "name": "sqlServerName",
              "description": "Name of the SQL Server",
              "type": "string",
              "required": false
            },
            {
              "name": "sqlDatabaseName",
              "description": "Name of the SQL Database",
              "type": "string",
              "required": false
            },
            {
              "name": "location",
              "description": "Location for all resources",
              "type": "string",
              "required": false
            },
            {
              "name": "environmentType",
              "description": "Environment type for resource sizing",
              "type": "string",
              "required": false,
              "allowedValues": ["dev", "staging", "prod"]
            }
          ]
        },
        {
          "name": "static-webapp",
          "displayName": "Static Web App",
          "description": "Static web application with Azure Static Web Apps",
          "templatePath": "static-webapp.json",
          "parameters": [
            {
              "name": "staticWebAppName",
              "description": "Name of the static web app",
              "type": "string",
              "required": false
            },
            {
              "name": "location",
              "description": "Location for all resources",
              "type": "string",
              "required": false
            },
            {
              "name": "repositoryUrl",
              "description": "URL of the GitHub repository",
              "type": "string",
              "required": false
            },
            {
              "name": "branch",
              "description": "Branch of the GitHub repository",
              "type": "string",
              "required": false
            }
          ]
        },
        {
          "name": "containerapp-basic",
          "displayName": "Container App",
          "description": "Containerized application with Azure Container Apps",
          "templatePath": "containerapp-basic.json",
          "parameters": [
            {
              "name": "containerAppName",
              "description": "Name of the container app",
              "type": "string",
              "required": false
            },
            {
              "name": "containerImage",
              "description": "Container image to deploy",
              "type": "string",
              "required": false
            },
            {
              "name": "location",
              "description": "Location for all resources",
              "type": "string",
              "required": false
            },
            {
              "name": "environmentType",
              "description": "Environment type for resource sizing",
              "type": "string",
              "required": false,
              "allowedValues": ["dev", "staging", "prod"]
            }
          ]
        }
      ]
    }
  }
}